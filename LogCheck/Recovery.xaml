<Page x:Class="WindowsSentinel.Recovery"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:local="clr-namespace:WindowsSentinel"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="1200"
      Title="Recovery" Background="{DynamicResource BackgroundColor}">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- 사이드바 -->
        <Border Grid.Column="0" Background="{DynamicResource ButtonBackgroundColor}" CornerRadius="12" Margin="0,0,10,0" BorderBrush="#C2C2C2" BorderThickness="1">
            <StackPanel Margin="10">
                <Button Style="{StaticResource SidebarButtonStyle}"
                        Tag="&#xE71D;"
                        Content="설치된 프로그램"
                        Click="SidebarPrograms_Click"/>
                <Button Style="{StaticResource SidebarButtonStyle}"
                        Tag="&#xE81C;"
                        Content="수정/변경 내역"
                        Click="SidebarModification_Click"/>
                <Button Style="{StaticResource SidebarButtonStyle}"
                        Tag="&#xE72E;"
                        Content="보안 로그"
                        Click="SidebarLog_Click"/>
                <Button Style="{StaticResource SidebarButtonStyle}"
                        Tag="&#xE946;"
                        Content="보안 프로그램 복구"
                        Click="SidebarRecovery_Click"/>
            </StackPanel>
        </Border>

        <!-- Main Content Area with Scroll -->
        <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto" Margin="0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/> <!-- Header -->
                    <RowDefinition Height="Auto"/> <!-- 현재 보안 상태 (ItemsControl 사용) -->
                    <RowDefinition Height="Auto"/> <!-- PowerShell 출력 섹션 -->
                    <RowDefinition Height="Auto"/>   <!-- 복구 결과 보고서 -->
                    <RowDefinition Height="Auto"/>   <!-- 복구 진행 상태 (원래대로) -->
                </Grid.RowDefinitions>

                <!-- 상단 헤더 섹션 -->
                <Border Grid.Row="0" Background="{DynamicResource ButtonBackgroundColor}" CornerRadius="12" Padding="20" Margin="0,0,0,10" BorderBrush="#C2C2C2" BorderThickness="1">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Orientation="Vertical">
                                <TextBlock Text="보안 프로그램 복구" FontSize="28" FontWeight="Bold" Foreground="{DynamicResource ForegroundColor}"/>
                                <!-- <TextBlock Text="시스템의 보안 프로그램을 확인하고 필요한 경우 복구를 진행합니다." FontSize="16" Foreground="{DynamicResource ForegroundColor}"/> -->
                            </StackPanel>

                            <!-- 기능 버튼 섹션 -->
                            <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="0,0,0,10">
                                <Button Content="간편 보안 설정 복원"
                                        Click="OptimizeSecuritySettings_Click"
                                        Style="{DynamicResource CheckButtonStyle}"
                                        BorderThickness="0"
                                        Padding="10,5">
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                    BorderThickness="{TemplateBinding BorderThickness}"
                                                    CornerRadius="8">
                                                <ContentPresenter HorizontalAlignment="Center" 
                                                                  VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>
                                <Button Content="정밀 보안 진단 및 복구"
                                        Margin="10,0,0,0"
                                        Click="StartDiagnosticWizard_Click"
                                        Style="{DynamicResource CheckButtonStyle}"
                                        BorderThickness="0"
                                        Padding="10,5">
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                    BorderThickness="{TemplateBinding BorderThickness}"
                                                    CornerRadius="8">
                                                <ContentPresenter HorizontalAlignment="Center" 
                                                                  VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>
                                <!-- 도움말 아이콘 -->
                                <materialDesign:PackIcon Kind="HelpCircleOutline"
                                                         Width="20" Height="20"
                                                         Margin="10,0,0,0"
                                                         VerticalAlignment="Center"
                                                         Cursor="Hand"
                                                         ToolTip="시스템의 보안 프로그램을 확인하고 필요한 경우 복구를 진행합니다."/>
                            </StackPanel>
                        </Grid>
                    </Grid>
                </Border>

                <!-- 현재 보안 상태 표시 섹션 (ItemsControl 사용 및 박스 형태로 가로 정렬) -->
                <Border Grid.Row="1" Background="{DynamicResource ButtonBackgroundColor}" CornerRadius="12" Padding="20" BorderBrush="#C2C2C2" BorderThickness="1" Margin="0,0,0,10">
                    <StackPanel>
                        <!-- Defender, Firewall, Security Center, BitLocker -->
                        <ItemsControl x:Name="SecurityStatusItemsAll">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border BorderBrush="#D3D3D3" BorderThickness="1" CornerRadius="8" Padding="15" Width="200" Margin="0,0,15,0">
                                        <StackPanel HorizontalAlignment="Center">
                                            <TextBlock Text="{Binding Icon}" FontFamily="Segoe MDL2 Assets" FontSize="30" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="{DynamicResource ForegroundColor}"/>
                                            <TextBlock Text="{Binding Title}" FontSize="16" FontWeight="SemiBold" Foreground="{DynamicResource ForegroundColor}" Margin="0,10,0,5" HorizontalAlignment="Center" TextWrapping="Wrap" TextAlignment="Center"/>
                                            <TextBlock Text="{Binding Status}" FontSize="14" Foreground="#666666" HorizontalAlignment="Center" TextWrapping="Wrap"/>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>

                <!-- PowerShell 출력 섹션 -->
                <Border Grid.Row="2" x:Name="PowerShellOutputBorder" Visibility="Collapsed" 
                        Background="#1E1E1E" CornerRadius="8" Margin="0,0,0,20" Padding="15">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <Grid Grid.Row="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBlock Text="진행 상황" FontSize="16" FontWeight="SemiBold" 
                                     Foreground="White" Margin="0,0,0,10"/>
                            
                            <ToggleButton x:Name="AdvancedModeToggle" Grid.Column="1"
                                        Content="고급 모드" Margin="0,0,0,10"
                                        Foreground="White" Background="Transparent"
                                        BorderBrush="#666666" BorderThickness="1"
                                        Padding="10,5"/>
                        </Grid>

                        <!-- 진행 상태 표시 -->
                        <StackPanel Grid.Row="1" Margin="0,0,0,10">
                            <TextBlock x:Name="CurrentOperation" Text="작업 준비 중..."
                                     Foreground="#4EC9B0" FontSize="14" Margin="0,0,0,5"/>
                            <ProgressBar x:Name="OperationProgress" Height="4" 
                                       Background="#333333" Foreground="#4EC9B0"
                                       Value="0"/>
                        </StackPanel>
                        
                        <!-- 출력 영역 -->
                        <Grid Grid.Row="2">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- 사용자 친화적 출력 -->
                            <ScrollViewer x:Name="UserFriendlyOutputScroll" Grid.Row="0" VerticalScrollBarVisibility="Auto" Margin="0,0,0,5" MaxHeight="250">
                                <StackPanel x:Name="UserFriendlyOutput">
                                    <!-- 여기에 사용자 친화적인 메시지가 동적으로 추가됩니다 -->
                                </StackPanel>
                            </ScrollViewer>

                            <!-- 고급 모드 출력 (기본적으로 숨김) -->
                            <Border x:Name="AdvancedOutputBorder" Grid.Row="0" Background="#1E1E1E" Margin="0,0,0,5" Padding="5" Visibility="Collapsed" MaxHeight="250">
                                <ScrollViewer x:Name="PowerShellOutputScroll" 
                                            VerticalScrollBarVisibility="Auto">
                                    <TextBlock x:Name="PowerShellOutput" 
                                             Foreground="#D4D4D4" 
                                             FontFamily="Consolas, Courier New, monospace"
                                             TextWrapping="Wrap"/>
                                </ScrollViewer>
                            </Border>

                            <!-- 상태 표시줄 -->
                            <Border Grid.Row="1" Background="#252526" 
                                    CornerRadius="0,0,4,4" Padding="10,5">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock x:Name="StatusText" Text="준비됨"
                                             Foreground="#D4D4D4" FontSize="12"/>
                                    <TextBlock Grid.Column="1" x:Name="TimestampText"
                                             Foreground="#D4D4D4" FontSize="12"/>
                                </Grid>
                            </Border>
                        </Grid>
                    </Grid>
                </Border>

                <!-- 복구 결과 보고서 섹션 -->
                <Border Grid.Row="3" Background="{DynamicResource ButtonBackgroundColor}" CornerRadius="12" Padding="20" BorderBrush="#C2C2C2" BorderThickness="1" Margin="0,0,0,10">
                    <StackPanel>
                        <TextBlock Text="복구 결과 보고서" FontSize="20" FontWeight="SemiBold" Foreground="{DynamicResource ForegroundColor}" Margin="0,0,0,15"/>
                        <ScrollViewer VerticalScrollBarVisibility="Auto" MaxHeight="300">
                            <TextBlock x:Name="ResultReport" Text="아직 복구가 시작되지 않았습니다." FontSize="14" Foreground="#666666" TextWrapping="Wrap"/>
                        </ScrollViewer>
                    </StackPanel>
                </Border>

                <!-- 복구 진행 상태 섹션 (원래대로) -->
                <Border Grid.Row="4" Background="{DynamicResource ButtonBackgroundColor}" CornerRadius="12" Padding="20" BorderBrush="#C2C2C2" BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="복구 진행 상태" FontSize="20" FontWeight="SemiBold" Foreground="{DynamicResource ForegroundColor}" Margin="0,0,0,15"/>

                        <!-- Windows Defender 진행 상태 -->
                        <Border BorderBrush="#D3D3D3" BorderThickness="0,0,0,1" Padding="0,10" Margin="0,0,0,5">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Text="🛡️" FontSize="24" VerticalAlignment="Center" Grid.Column="0"/>
                                <StackPanel Grid.Column="1" Margin="15,0,0,0">
                                    <TextBlock Text="Windows Defender" FontSize="16" FontWeight="SemiBold" Foreground="{DynamicResource ForegroundColor}"/>
                                    <TextBlock x:Name="DefenderStatus" Text="대기 중" FontSize="14" Foreground="#666666"/>
                                </StackPanel>

                                <ProgressBar Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" x:Name="DefenderProgress" Height="4" Margin="0,10,0,0" Value="0"/>
                            </Grid>
                        </Border>

                        <!-- Windows Firewall 진행 상태 -->
                        <Border BorderBrush="#D3D3D3" BorderThickness="0,0,0,1" Padding="0,10" Margin="0,0,0,5">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Text="🧱" FontSize="24" VerticalAlignment="Center" Grid.Column="0"/>
                                <StackPanel Grid.Column="1" Margin="15,0,0,0">
                                    <TextBlock Text="Windows Firewall" FontSize="16" FontWeight="SemiBold" Foreground="{DynamicResource ForegroundColor}"/>
                                    <TextBlock x:Name="FirewallStatus" Text="대기 중" FontSize="14" Foreground="#666666"/>
                                </StackPanel>

                                <ProgressBar Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" x:Name="FirewallProgress" Height="4" Margin="0,10,0,0" Value="0"/>
                            </Grid>
                        </Border>

                        <!-- Windows Security Center 진행 상태 -->
                        <Border BorderBrush="#D3D3D3" BorderThickness="0,0,0,1" Padding="0,10" Margin="0,0,0,5">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Text="🛡️" FontSize="24" VerticalAlignment="Center" Grid.Column="0"/>
                                <StackPanel Grid.Column="1" Margin="15,0,0,0">
                                    <TextBlock Text="Windows Security Center" FontSize="16" FontWeight="SemiBold" Foreground="{DynamicResource ForegroundColor}"/>
                                    <TextBlock x:Name="SecurityCenterStatus" Text="대기 중" FontSize="14" Foreground="#666666"/>
                                </StackPanel>

                                <ProgressBar Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" x:Name="SecurityCenterProgress" Height="4" Margin="0,10,0,0" Value="0"/>
                            </Grid>
                        </Border>

                        <!-- BitLocker 진행 상태 -->
                        <Border BorderBrush="#D3D3D3" BorderThickness="0,0,0,1" Padding="0,10" Margin="0,0,0,5">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Text="🔒" FontSize="24" VerticalAlignment="Center" Grid.Column="0"/>
                                <StackPanel Grid.Column="1" Margin="15,0,0,0">
                                    <TextBlock Text="BitLocker" FontSize="16" FontWeight="SemiBold" Foreground="{DynamicResource ForegroundColor}"/>
                                    <TextBlock x:Name="BitLockerStatus" Text="대기 중" FontSize="14" Foreground="#666666"/>
                                </StackPanel>

                                <ProgressBar Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" x:Name="BitLockerProgress" Height="4" Margin="0,10,0,0" Value="0"/>
                            </Grid>
                        </Border>

                    </StackPanel>
                </Border>
            </Grid>
        </ScrollViewer>

        <!-- 로딩 오버레이 -->
        <Grid x:Name="LoadingOverlay" Grid.ColumnSpan="2" Background="#99000000" Visibility="Collapsed">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock x:Name="LoadingText" Text="처리 중..." FontSize="24" FontWeight="Bold" Foreground="White"/>
                <!-- 여기에 로딩 애니메이션 추가 가능 -->
            </StackPanel>
        </Grid>

    </Grid>
</Page> 