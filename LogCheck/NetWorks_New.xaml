                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            
                                            <StackPanel Grid.Column="0">
                                                <TextBlock Text="차단된 네트워크 연결 관리" 
                                                           FontWeight="Bold" FontSize="16"
                                                           Foreground="{DynamicResource PrimaryForegroundColor}"/>
                                                <TextBlock x:Name="BlockedCountText" 
                                                           Text="총 0개의 연결이 차단됨"
                                                           FontSize="12"
                                                           Foreground="{DynamicResource SecondaryForegroundColor}"
                                                           Margin="0,5,0,0"/>
                                            </StackPanel>
                                            
                                            <TextBlock Grid.Column="1" x:Name="BlockedSummaryText"
                                                       Text="위험: 0, 의심: 0, 기타: 0"
                                                       FontSize="12"
                                                       Foreground="{DynamicResource SecondaryForegroundColor}"
                                                       VerticalAlignment="Center"
                                                       Margin="0,0,20,0"/>
                                            
                                            <Button Grid.Column="2" Content="새로고침"
                                                    Style="{DynamicResource MaterialDesignRaisedButton}"
                                                    Background="#2196F3"
                                                    Foreground="White"
                                                    Click="RefreshBlockedConnections_Click"/>
                                        </Grid>
                                    </Border>

                                    <!-- 필터 및 검색 -->
                                    <Border Grid.Row="1" Background="{DynamicResource BackgroundColor}" 
                                            CornerRadius="8" Padding="10" Margin="0,0,0,10">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="200"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            
                                            <TextBlock Grid.Column="0" Text="필터:" 
                                                       VerticalAlignment="Center" 
                                                       Margin="0,0,10,0"
                                                       Foreground="{DynamicResource PrimaryForegroundColor}"/>
                                            
                                            <ComboBox Grid.Column="1" x:Name="BlockedFilterComboBox"
                                                      SelectedIndex="0"
                                                      SelectionChanged="BlockedFilter_SelectionChanged">
                                                <ComboBoxItem Content="전체"/>
                                                <ComboBoxItem Content="위험"/>
                                                <ComboBoxItem Content="의심스러운"/>
                                                <ComboBoxItem Content="차단됨"/>
                                            </ComboBox>
                                            
                                            <TextBlock Grid.Column="2" Text="검색:" 
                                                       VerticalAlignment="Center" 
                                                       Margin="20,0,10,0"
                                                       Foreground="{DynamicResource PrimaryForegroundColor}"/>
                                            
                                            <TextBox Grid.Column="3" x:Name="BlockedSearchTextBox"
                                                     materialDesign:HintAssist.Hint="IP 주소 또는 프로세스명으로 검색"
                                                     TextChanged="BlockedSearch_TextChanged"
                                                     Margin="0,0,10,0"/>
                                            
                                            <Button Grid.Column="4" Content="검색 지우기"
                                                    Style="{DynamicResource MaterialDesignOutlinedButton}"
                                                    Click="ClearBlockedSearch_Click"/>
                                        </Grid>
                                    </Border>

                                    <!-- 차단된 연결 DataGrid -->
                                    <DataGrid Grid.Row="2" x:Name="BlockedConnectionsDataGrid"
                                              ItemsSource="{Binding BlockedConnections}"
                                              AutoGenerateColumns="False"
                                              HeadersVisibility="Column"
                                              GridLinesVisibility="Horizontal"
                                              CanUserResizeColumns="True"
                                              Background="{DynamicResource DataGridBackgroundColor}"
                                              Foreground="{DynamicResource DataGridForegroundColor}"
                                              SelectionMode="Extended"
                                              Margin="0,0,0,10">
                                        <DataGrid.Columns>
                                            <DataGridTextColumn Header="차단 시간" 
                                                                Binding="{Binding BlockedAt, StringFormat=yyyy-MM-dd HH:mm:ss}" 
                                                                Width="130"/>
                                            <DataGridTextColumn Header="원격 IP" 
                                                                Binding="{Binding RemoteIP}" 
                                                                Width="120"/>
                                            <DataGridTextColumn Header="포트" 
                                                                Binding="{Binding RemotePort}" 
                                                                Width="60"/>
                                            <DataGridTextColumn Header="프로토콜" 
                                                                Binding="{Binding Protocol}" 
                                                                Width="70"/>
                                            <DataGridTextColumn Header="프로세스" 
                                                                Binding="{Binding ProcessName}" 
                                                                Width="150"/>
                                            <DataGridTextColumn Header="차단 사유" 
                                                                Binding="{Binding BlockReason}" 
                                                                Width="*"/>
                                            <DataGridTextColumn Header="위험도" 
                                                                Binding="{Binding RiskLevel}" 
                                                                Width="80"/>
                                            <DataGridCheckBoxColumn Header="영구차단" 
                                                                    Binding="{Binding IsPermanent}" 
                                                                    Width="70"/>
                                        </DataGrid.Columns>
                                    </DataGrid>

                                    <!-- 액션 버튼들 -->
                                    <StackPanel Grid.Row="3" Orientation="Horizontal" 
                                                HorizontalAlignment="Right">
                                        <Button Content="선택된 항목 차단 해제"
                                                Style="{DynamicResource MaterialDesignRaisedButton}"
                                                Background="#4CAF50"
                                                Foreground="White"
                                                Click="UnblockSelected_Click"
                                                Margin="0,0,10,0"/>
                                        <Button Content="화이트리스트에 추가"
                                                Style="{DynamicResource MaterialDesignRaisedButton}"
