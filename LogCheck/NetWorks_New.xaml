<Page x:Class="LogCheck.NetWorks_New"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
      xmlns:local="clr-namespace:LogCheck"
      xmlns:models="clr-namespace:LogCheck.Models"
      xmlns:converters="clr-namespace:LogCheck.Converters"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="1200"
      Title="네트워크 보안 모니터링" Background="Transparent">

    <Page.Resources>
        <RotateTransform x:Key="SpinnerRotate" CenterX="25" CenterY="25"/>
        <!-- <local:FileSizeConverter x:Key="FileSizeConverter"/> -->

        <!-- 컨버터들 -->
        <converters:WhitelistStatusToColorConverter x:Key="WhitelistStatusToColorConverter"/>
        <converters:SecurityRiskLevelToColorConverter x:Key="SecurityRiskLevelToColorConverter"/>
        <converters:RiskLevelToColorConverter x:Key="RiskLevelToColorConverter"/>
        <converters:RiskLevelToBackgroundConverter x:Key="RiskLevelToBackgroundConverter"/>
        <converters:WhitelistStatusToIconConverter x:Key="WhitelistStatusToIconConverter"/>
        <converters:ProtocolCountConverter x:Key="ProtocolCountConverter"/>
        <converters:SafeGroupItemConverter x:Key="SafeGroupItemConverter"/>
        <converters:SafeGroupConverter x:Key="SafeGroupConverter"/>
        <converters:FilePathToIconConverter x:Key="FilePathToIconConverter"/>


        <!-- 프로세스 상태별 색상 -->
        <SolidColorBrush x:Key="ProcessNormalColor" Color="#4CAF50"/>
        <SolidColorBrush x:Key="ProcessWarningColor" Color="#FF9800"/>
        <SolidColorBrush x:Key="ProcessDangerColor" Color="#F44336"/>
        <SolidColorBrush x:Key="ProcessUnknownColor" Color="#9E9E9E"/>

        <!-- 화이트리스트 프로세스 색상 -->
        <SolidColorBrush x:Key="ProcessWhitelistColor" Color="#2196F3"/>
        <SolidColorBrush x:Key="ProcessSystemColor" Color="#607D8B"/>

        <!-- 위험도별 색상 -->
        <SolidColorBrush x:Key="RiskLowColor" Color="#4CAF50"/>
        <SolidColorBrush x:Key="RiskMediumColor" Color="#FF9800"/>
        <SolidColorBrush x:Key="RiskHighColor" Color="#F44336"/>
        <SolidColorBrush x:Key="RiskCriticalColor" Color="#9C27B0"/>
        <SolidColorBrush x:Key="RiskSystemColor" Color="#607D8B"/>

        <!-- 위험도별 배경색 컨버터 -->
        <!-- <converters:RiskLevelToBackgroundConverter x:Key="RiskLevelToBackgroundConverter"/> -->
        <!-- <converters:RiskLevelToColorConverter x:Key="RiskLevelToColorConverter"/> -->
        <!-- <converters:AlertLevelToBackgroundConverter x:Key="AlertLevelToBackgroundConverter"/> -->

        <Style x:Key="RoundedScrollViewerStyle" TargetType="{x:Type ScrollViewer}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ScrollViewer}">
                        <Border CornerRadius="12"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            ClipToBounds="True">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <ScrollContentPresenter Grid.Column="0" Margin="{TemplateBinding Padding}"/>

                                <ScrollBar x:Name="PART_VerticalScrollBar"
                                       Grid.Column="1"
                                       Value="{TemplateBinding VerticalOffset}"
                                       Maximum="{TemplateBinding ScrollableHeight}"
                                       ViewportSize="{TemplateBinding ViewportHeight}"
                                       Visibility="{TemplateBinding ComputedVerticalScrollBarVisibility}"/>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="WarningToolTipStyle" TargetType="ToolTip">
            <Setter Property="Background" Value="#FFC15151"/>
            <Setter Property="Foreground" Value="#FFF1F1"/>
            <Setter Property="BorderBrush" Value="#822E2E"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToolTip">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4"
                                SnapsToDevicePixels="True">
                            <ContentPresenter Margin="{TemplateBinding Padding}"
                              HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                              VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- 사이드바 -->
        <Border Grid.Column="0" Background="{DynamicResource ButtonBackgroundColor}" CornerRadius="12" Margin="20,0,10,20" BorderBrush="#C2C2C2" BorderThickness="1">
            <StackPanel x:Name="SidebarPanel" Margin="10">
                <!-- 악성 프로그램 탐지 -->
                <ToggleButton Style="{DynamicResource SidebarButtonStyle}"
                      CommandParameter="Vaccine"
                      Tag="&#xE721;"
                      Content="악성 프로그램 탐지"
                      Cursor="Hand"
                      Click="SidebarButton_Click"
                      IsThreeState="False"
                      ClickMode="Release"/>
                <!-- 네트워크 모니터링 -->
                <ToggleButton Style="{DynamicResource SidebarButtonStyle}"
                      x:Name="SideNetWorksNewButton"
                      CommandParameter="NetWorks_New"
                      Tag="&#xE704;"
                      Content="네트워크 모니터링"
                      Cursor="Hand"
                      Click="SidebarButton_Click"
                      IsThreeState="False"
                      ClickMode="Release"/>
                <!-- 설치된 프로그램 목록 -->
                <ToggleButton Style="{DynamicResource SidebarButtonStyle}"
                      CommandParameter="ProgramsList"
                      Tag="&#xE71D;"
                      Content="설치된 프로그램"
                      Cursor="Hand"
                      Click="SidebarButton_Click"
                      IsThreeState="False"
                      ClickMode="Release"/>
                <!-- 보안 프로그램 복구 -->
                <ToggleButton Style="{DynamicResource SidebarButtonStyle}"
                      CommandParameter="Recoverys"
                      Tag="&#xE946;"
                      Content="보안 프로그램 복구"
                      Cursor="Hand"
                      Click="SidebarButton_Click"
                      IsThreeState="False"
                      ClickMode="Release"/>
                <!-- 보안 로그 -->
                <ToggleButton Style="{DynamicResource SidebarButtonStyle}"
                      CommandParameter="Logs"
                      Tag="&#xE72E;"
                      Content="보안 로그"
                      Cursor="Hand"
                      Click="SidebarButton_Click"
                      IsThreeState="False"
                      ClickMode="Release"/>
            </StackPanel>
        </Border>

        <!-- 프로세스 및 네트워크 연결 테이블 -->
        <Grid Grid.Column="1" Margin="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- 통합 헤더: 제목, 상태, 필터, 컨트롤 -->
            <Border Grid.Row="0" Background="{DynamicResource ButtonBackgroundColor}" CornerRadius="12" Padding="20" Margin="10,0,20,10" BorderBrush="#C2C2C2" BorderThickness="1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- 첫 번째 행: 제목과 모니터링 상태 -->
                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock Text="실시간 네트워크 모니터링" 
                                       Foreground="{DynamicResource ForegroundColor}" 
                                       FontSize="20" 
                                       FontWeight="SemiBold"
                                       VerticalAlignment="Center"/>

                            <!-- 도움말 아이콘 -->
                            <Border Width="25" Height="25" 
                                    Background="Transparent"
                                    Cursor="Hand"
                                    Margin="5,0,10,0"
                                    ToolTipService.Placement="Right"
                                    ToolTipService.HorizontalOffset="435"
                                    ToolTipService.VerticalOffset="25"
                                    ToolTipService.ShowDuration="6000">
                                <materialDesign:PackIcon Kind="HelpCircleOutline"
                                                         Width="25" Height="25"
                                                         Foreground="{DynamicResource HelpMarkColor}"
                                                         HorizontalAlignment="Center"
                                                         VerticalAlignment="Center" />
                                <Border.ToolTip>
                                    <ToolTip Content="실시간으로 네트워크 모니터링을 하고 보안 위협을 탐지합니다."/>
                                </Border.ToolTip>
                            </Border>
                        </StackPanel>

                        <!-- 중앙 필터 영역 -->
                        <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBox x:Name="SearchTextBox"                                                                      
                                     VerticalContentAlignment="Center"
                                     Width="200"
                                     Height="32"
                                     materialDesign:HintAssist.Hint="프로세스명, IP, 포트로 검색"
                                     Margin="0,0,10,0"
                                     TextChanged="Search_TextChanged"/>

                            <ComboBox x:Name="ProtocolFilterComboBox"
                                      VerticalContentAlignment="Center"
                                      Width="120"
                                      Height="32"
                                      Margin="0,0,10,0"
                                      materialDesign:HintAssist.Hint="프로토콜"
                                      SelectionChanged="ProtocolFilter_SelectionChanged">
                                <ComboBoxItem Content="모든 프로토콜" IsSelected="True"/>
                                <ComboBoxItem Content="TCP"/>
                                <ComboBoxItem Content="UDP"/>
                                <ComboBoxItem Content="ICMP"/>
                            </ComboBox>

                            <ComboBox x:Name="NetworkInterfaceComboBox"                                       
                                      Width="120"   
                                      Height="32"
                                      Margin="0,0,10,0"
                                      VerticalContentAlignment="Center"                            
                                      materialDesign:HintAssist.Hint="네트워크 인터페이스"/>

                            <Button x:Name="StartMonitoringButton"
                                    Content="시작"
                                    Style="{DynamicResource RefreshButtonStyle}"
                                    Click="StartMonitoring_Click"
                                    Width="60" Height="32"
                                    Margin="0,0,6,0">
                            </Button>

                            <Button x:Name="StopMonitoringButton"
                                    Content="중지"
                                    Style="{DynamicResource RefreshButtonStyle}"
                                    Click="StopMonitoring_Click"
                                    Width="60" Height="32"
                                    Margin="0,0,6,0"
                                    Visibility="Collapsed">
                            </Button>

                            <Button x:Name="RefreshButton"
                                    Content="새로고침"
                                    Style="{DynamicResource RefreshButtonStyle}"
                                    Click="Refresh_Click"
                                    VerticalAlignment="Center"
                                    Width="80" Height="32"
                                    Margin="0,0,6,0">
                            </Button>


                        </StackPanel>
                    </Grid>

                    <!-- 구분선 -->
                    <Border Grid.Row="1" Height="1" Background="#E0E0E0" Margin="0,15,0,15"/>

                    <!-- 두 번째 행: 통계, 필터, 컨트롤 -->
                    <Grid Grid.Row="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- 모니터링 상태 표시 -->
                        <StackPanel Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                            <Ellipse x:Name="MonitoringStatusIndicator" 
                                     Width="12" Height="12" 
                                     Fill="Gray" 
                                     Margin="0,0,8,0"/>

                            <TextBlock x:Name="MonitoringStatusText"
                                       Text="대기 중" 
                                       
                                       Foreground="{DynamicResource ForegroundColor}" 
                                       FontWeight="SemiBold"
                                       VerticalAlignment="Center" />
                        </StackPanel>

                        <!-- 실시간 통계 -->
                        <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                            <Border Background="{DynamicResource SecondaryBackgroundColor}" 
                                    CornerRadius="6" 
                                    Padding="8,4">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="활성 연결" 
                                               Foreground="{DynamicResource SecondaryForegroundColor}" 
                                               FontSize="12" 
                                               VerticalAlignment="Center"/>
                                    <TextBlock x:Name="ActiveConnectionsText"
                                               Text="0" 
                                               Width="20"
                                               Foreground="{DynamicResource PrimaryColor}" 
                                               FontWeight="Bold"
                                               FontSize="14"
                                               Margin="6,0,0,0"
                                               VerticalAlignment="Center"/>
                                </StackPanel>
                            </Border>

                            <Border Background="{DynamicResource ProcessDangerColor}" 
                                    CornerRadius="6" 
                                    Padding="8,4"
                                    Margin="10,0,0,0"
                                    Opacity="0.9">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="위험 연결" 
                                               Foreground="White" 
                                               FontSize="12" 
                                               VerticalAlignment="Center"/>
                                    <TextBlock x:Name="DangerousConnectionsText"
                                               Text="0"
                                               Foreground="White" 
                                               FontWeight="Bold"
                                               FontSize="14"
                                               Margin="6,0,0,0"
                                               VerticalAlignment="Center"/>
                                </StackPanel>
                            </Border>

                            <!-- AutoBlock 통계 -->
                            <Border Background="#9C27B0" 
                                    CornerRadius="6" 
                                    Padding="8,4"
                                    Margin="10,0,0,0"
                                    Opacity="0.9">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="ShieldCheck" 
                                                           VerticalAlignment="Center"
                                                           Foreground="White"
                                                           Width="14" Height="14"
                                                           Margin="0,0,4,0"/>
                                    <TextBlock Text="자동 차단" 
                                               Foreground="White" 
                                               FontSize="12" 
                                               VerticalAlignment="Center"/>
                                    <TextBlock Text="{Binding TotalBlockedCount}"
                                               Foreground="White" 
                                               FontWeight="Bold"
                                               FontSize="14"
                                               Margin="6,0,0,0"
                                               VerticalAlignment="Center"/>
                                </StackPanel>
                            </Border>

                            <!-- AutoBlock 레벨별 통계 (툴팁) -->
                            <Border Background="#4CAF50" 
                                    CornerRadius="6" 
                                    Padding="8,4"
                                    Margin="10,0,0,0"
                                    Opacity="0.9"
                                    ToolTip="즉시 차단 / 경고 차단 / 모니터링">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="Security" 
                                                           VerticalAlignment="Center"
                                                           Foreground="White"
                                                           Width="14" Height="14"
                                                           Margin="0,0,4,0"/>
                                    <TextBlock Foreground="White" 
                                               FontSize="12" 
                                               VerticalAlignment="Center">
                                        <Run Text="{Binding Level1BlockCount}"/> / <Run Text="{Binding Level2BlockCount}"/> / <Run Text="{Binding Level3BlockCount}"/>
                                    </TextBlock>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </Grid>
                </Grid>
            </Border>

            <Border Grid.Row="1" Background="{DynamicResource BackgroundColor}" CornerRadius="12" Padding="20" Margin="10,10,20,20">

                <TabControl>
                    <!-- 📋 프로세스 메인 탭 -->
                    <TabItem>
                        <TabItem.Header>
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Monitor" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                <TextBlock Text="📋 프로세스" VerticalAlignment="Center"/>
                            </StackPanel>
                        </TabItem.Header>
                        
                        <!-- 프로세스 서브 탭들 -->
                        <TabControl>
                            <!-- 일반 프로세스 (그룹화) 서브탭 -->
                            <TabItem Header="일반 프로세스 (그룹화)">
                        <Grid>
                            <TreeView x:Name="ProcessTreeView"
                                  Background="{DynamicResource DataGridBackgroundColor}"
                                  Foreground="{DynamicResource DataGridForegroundColor}" 
                                  BorderThickness="0"
                                  VirtualizingPanel.IsVirtualizing="True"
                                  VirtualizingPanel.VirtualizationMode="Recycling"
                                  HorizontalAlignment="Stretch"
                                  VerticalAlignment="Stretch">

                                <TreeView.Resources>
                                    <!-- 프로세스 노드 템플릿 -->
                                    <HierarchicalDataTemplate DataType="{x:Type models:ProcessTreeNode}" ItemsSource="{Binding Connections}">
                                        <!-- 프로세스 그룹 헤더 -->
                                        <Border Background="{Binding BackgroundColor}" 
                                            CornerRadius="5" 
                                            Padding="10,8" 
                                            Margin="5,2">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="305"/>
                                                    <ColumnDefinition Width="150"/>
                                                    <ColumnDefinition Width="120"/>
                                                    <ColumnDefinition Width="100"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>

                                                <!-- 프로세스 정보 -->
                                                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                                                    <Image Width="20" Height="20" Margin="0,0,8,0" Source="{Binding ProcessPath, Converter={StaticResource FilePathToIconConverter}}"/>

                                                    <StackPanel>
                                                        <StackPanel Orientation="Horizontal">
                                                            <TextBlock Text="{Binding ProcessName}" 
                                                                   FontWeight="Bold" 
                                                                   FontSize="14"
                                                                   Foreground="{DynamicResource ForegroundColor}"/>
                                                            <TextBlock Text="{Binding ConnectionCount, StringFormat=' ({0}개 연결)'}" 
                                                                   FontWeight="SemiBold" 
                                                                   FontSize="12"
                                                                   Foreground="{DynamicResource SecondaryForegroundColor}"
                                                                   Margin="5,0,0,0"/>
                                                        </StackPanel>
                                                        <TextBlock FontSize="11" Foreground="{DynamicResource SecondaryForegroundColor}">
                                                        <Run Text="PID: "/>
                                                        <Run Text="{Binding ProcessId}"/>
                                                        </TextBlock>
                                                    </StackPanel>
                                                </StackPanel>

                                                <!-- 프로세스 경로 -->
                                                <TextBlock Grid.Column="1" 
                                                       Text="{Binding ProcessPath}" 
                                                       FontSize="10"
                                                       Foreground="{DynamicResource SecondaryForegroundColor}"
                                                       TextTrimming="CharacterEllipsis"
                                                       VerticalAlignment="Center"
                                                       ToolTip="{Binding ProcessPath}"/>

                                                <!-- 위험도 표시 -->
                                                <Border Grid.Column="2" 
                                                    CornerRadius="4" 
                                                    Padding="8,4" 
                                                    VerticalAlignment="Center" 
                                                    HorizontalAlignment="Left"
                                                    Background="{DynamicResource PrimaryColor}">
                                                    <TextBlock Text="일반" 
                                                           Foreground="White" 
                                                           FontWeight="Bold"
                                                           FontSize="11"/>
                                                </Border>

                                                <!-- 상태 정보 -->
                                                <TextBlock Grid.Column="3"
                                                       Text="실행중"
                                                       FontSize="11"
                                                       Foreground="{DynamicResource ForegroundColor}"
                                                       VerticalAlignment="Center"/>

                                                <!-- 액션 버튼들 -->
                                                <StackPanel Grid.Column="4" 
                                                            Orientation="Horizontal" 
                                                            HorizontalAlignment="Right" 
                                                            VerticalAlignment="Center">
                                                    <Button Content="차단"                                                                                                                                  
                                                            Width="60" 
                                                            Height="25"
                                                            FontSize="10"
                                                            Margin="5,0"
                                                            Click="BlockGroupConnections_Click"
                                                            Style="{DynamicResource BlockGroupConnectionsButtonStyle}"
                                                            Tag="{Binding}">
                                                    </Button>

                                                    <Button Content="종료"                                                                                                                                                                    
                                                            Width="60" 
                                                            Height="25"
                                                            FontSize="10"
                                                            Margin="5,0"
                                                            Click="TerminateGroupProcess_Click"
                                                            Style="{DynamicResource TerminateGroupProcessButtonStyle}"
                                                            Tag="{Binding}">
                                                    </Button>
                                                </StackPanel>
                                            </Grid>
                                        </Border>
                                    </HierarchicalDataTemplate>

                                    <!-- 개별 연결 템플릿 -->
                                    <DataTemplate DataType="{x:Type models:ProcessNetworkInfo}">
                                        <Border Background="Transparent" 
                                            Padding="5,3"
                                            Margin="20,1,5,1">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="50"/>
                                                    <ColumnDefinition Width="150"/>
                                                    <ColumnDefinition Width="150"/>
                                                    <ColumnDefinition Width="100"/>
                                                    <ColumnDefinition Width="120"/>
                                                    <ColumnDefinition Width="120"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>

                                                <Image Grid.Column="0"
                                                   Width="16" Height="16"
                                                   Margin="0,0,8,0"
                                                   Source="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type TreeViewItem}}, Path=DataContext.ProcessPath, Converter={StaticResource FilePathToIconConverter}}"
                                                   VerticalAlignment="Center"
                                                   HorizontalAlignment="Left"/>

                                                <TextBlock Grid.Column="1" 
                                                       Text="{Binding LocalAddress}" 
                                                       FontSize="11"
                                                       Foreground="{DynamicResource ForegroundColor}"
                                                       VerticalAlignment="Center"/>
                                                <TextBlock Grid.Column="2" 
                                                       Text="{Binding RemoteAddress}" 
                                                       FontSize="11"
                                                       Foreground="{DynamicResource ForegroundColor}"
                                                       VerticalAlignment="Center"/>
                                                <TextBlock Grid.Column="3" 
                                                       Text="{Binding Protocol}" 
                                                       FontSize="11"
                                                       Foreground="{DynamicResource SecondaryForegroundColor}"
                                                       VerticalAlignment="Center"/>
                                                <TextBlock Grid.Column="4" 
                                                       Text="{Binding ConnectionState}" 
                                                       FontSize="11"
                                                       Foreground="{DynamicResource ForegroundColor}"
                                                       VerticalAlignment="Center"/>

                                                <!-- 위험도 표시 -->
                                                <Border Grid.Column="5" 
                                                        CornerRadius="3" 
                                                        Padding="6,2" 
                                                        VerticalAlignment="Center" 
                                                        HorizontalAlignment="Left">
                                                    <Border.Style>
                                                        <Style TargetType="Border">
                                                            <Setter Property="Background" Value="#607D8B"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding RiskLevel}" Value="Low">
                                                                    <Setter Property="Background" Value="#4CAF50"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding RiskLevel}" Value="Medium">
                                                                    <Setter Property="Background" Value="#F39C12"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding RiskLevel}" Value="High">
                                                                    <Setter Property="Background" Value="#E74C3C"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding RiskLevel}" Value="Critical">
                                                                    <Setter Property="Background" Value="#C0392B"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Border.Style>
                                                    <TextBlock Text="{Binding RiskLevel}" 
                                                           Foreground="White" 
                                                           FontWeight="Bold"
                                                           FontSize="9"/>
                                                </Border>

                                                <!-- 개별 연결 액션 -->
                                                <StackPanel Grid.Column="6" 
                                                        Orientation="Horizontal" 
                                                        HorizontalAlignment="Right" 
                                                        VerticalAlignment="Center">
                                                    <Button Content="차단"                                                       
                                                            Width="40" 
                                                            Height="20"
                                                            FontSize="8"
                                                            Margin="2,0"
                                                            Click="BlockConnection_Click"
                                                            Style="{DynamicResource BlockGroupConnectionsButtonStyle}"
                                                            Tag="{Binding}">
                                                    </Button>
                                                </StackPanel>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </TreeView.Resources>

                                <!-- TreeViewItem 스타일로 확장 상태 바인딩 -->
                                <TreeView.ItemContainerStyle>
                                    <Style TargetType="TreeViewItem" BasedOn="{StaticResource {x:Type TreeViewItem}}">
                                        <Setter Property="IsExpanded" Value="{Binding IsExpanded, Mode=TwoWay}"/>
                                        <Setter Property="Background" Value="Transparent"/>
                                        <Setter Property="BorderThickness" Value="0"/>
                                        <Setter Property="Padding" Value="2"/>
                                    </Style>
                                </TreeView.ItemContainerStyle>
                            </TreeView>
                        </Grid>
                            </TabItem>
                            
                            <!-- 일반 프로세스 (상세) 서브탭 -->
                            <TabItem Header="일반 프로세스 (상세)">
                        <Grid>
                            <DataGrid x:Name="GeneralProcessDataGrid"
                                      AutoGenerateColumns="False"
                                      IsReadOnly="True"
                                      Background="{DynamicResource DataGridBackgroundColor}"
                                      Foreground="{DynamicResource DataGridForegroundColor}" 
                                      BorderThickness="0"
                                      GridLinesVisibility="None"
                                      RowBackground="{DynamicResource DataGridRowBackgroundColor}" 
