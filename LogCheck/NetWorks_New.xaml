                                </TabItem.Header>
                                
                                <Grid Margin="10">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>

                                    <!-- 보안 경고 제목 -->
                                    <Border Grid.Row="0" Background="{DynamicResource SecondaryBackgroundColor}" 
                                            CornerRadius="8" Padding="15" Margin="0,0,0,10">
                                        <TextBlock Text="실시간 보안 경고 및 위협 분석" 
                                                   FontWeight="Bold" FontSize="16"
                                                   Foreground="{DynamicResource PrimaryForegroundColor}"
                                                   HorizontalAlignment="Center"/>
                                    </Border>

                                    <!-- 보안 경고 목록 -->
                                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                                        <ItemsControl x:Name="SecurityAlertsItemControl" 
                                                      ItemsSource="{Binding SecurityAlerts}">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Border Background="#FF9800" 
                                                            CornerRadius="8" Padding="15" Margin="0,0,0,10"
                                                            BorderThickness="1" BorderBrush="#E0E0E0">
                                                        <Grid>
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="Auto"/>
                                                                <ColumnDefinition Width="*"/>
                                                                <ColumnDefinition Width="Auto"/>
                                                            </Grid.ColumnDefinitions>
                                                            
                                                            <materialDesign:PackIcon Grid.Column="0" 
                                                                                     Kind="{Binding AlertIcon}" 
                                                                                     Foreground="White"
                                                                                     VerticalAlignment="Top"
                                                                                     Margin="0,0,15,0"/>
                                                            
                                                            <StackPanel Grid.Column="1">
                                                                <TextBlock Text="{Binding Title}" 
                                                                           Foreground="White" 
                                                                           FontWeight="Bold" 
                                                                           FontSize="14"
                                                                           Margin="0,0,0,5"/>
                                                                <TextBlock Text="{Binding Description}" 
                                                                           Foreground="White" 
                                                                           FontSize="12"
                                                                           TextWrapping="Wrap"
                                                                           Margin="0,0,0,8"/>
                                                                <TextBlock Text="{Binding RecommendedAction}" 
                                                                           Foreground="White" 
                                                                           FontSize="11"
                                                                           FontStyle="Italic"
                                                                           TextWrapping="Wrap"/>
                                                            </StackPanel>
                                                            
                                                            <TextBlock Grid.Column="2" 
                                                                       Text="{Binding Timestamp, StringFormat=HH:mm:ss}" 
                                                                       Foreground="White"
                                                                       FontSize="10"
                                                                       VerticalAlignment="Top"/>
                                                        </Grid>
                                                    </Border>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </ScrollViewer>
                                </Grid>
                            </TabItem>
                        </TabControl>
                    </TabItem>
                    
                    <!-- 🛡️ 방화벽 메인 탭 -->
                    <TabItem>
                        <TabItem.Header>
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Shield" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                <TextBlock Text="🛡️ 방화벽" VerticalAlignment="Center"/>
                            </StackPanel>
                        </TabItem.Header>
                        
                        <!-- 방화벽 서브 탭들 -->
                        <TabControl TabStripPlacement="Left" Margin="10">
                            <!-- 방화벽 규칙 관리 서브탭 -->
                            <TabItem>
                                <TabItem.Header>
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="Security" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                        <TextBlock Text="규칙 관리" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </TabItem.Header>
                                
                                <Grid Margin="10">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <!-- 제목 및 방화벽 상태 -->
                                    <Border Grid.Row="0" Background="{DynamicResource SecondaryBackgroundColor}" 
                                            CornerRadius="8" Padding="15" Margin="0,0,0,10">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            
                                            <StackPanel Grid.Column="0">
                                                <TextBlock Text="Windows 방화벽 규칙 관리" 
                                                           FontWeight="Bold" FontSize="16"
                                                           Foreground="{DynamicResource PrimaryForegroundColor}"/>
                                                <TextBlock x:Name="FirewallStatusText" 
                                                           Text="방화벽 상태: 확인 중..."
                                                           FontSize="12"
                                                           Foreground="{DynamicResource SecondaryForegroundColor}"
                                                           Margin="0,5,0,0"/>
                                            </StackPanel>
                                            
                                            <TextBlock Grid.Column="1" x:Name="FirewallRuleCountText"
                                                       Text="관리 규칙: 0개"
                                                       FontSize="12"
                                                       Foreground="{DynamicResource SecondaryForegroundColor}"
                                                       VerticalAlignment="Center"
                                                       Margin="0,0,20,0"/>
                                            
                                            <StackPanel Grid.Column="2" Orientation="Horizontal">
                                                <Button Content="Windows 방화벽 규칙"
                                                        Style="{DynamicResource MaterialDesignRaisedButton}"
                                                        Background="#4CAF50"
                                                        Foreground="White"
                                                        Click="OpenWindowsFirewallRules_Click"
                                                        Margin="0,0,10,0"
                                                        ToolTip="Windows 고급 보안이 포함된 방화벽을 엽니다"/>
                                                <Button Content="규칙 새로고침"
                                                        Style="{DynamicResource MaterialDesignRaisedButton}"
                                                        Background="#2196F3"
                                                        Foreground="White"
                                                        Click="RefreshFirewallRules_Click"
                                                        ToolTip="사용자 정의 방화벽 규칙을 새로고침합니다"/>
                                            </StackPanel>
                                        </Grid>
                                    </Border>

                                    <!-- 새 규칙 추가 -->
                                    <Border Grid.Row="1" Background="{DynamicResource BackgroundColor}" 
                                            CornerRadius="8" Padding="15" Margin="0,0,0,10">
                                        <Expander Header="새 방화벽 규칙 추가" 
                                                  FontWeight="SemiBold"
                                                  Foreground="{DynamicResource PrimaryForegroundColor}">
                                            <Grid Margin="0,10,0,0">
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                </Grid.RowDefinitions>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                
                                                <TextBlock Grid.Row="0" Grid.Column="0" Text="규칙 이름:" 
                                                           VerticalAlignment="Center" Margin="0,0,10,0"/>
                                                <TextBox Grid.Row="0" Grid.Column="1" x:Name="NewRuleNameTextBox"
                                                         materialDesign:HintAssist.Hint="규칙 이름 입력"
                                                         Margin="0,0,20,10"/>
                                                
                                                <TextBlock Grid.Row="0" Grid.Column="2" Text="대상 IP:" 
                                                           VerticalAlignment="Center" Margin="0,0,10,0"/>
                                                <TextBox Grid.Row="0" Grid.Column="3" x:Name="NewRuleIPTextBox"
                                                         materialDesign:HintAssist.Hint="IP 주소 또는 범위"
                                                         Margin="0,0,0,10"/>
                                                
                                                <TextBlock Grid.Row="1" Grid.Column="0" Text="포트:" 
                                                           VerticalAlignment="Center" Margin="0,0,10,0"/>
                                                <TextBox Grid.Row="1" Grid.Column="1" x:Name="NewRulePortTextBox"
                                                         materialDesign:HintAssist.Hint="포트 번호 (선택사항)"
                                                         Margin="0,0,20,10"/>
                                                
                                                <TextBlock Grid.Row="1" Grid.Column="2" Text="프로토콜:" 
                                                           VerticalAlignment="Center" Margin="0,0,10,0"/>
                                                <ComboBox Grid.Row="1" Grid.Column="3" x:Name="NewRuleProtocolComboBox"
                                                          SelectedIndex="0" Margin="0,0,0,10">
                                                    <ComboBoxItem Content="TCP"/>
                                                    <ComboBoxItem Content="UDP"/>
                                                    <ComboBoxItem Content="Any"/>
                                                </ComboBox>
                                                
                                                <TextBlock Grid.Row="2" Grid.Column="0" Text="액션:" 
                                                           VerticalAlignment="Center" Margin="0,0,10,0"/>
                                                <ComboBox Grid.Row="2" Grid.Column="1" x:Name="NewRuleActionComboBox"
                                                          SelectedIndex="0" Margin="0,0,20,0">
                                                    <ComboBoxItem Content="차단 (Block)"/>
                                                    <ComboBoxItem Content="허용 (Allow)"/>
                                                </ComboBox>
                                                
                                                <Button Grid.Row="2" Grid.Column="2" Grid.ColumnSpan="2" 
                                                        Content="규칙 추가"
                                                        Style="{DynamicResource MaterialDesignRaisedButton}"
                                                        Background="#4CAF50"
                                                        Foreground="White"
                                                        HorizontalAlignment="Right"
                                                        Click="AddFirewallRule_Click"/>
                                            </Grid>
                                        </Expander>
                                    </Border>

                                    <!-- 방화벽 규칙 DataGrid -->
                                    <DataGrid Grid.Row="2" x:Name="FirewallRulesDataGrid"
                                              ItemsSource="{Binding FirewallRules}"
                                              AutoGenerateColumns="False"
                                              HeadersVisibility="Column"
                                              GridLinesVisibility="Horizontal"
                                              CanUserResizeColumns="True"
                                              Background="{DynamicResource DataGridBackgroundColor}"
                                              Foreground="{DynamicResource DataGridForegroundColor}"
                                              SelectionMode="Extended"
                                              Margin="0,0,0,10">
                                        <DataGrid.Columns>
                                            <DataGridTextColumn Header="규칙 이름" 
                                                                Binding="{Binding RuleName}" 
                                                                Width="200"/>
                                            <DataGridTextColumn Header="대상 IP" 
                                                                Binding="{Binding TargetIP}" 
                                                                Width="120"/>
                                            <DataGridTextColumn Header="포트" 
                                                                Binding="{Binding Port}" 
                                                                Width="80"/>
                                            <DataGridTextColumn Header="프로토콜" 
                                                                Binding="{Binding Protocol}" 
                                                                Width="80"/>
                                            <DataGridTextColumn Header="액션" 
                                                                Binding="{Binding Action}" 
                                                                Width="80"/>
                                            <DataGridTextColumn Header="방향" 
                                                                Binding="{Binding Direction}" 
                                                                Width="80"/>
                                            <DataGridCheckBoxColumn Header="활성" 
                                                                    Binding="{Binding IsEnabled}" 
                                                                    Width="60"/>
                                            <DataGridTextColumn Header="생성일" 
                                                                Binding="{Binding CreatedAt, StringFormat=yyyy-MM-dd}" 
                                                                Width="100"/>
                                            <DataGridTextColumn Header="설명" 
                                                                Binding="{Binding Description}" 
                                                                Width="*"/>
                                        </DataGrid.Columns>
                                    </DataGrid>

                                    <!-- 액션 버튼들 -->
                                    <StackPanel Grid.Row="3" Orientation="Horizontal" 
                                                HorizontalAlignment="Right">
                                        <Button Content="선택된 규칙 활성화"
                                                Style="{DynamicResource MaterialDesignRaisedButton}"
                                                Background="#4CAF50"
                                                Foreground="White"
                                                Click="EnableSelectedRules_Click"
                                                Margin="0,0,10,0"/>
                                        <Button Content="선택된 규칙 비활성화"
                                                Style="{DynamicResource MaterialDesignRaisedButton}"
                                                Background="#FF9800"
                                                Foreground="White"
                                                Click="DisableSelectedRules_Click"
                                                Margin="0,0,10,0"/>
                                        <Button Content="선택된 규칙 삭제"
                                                Style="{DynamicResource MaterialDesignRaisedButton}"
                                                Background="#F44336"
                                                Foreground="White"
                                                Click="DeleteSelectedRules_Click"/>
                                    </StackPanel>
                                </Grid>
                            </TabItem>

                            <!-- 방화벽 상태 및 로그 서브탭 -->
                            <TabItem>
                                <TabItem.Header>
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="Monitor" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                        <TextBlock Text="상태 및 로그" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </TabItem.Header>
                                
                                <Grid Margin="10">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>

                                    <!-- 방화벽 상태 요약 -->
                                    <Border Grid.Row="0" Background="{DynamicResource SecondaryBackgroundColor}" 
                                            CornerRadius="8" Padding="15" Margin="0,0,0,10">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            
                                            <StackPanel Grid.Column="0" Margin="0,0,20,0">
                                                <TextBlock Text="방화벽 상태" 
                                                           FontWeight="Bold" FontSize="14"
                                                           Foreground="{DynamicResource PrimaryForegroundColor}"
                                                           HorizontalAlignment="Center"
                                                           Margin="0,0,0,10"/>
                                                <TextBlock x:Name="FirewallDomainStatusText" Text="도메인: 활성" 
                                                           Foreground="{DynamicResource SecondaryForegroundColor}"
                                                           HorizontalAlignment="Center" Margin="0,2"/>
                                                <TextBlock x:Name="FirewallPrivateStatusText" Text="개인: 활성" 
                                                           Foreground="{DynamicResource SecondaryForegroundColor}"
                                                           HorizontalAlignment="Center" Margin="0,2"/>
                                                <TextBlock x:Name="FirewallPublicStatusText" Text="공용: 활성" 
                                                           Foreground="{DynamicResource SecondaryForegroundColor}"
                                                           HorizontalAlignment="Center" Margin="0,2"/>
                                            </StackPanel>
                                            
                                            <StackPanel Grid.Column="1" Margin="0,0,20,0">
                                                <TextBlock Text="차단 통계" 
                                                           FontWeight="Bold" FontSize="14"
                                                           Foreground="{DynamicResource PrimaryForegroundColor}"
                                                           HorizontalAlignment="Center"
                                                           Margin="0,0,0,10"/>
                                                <TextBlock x:Name="BlockedConnectionsCountText" Text="총 차단: 0" 
                                                           Foreground="{DynamicResource SecondaryForegroundColor}"
                                                           HorizontalAlignment="Center" Margin="0,2"/>
                                                <TextBlock x:Name="BlockedInboundCountText" Text="인바운드: 0" 
                                                           Foreground="{DynamicResource SecondaryForegroundColor}"
                                                           HorizontalAlignment="Center" Margin="0,2"/>
                                                <TextBlock x:Name="BlockedOutboundCountText" Text="아웃바운드: 0" 
                                                           Foreground="{DynamicResource SecondaryForegroundColor}"
                                                           HorizontalAlignment="Center" Margin="0,2"/>
                                            </StackPanel>
                                            
                                            <StackPanel Grid.Column="2">
                                                <TextBlock Text="규칙 통계" 
                                                           FontWeight="Bold" FontSize="14"
                                                           Foreground="{DynamicResource PrimaryForegroundColor}"
                                                           HorizontalAlignment="Center"
                                                           Margin="0,0,0,10"/>
                                                <TextBlock x:Name="ActiveRulesCountText" Text="활성 규칙: 0" 
                                                           Foreground="{DynamicResource SecondaryForegroundColor}"
                                                           HorizontalAlignment="Center" Margin="0,2"/>
                                                <TextBlock x:Name="CustomRulesCountText" Text="사용자 규칙: 0" 
                                                           Foreground="{DynamicResource SecondaryForegroundColor}"
                                                           HorizontalAlignment="Center" Margin="0,2"/>
                                                <TextBlock x:Name="LastUpdateTimeText" Text="마지막 업데이트: 없음" 
                                                           Foreground="{DynamicResource SecondaryForegroundColor}"
                                                           HorizontalAlignment="Center" Margin="0,2"/>
                                            </StackPanel>
                                        </Grid>
                                    </Border>

                                    <!-- 방화벽 로그 -->
                                    <Border Grid.Row="1" Background="{DynamicResource BackgroundColor}" 
                                            CornerRadius="8" Padding="15">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="*"/>
                                            </Grid.RowDefinitions>
                                            
                                            <TextBlock Grid.Row="0" Text="방화벽 활동 로그" 
                                                       FontWeight="Bold" FontSize="14"
                                                       Foreground="{DynamicResource PrimaryForegroundColor}"
                                                       Margin="0,0,0,10"/>
                                            
                                            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                                                <ItemsControl x:Name="FirewallLogsItemControl">
                                                    <ItemsControl.ItemTemplate>
                                                        <DataTemplate>
                                                            <Border Background="{DynamicResource SecondaryBackgroundColor}" 
                                                                    CornerRadius="4" Padding="10" Margin="0,0,0,5">
                                                                <Grid>
                                                                    <Grid.ColumnDefinitions>
                                                                        <ColumnDefinition Width="Auto"/>
                                                                        <ColumnDefinition Width="*"/>
                                                                        <ColumnDefinition Width="Auto"/>
                                                                    </Grid.ColumnDefinitions>
                                                                    
                                                                    <TextBlock Grid.Column="0" 
                                                                               Text="{Binding Timestamp, StringFormat=HH:mm:ss}" 
                                                                               Foreground="{DynamicResource SecondaryForegroundColor}"
                                                                               FontSize="11"
                                                                               VerticalAlignment="Top"
                                                                               Margin="0,0,10,0"/>
                                                                    
                                                                    <TextBlock Grid.Column="1" 
                                                                               Text="{Binding Message}" 
                                                                               Foreground="{DynamicResource PrimaryForegroundColor}"
                                                                               FontSize="12"
                                                                               TextWrapping="Wrap"/>
                                                                    
                                                                    <Border Grid.Column="2" 
                                                                            Background="#2196F3"
                                                                            CornerRadius="2" Padding="4,2">
                                                                        <TextBlock Text="{Binding LogLevel}" 
                                                                                   Foreground="White" 
                                                                                   FontSize="10"/>
                                                                    </Border>
                                                                </Grid>
                                                            </Border>
                                                        </DataTemplate>
                                                    </ItemsControl.ItemTemplate>
                                                </ItemsControl>
                                            </ScrollViewer>
                                        </Grid>
                                    </Border>
                                </Grid>
                            </TabItem>
                        </TabControl>
                    </TabItem>

                    <!-- 📊 대시보드 메인 탭 -->
                    <TabItem>
                        <TabItem.Header>
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="ViewDashboard" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                <TextBlock Text="📊 대시보드" VerticalAlignment="Center"/>
                            </StackPanel>
                        </TabItem.Header>
                        
                        <!-- 대시보드 서브 탭들 -->
                        <TabControl>
                            <!-- AutoBlock 서브탭 -->
                            <TabItem Header="AutoBlock">
                                <!-- 스크롤 가능한 대시보드 -->
                                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                                    <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="1.5*"/>
                                        <RowDefinition Height="1*"/>
                                        <RowDefinition Height="1*"/>
                                    </Grid.RowDefinitions>

                                    <!-- 상단: 보안 상태 및 차트 -->
                                    <Border Grid.Row="0" Background="{DynamicResource ButtonBackgroundColor}" CornerRadius="12" Margin="10,10,10,0" BorderBrush="#C2C2C2" BorderThickness="1" ClipToBounds="True">
                                        <Grid Margin="10">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>

                                            <Border Grid.Column="0" Background="{DynamicResource BackgroundColor}" CornerRadius="8" Padding="15" Margin="0,0,10,0">
                                                <StackPanel>
                                                    <TextBlock Text="보안 상태 요약" HorizontalAlignment="Center" Foreground="{DynamicResource ForegroundColor}" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,10"/>
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="*"/>
                                                        </Grid.ColumnDefinitions>
                                                        <Grid.RowDefinitions>
                                                            <RowDefinition Height="Auto"/>
                                                            <RowDefinition Height="Auto"/>
                                                        </Grid.RowDefinitions>
                                                        <StackPanel Grid.Column="0" Grid.Row="0" Margin="0,0,10,0">
                                                            <TextBlock Text="위험도별 연결" Foreground="{DynamicResource SecondaryForegroundColor}" FontSize="12"/>
                                                            <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                                                <Border Background="{StaticResource RiskLowColor}" CornerRadius="4" Padding="8,4" Margin="0,0,5,0">
                                                                    <TextBlock Text="낮음" Foreground="White" FontSize="11"/>
                                                                </Border>
                                                                <TextBlock Text="{Binding LowRiskCount}" Foreground="{DynamicResource ForegroundColor}" FontWeight="Bold" VerticalAlignment="Center" Margin="5,0,0,0"/>
                                                            </StackPanel>
                                                            <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                                                <Border Background="{StaticResource RiskMediumColor}" CornerRadius="4" Padding="8,4" Margin="0,0,5,0">
                                                                    <TextBlock Text="보통" Foreground="White" FontSize="11"/>
                                                                </Border>
                                                                <TextBlock Text="{Binding MediumRiskCount}" Foreground="{DynamicResource ForegroundColor}" FontWeight="Bold" VerticalAlignment="Center" Margin="5,0,0,0"/>
                                                            </StackPanel>
                                                            <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                                                <Border Background="{StaticResource RiskHighColor}" CornerRadius="4" Padding="8,4" Margin="0,0,5,0">
                                                                    <TextBlock Text="높음" Foreground="White" FontSize="11"/>
                                                                </Border>
                                                                <TextBlock Text="{Binding HighRiskCount}" Foreground="{DynamicResource ForegroundColor}" FontWeight="Bold" VerticalAlignment="Center" Margin="5,0,0,0"/>
                                                            </StackPanel>
                                                        </StackPanel>
                                                        <StackPanel Grid.Column="1" Grid.Row="0" Margin="10,0,0,0">
                                                            <TextBlock Text="프로토콜별 통계" Foreground="{DynamicResource SecondaryForegroundColor}" FontSize="12"/>
                                                            <TextBlock Text="{Binding TcpCount, StringFormat='TCP: {0}'}" Foreground="{DynamicResource ForegroundColor}" Margin="0,5,0,0"/>
                                                            <TextBlock Text="{Binding UdpCount, StringFormat='UDP: {0}'}" Foreground="{DynamicResource ForegroundColor}" Margin="0,2,0,0"/>
                                                            <TextBlock Text="{Binding IcmpCount, StringFormat='ICMP: {0}'}" Foreground="{DynamicResource ForegroundColor}" Margin="0,2,0,0"/>
                                                        </StackPanel>
                                                        <StackPanel Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2" Margin="0,15,0,0">
                                                            <TextBlock Text="전체 통계" Foreground="{DynamicResource SecondaryForegroundColor}" FontSize="12"/>
                                                            <Grid Margin="0,5,0,0">
                                                                <Grid.ColumnDefinitions>
                                                                    <ColumnDefinition Width="*"/>
                                                                    <ColumnDefinition Width="*"/>
                                                                </Grid.ColumnDefinitions>
                                                                <TextBlock Grid.Column="0" Text="{Binding TotalConnections, StringFormat='총 연결: {0}'}" Foreground="{DynamicResource ForegroundColor}" FontWeight="SemiBold"/>
                                                                <TextBlock Grid.Column="1" Text="{Binding TotalDataTransferred, StringFormat='총 데이터: {0}'}" Foreground="{DynamicResource ForegroundColor}" FontWeight="SemiBold"/>
                                                            </Grid>
                                                        </StackPanel>
                                                    </Grid>
                                                </StackPanel>
                                            </Border>

                                            <Border Grid.Column="1" Background="{DynamicResource BackgroundColor}" CornerRadius="8" Padding="15" Margin="10,0,0,0">
                                                <StackPanel>
                                                    <TextBlock Text="📊 실시간 트래픽 모니터링" HorizontalAlignment="Center" Foreground="{DynamicResource ForegroundColor}" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,5"/>
                                                    <TextBlock Text="(데이터 전송량 기준, MB 단위)" HorizontalAlignment="Center" Foreground="{DynamicResource ForegroundColor}" FontSize="10" Opacity="0.7" Margin="0,0,0,10"/>
                                                    <lvc:CartesianChart x:Name="NetworkActivityChart"
                                                                        Width="240" Height="160"
                                                                        Series="{Binding ChartSeries}" 
                                                                        XAxes="{Binding ChartXAxes}" 
                                                                        YAxes="{Binding ChartYAxes}"
                                                                        Background="White"                                                             
                                                                        LegendPosition="Hidden"
                                                                        TooltipPosition="Hidden"/>
                                                </StackPanel>
                                            </Border>
                                        </Grid>
                                    </Border>

                                    <!-- 하단: 로그 및 상태 표시 -->
                                    <Border Grid.Row="1" Background="{DynamicResource ButtonBackgroundColor}" CornerRadius="12" Padding="5" Margin="10,10,10,10" BorderBrush="#C2C2C2" BorderThickness="1">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="1*"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="2*"/>
                                            </Grid.RowDefinitions>

                                            <!-- 모니터링 상태 + 런타임 구성 요약 -->
                                            <StackPanel Grid.Row="0" Orientation="Horizontal" VerticalAlignment="Center">
                                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                                    <Ellipse x:Name="MonitoringStatusIndicator2" Width="12" Height="12" 
                                                             Fill="Gray" Margin="0,0,8,0"/>
                                                    <TextBlock x:Name="MonitoringStatusText2" Text="대기 중" 
                                                               Foreground="{DynamicResource SecondaryForegroundColor}" FontSize="12"/>
                                                </StackPanel>
                                                <TextBlock x:Name="RuntimeConfigText"
                                                           Text="NIC: 자동 선택 | BPF: tcp or udp or icmp"
                                                           Foreground="{DynamicResource SecondaryForegroundColor}"
                                                           FontSize="11"
                                                           VerticalAlignment="Center"
                                                           Margin="20,0,0,0"/>
                                            </StackPanel>

                                            <Border Grid.Row="1" Height="1" Background="#CCCCCC" Margin="0,0,0,0"/>

                                            <!-- 로그 표시 -->
                                            <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto" Height="68">
                                                <ItemsControl x:Name="LogMessagesControl">
                                                    <ItemsControl.ItemTemplate>
                                                        <DataTemplate>
                                                            <TextBlock Text="{Binding}" 
                                                                       Foreground="{DynamicResource SecondaryForegroundColor}" 
                                                                       FontSize="11"
                                                                       Margin="0,2,0,0"
                                                                       TextWrapping="Wrap"/>
                                                        </DataTemplate>
                                                    </ItemsControl.ItemTemplate>
                                                </ItemsControl>
                                            </ScrollViewer>
                                        </Grid>
                                    </Border>

                                    <!-- 세 번째 행: 화이트리스트 관리 -->
                                    <Border Grid.Row="2" Background="{DynamicResource BackgroundColor}" 
                                            CornerRadius="8" Padding="10" Margin="10,10,10,10">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="*"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>

                                            <TextBlock Grid.Row="0" Text="화이트리스트 관리" 
                                                       FontWeight="Bold" FontSize="14"
                                                       Margin="0,0,0,10"
                                                       Foreground="{DynamicResource PrimaryForegroundColor}"/>

                                            <DataGrid Grid.Row="1" x:Name="WhitelistDataGrid"
                                                      ItemsSource="{Binding WhitelistEntries}"
                                                      AutoGenerateColumns="False"
                                                      HeadersVisibility="Column"
                                                      GridLinesVisibility="Horizontal"
                                                      CanUserResizeColumns="True"
                                                      Background="{DynamicResource DataGridBackgroundColor}"
                                                      Foreground="{DynamicResource DataGridForegroundColor}">
                                                <DataGrid.Columns>
                                                    <DataGridTextColumn Header="프로세스 경로" Binding="{Binding ProcessPath}" Width="*"/>
                                                    <DataGridTextColumn Header="추가 사유" Binding="{Binding Reason}" Width="200"/>
                                                    <DataGridTextColumn Header="추가일" Binding="{Binding AddedAt, StringFormat=yyyy-MM-dd}" Width="100"/>
                                                </DataGrid.Columns>
                                            </DataGrid>

                                            <StackPanel Grid.Row="2" Orientation="Horizontal" 
                                                        HorizontalAlignment="Right" Margin="0,10,0,0">
                                                <Button Content="화이트리스트 추가" 
                                                        Style="{DynamicResource MaterialDesignRaisedButton}"
                                                        Background="#4CAF50"
                                                        Foreground="White"
                                                        Margin="0,0,10,0"
                                                        Click="AddToWhitelist_Click"/>
                                                <Button Content="선택 항목 제거" 
                                                        Style="{DynamicResource MaterialDesignRaisedButton}"
                                                        Background="#F44336"
                                                        Foreground="White"
                                                        Click="RemoveFromWhitelist_Click"/>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </Grid>
                                </ScrollViewer>
                            </TabItem>
                            
                            <!-- 실시간 모니터링 서브탭 -->
                            <TabItem Header="실시간 모니터링">
                                <Grid>
                                    <TextBlock Text="실시간 네트워크 모니터링 대시보드가 여기에 표시됩니다." 
                                               HorizontalAlignment="Center" 
                                               VerticalAlignment="Center" 
                                               FontSize="16"
                                               Foreground="{DynamicResource SecondaryForegroundColor}"/>
                                </Grid>
                            </TabItem>
                        </TabControl>
                    </TabItem>

                    <!-- 🛡️ DDoS 방어 탭 -->
                    <TabItem>
                        <TabItem.Header>
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Shield" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                <TextBlock Text="🛡️ DDoS 방어" VerticalAlignment="Center"/>
                            </StackPanel>
                        </TabItem.Header>
                        
                        <!-- DDoS 방어 서브 탭들 -->
                        <TabControl>
                            <!-- 실시간 모니터링 서브탭 -->
                            <TabItem Header="실시간 모니터링">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="200"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>

                                    <!-- 상단: DDoS 상태 대시보드 -->
                                    <Border Grid.Row="0" Background="{DynamicResource ButtonBackgroundColor}" CornerRadius="12" Margin="10" BorderBrush="#C2C2C2" BorderThickness="1" Padding="15">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>

                                            <!-- 위험 점수 -->
                                            <Border Grid.Column="0" Background="{DynamicResource BackgroundColor}" CornerRadius="8" Padding="15" Margin="0,0,10,0">
                                                <StackPanel>
                                                    <TextBlock Text="위험 점수" HorizontalAlignment="Center" Foreground="{DynamicResource ForegroundColor}" FontSize="14" FontWeight="SemiBold"/>
                                                    <TextBlock x:Name="RiskScoreText" Text="0" HorizontalAlignment="Center" Foreground="#4CAF50" FontSize="24" FontWeight="Bold" Margin="0,5,0,0"/>
                                                    <TextBlock x:Name="RiskStatusText" Text="정상" HorizontalAlignment="Center" Foreground="{DynamicResource SecondaryForegroundColor}" FontSize="12"/>
                                                </StackPanel>
                                            </Border>

                                            <!-- 공격 감지 수 -->
                                            <Border Grid.Column="1" Background="{DynamicResource BackgroundColor}" CornerRadius="8" Padding="15" Margin="0,0,10,0">
                                                <StackPanel>
                                                    <TextBlock Text="감지된 공격" HorizontalAlignment="Center" Foreground="{DynamicResource ForegroundColor}" FontSize="14" FontWeight="SemiBold"/>
                                                    <TextBlock x:Name="AttacksDetectedText" Text="0" HorizontalAlignment="Center" Foreground="#FF9800" FontSize="24" FontWeight="Bold" Margin="0,5,0,0"/>
                                                    <TextBlock Text="건" HorizontalAlignment="Center" Foreground="{DynamicResource SecondaryForegroundColor}" FontSize="12"/>
                                                </StackPanel>
                                            </Border>

                                            <!-- 차단된 IP -->
                                            <Border Grid.Column="2" Background="{DynamicResource BackgroundColor}" CornerRadius="8" Padding="15" Margin="0,0,10,0">
                                                <StackPanel>
                                                    <TextBlock Text="차단된 IP" HorizontalAlignment="Center" Foreground="{DynamicResource ForegroundColor}" FontSize="14" FontWeight="SemiBold"/>
                                                    <TextBlock x:Name="BlockedIPsText" Text="0" HorizontalAlignment="Center" Foreground="#F44336" FontSize="24" FontWeight="Bold" Margin="0,5,0,0"/>
                                                    <TextBlock Text="개" HorizontalAlignment="Center" Foreground="{DynamicResource SecondaryForegroundColor}" FontSize="12"/>
                                                </StackPanel>
                                            </Border>

                                            <!-- 트래픽 볼륨 -->
                                            <Border Grid.Column="3" Background="{DynamicResource BackgroundColor}" CornerRadius="8" Padding="15">
                                                <StackPanel>
                                                    <TextBlock Text="트래픽 볼륨" HorizontalAlignment="Center" Foreground="{DynamicResource ForegroundColor}" FontSize="14" FontWeight="SemiBold"/>
                                                    <TextBlock x:Name="TrafficVolumeText" Text="0.0" HorizontalAlignment="Center" Foreground="#2196F3" FontSize="24" FontWeight="Bold" Margin="0,5,0,0"/>
                                                    <TextBlock Text="Mbps" HorizontalAlignment="Center" Foreground="{DynamicResource SecondaryForegroundColor}" FontSize="12"/>
                                                </StackPanel>
                                            </Border>
                                        </Grid>
                                    </Border>

                                    <!-- 중간: 실시간 차트 -->
                                    <Border Grid.Row="1" Background="{DynamicResource ButtonBackgroundColor}" CornerRadius="12" Margin="10,0,10,10" BorderBrush="#C2C2C2" BorderThickness="1">
                                        <Grid Margin="15">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>

                                            <!-- 트래픽 차트 -->
                                            <Border Grid.Column="0" Background="{DynamicResource BackgroundColor}" CornerRadius="8" Padding="10" Margin="0,0,5,0">
                                                <StackPanel>
                                                    <TextBlock Text="트래픽 모니터링" HorizontalAlignment="Center" Foreground="{DynamicResource ForegroundColor}" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,10"/>
                                                    <lvc:CartesianChart x:Name="TrafficChart" Height="120"/>
                                                </StackPanel>
                                            </Border>

                                            <!-- 공격 유형별 차트 -->
                                            <Border Grid.Column="1" Background="{DynamicResource BackgroundColor}" CornerRadius="8" Padding="10" Margin="5,0,0,0">
                                                <StackPanel>
                                                    <TextBlock Text="공격 유형 분포" HorizontalAlignment="Center" Foreground="{DynamicResource ForegroundColor}" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,10"/>
                                                    <lvc:PieChart x:Name="AttackTypeChart" Height="120"/>
                                                </StackPanel>
                                            </Border>
                                        </Grid>
                                    </Border>

                                    <!-- 하단: 실시간 로그 -->
                                    <Border Grid.Row="2" Background="{DynamicResource ButtonBackgroundColor}" CornerRadius="12" Margin="10,0,10,20" BorderBrush="#C2C2C2" BorderThickness="1">
                                        <Grid Margin="15">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="*"/>
                                            </Grid.RowDefinitions>

                                            <!-- 헤더 -->
                                            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                                                <TextBlock Text="실시간 DDoS 알림" Foreground="{DynamicResource ForegroundColor}" FontSize="16" FontWeight="SemiBold"/>
                                                <Button x:Name="ClearAlertsButton" Content="지우기" Style="{DynamicResource RefreshButtonStyle}" Margin="10,0,0,0" Click="ClearAlerts_Click" Width="60" Height="25"/>
                                            </StackPanel>

                                            <!-- 알림 목록 -->
                                            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                                                <ItemsControl x:Name="DDoSAlertsPanel">
                                                    <ItemsControl.ItemTemplate>
                                                        <DataTemplate>
                                                            <Border Background="{DynamicResource BackgroundColor}" CornerRadius="5" Padding="10" Margin="0,2">
                                                                <Grid>
                                                                    <Grid.ColumnDefinitions>
                                                                        <ColumnDefinition Width="Auto"/>
                                                                        <ColumnDefinition Width="*"/>
                                                                        <ColumnDefinition Width="Auto"/>
                                                                    </Grid.ColumnDefinitions>

                                                                    <!-- 심각도 아이콘 -->
                                                                    <Border Grid.Column="0" Background="{Binding SeverityColor}" CornerRadius="3" Padding="5" Margin="0,0,10,0">
                                                                        <materialDesign:PackIcon Kind="{Binding SeverityIcon}" Foreground="White" Width="16" Height="16"/>
                                                                    </Border>

                                                                    <!-- 메시지 내용 -->
                                                                    <StackPanel Grid.Column="1">
                                                                        <TextBlock Text="{Binding Title}" FontWeight="SemiBold" Foreground="{DynamicResource ForegroundColor}"/>
                                                                        <TextBlock Text="{Binding Description}" Foreground="{DynamicResource SecondaryForegroundColor}" TextWrapping="Wrap"/>
                                                                        <TextBlock Text="{Binding SourceIP, StringFormat='출발지: {0}'}" Foreground="{DynamicResource SecondaryForegroundColor}" FontSize="11"/>
                                                                    </StackPanel>

                                                                    <!-- 시간 -->
                                                                    <TextBlock Grid.Column="2" Text="{Binding Timestamp, StringFormat='{}{0:HH:mm:ss}'}" 
                                                                               Foreground="{DynamicResource SecondaryForegroundColor}" FontSize="11" VerticalAlignment="Top"/>
                                                                </Grid>
                                                            </Border>
                                                        </DataTemplate>
                                                    </ItemsControl.ItemTemplate>
                                                </ItemsControl>
                                            </ScrollViewer>
                                        </Grid>
                                    </Border>
                                </Grid>
                            </TabItem>

                            <!-- 공격 기록 서브탭 -->
                            <TabItem Header="공격 기록">
                                <Grid Margin="10">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>

                                    <!-- 필터 영역 -->
                                    <Border Grid.Row="0" Background="{DynamicResource ButtonBackgroundColor}" CornerRadius="8" Padding="15" Margin="0,0,0,10" BorderBrush="#C2C2C2" BorderThickness="1">
                                        <StackPanel Orientation="Horizontal">
                                            <ComboBox x:Name="AttackTypeFilterComboBox" Width="150" materialDesign:HintAssist.Hint="공격 유형" Margin="0,0,10,0">
                                                <ComboBoxItem Content="모든 유형" IsSelected="True"/>
                                                <ComboBoxItem Content="SYN Flood"/>
                                                <ComboBoxItem Content="UDP Flood"/>
                                                <ComboBoxItem Content="HTTP Flood"/>
                                                <ComboBoxItem Content="Slowloris"/>
                                            </ComboBox>
                                            
                                            <ComboBox x:Name="SeverityFilterComboBox" Width="120" materialDesign:HintAssist.Hint="심각도" Margin="0,0,10,0">
                                                <ComboBoxItem Content="모든 심각도" IsSelected="True"/>
                                                <ComboBoxItem Content="낮음"/>
                                                <ComboBoxItem Content="보통"/>
                                                <ComboBoxItem Content="높음"/>
                                                <ComboBoxItem Content="심각"/>
                                            </ComboBox>
                                            
                                            <DatePicker x:Name="StartDatePicker" Width="120" materialDesign:HintAssist.Hint="시작 날짜" Margin="0,0,10,0"/>
                                            <DatePicker x:Name="EndDatePicker" Width="120" materialDesign:HintAssist.Hint="종료 날짜" Margin="0,0,10,0"/>
                                            
                                            <Button x:Name="ApplyFilterButton" Content="필터 적용" Style="{DynamicResource RefreshButtonStyle}" Click="ApplyAttackFilter_Click"/>
                                        </StackPanel>
                                    </Border>

                                    <!-- 공격 기록 목록 -->
                                    <DataGrid Grid.Row="1" x:Name="AttackHistoryDataGrid" 
                                              Background="{DynamicResource DataGridBackgroundColor}"
                                              Foreground="{DynamicResource DataGridForegroundColor}"
                                              AutoGenerateColumns="False"
                                              CanUserAddRows="False"
                                              CanUserDeleteRows="False"
                                              IsReadOnly="True"
                                              SelectionMode="Single"
                                              GridLinesVisibility="Horizontal"
                                              HeadersVisibility="Column">
                                        <DataGrid.Columns>
                                            <DataGridTextColumn Header="시간" Binding="{Binding DetectedAt, StringFormat='{}{0:yyyy-MM-dd HH:mm:ss}'}" Width="140"/>
                                            <DataGridTextColumn Header="공격 유형" Binding="{Binding AttackType}" Width="120"/>
                                            <DataGridTextColumn Header="심각도" Binding="{Binding Severity}" Width="80"/>
                                            <DataGridTextColumn Header="출발지 IP" Binding="{Binding SourceIP}" Width="120"/>
                                            <DataGridTextColumn Header="대상" Binding="{Binding TargetIP}" Width="120"/>
                                            <DataGridTextColumn Header="포트" Binding="{Binding TargetPort}" Width="80"/>
                                            <DataGridTextColumn Header="패킷 수" Binding="{Binding PacketCount, StringFormat='{}{0:N0}'}" Width="100"/>
                                            <DataGridTextColumn Header="공격 점수" Binding="{Binding AttackScore, StringFormat='{}{0:F1}'}" Width="100"/>
                                            <DataGridTextColumn Header="설명" Binding="{Binding AttackDescription}" Width="*"/>
                                        </DataGrid.Columns>
                                    </DataGrid>
                                </Grid>
                            </TabItem>

                            <!-- 시그니처 관리 서브탭 -->
                            <TabItem Header="시그니처 관리">
                                <Grid Margin="10">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <!-- 시그니처 통계 -->
                                    <Border Grid.Row="0" Background="{DynamicResource ButtonBackgroundColor}" CornerRadius="8" Padding="15" Margin="0,0,0,10" BorderBrush="#C2C2C2" BorderThickness="1">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>

                                            <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                                                <TextBlock Text="총 시그니처" Foreground="{DynamicResource ForegroundColor}" FontSize="12"/>
                                                <TextBlock x:Name="TotalSignaturesText" Text="0" Foreground="{DynamicResource ForegroundColor}" FontSize="20" FontWeight="Bold"/>
                                            </StackPanel>

                                            <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                                                <TextBlock Text="활성 시그니처" Foreground="{DynamicResource ForegroundColor}" FontSize="12"/>
                                                <TextBlock x:Name="ActiveSignaturesText" Text="0" Foreground="#4CAF50" FontSize="20" FontWeight="Bold"/>
                                            </StackPanel>

                                            <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                                                <TextBlock Text="매칭 성공률" Foreground="{DynamicResource ForegroundColor}" FontSize="12"/>
                                                <TextBlock x:Name="MatchSuccessRateText" Text="0%" Foreground="#2196F3" FontSize="20" FontWeight="Bold"/>
                                            </StackPanel>

                                            <StackPanel Grid.Column="3" HorizontalAlignment="Center">
                                                <TextBlock Text="마지막 업데이트" Foreground="{DynamicResource ForegroundColor}" FontSize="12"/>
                                                <TextBlock x:Name="LastUpdateText" Text="-" Foreground="{DynamicResource SecondaryForegroundColor}" FontSize="12"/>
                                            </StackPanel>
                                        </Grid>
                                    </Border>

                                    <!-- 시그니처 목록 -->
                                    <DataGrid Grid.Row="1" x:Name="SignatureDataGrid"
                                              Background="{DynamicResource DataGridBackgroundColor}"
                                              Foreground="{DynamicResource DataGridForegroundColor}"
                                              AutoGenerateColumns="False"
                                              CanUserAddRows="False"
                                              CanUserDeleteRows="False"
                                              IsReadOnly="True"
                                              SelectionMode="Single"
                                              GridLinesVisibility="Horizontal"
                                              HeadersVisibility="Column">
                                        <DataGrid.Columns>
                                            <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="120"/>
                                            <DataGridTextColumn Header="이름" Binding="{Binding Name}" Width="200"/>
                                            <DataGridTextColumn Header="공격 유형" Binding="{Binding AttackType}" Width="120"/>
                                            <DataGridTextColumn Header="심각도" Binding="{Binding Severity}" Width="80"/>
                                            <DataGridCheckBoxColumn Header="활성화" Binding="{Binding IsActive}" Width="70"/>
                                            <DataGridTextColumn Header="매칭 횟수" Binding="{Binding MatchCount}" Width="100"/>
                                            <DataGridTextColumn Header="설명" Binding="{Binding Description}" Width="*"/>
                                        </DataGrid.Columns>
                                    </DataGrid>

                                    <!-- 시그니처 관리 버튼들 -->
                                    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                                        <Button x:Name="RefreshSignaturesButton" Content="새로 고침" Style="{DynamicResource RefreshButtonStyle}" Margin="0,0,10,0" Click="RefreshSignatures_Click"/>
                                        <Button x:Name="LoadDefaultSignaturesButton" Content="기본 시그니처 로드" Style="{DynamicResource RefreshButtonStyle}" Margin="0,0,10,0" Click="LoadDefaultSignatures_Click"/>
                                        <Button x:Name="ExportSignaturesButton" Content="내보내기" Style="{DynamicResource RefreshButtonStyle}" Click="ExportSignatures_Click"/>
                                    </StackPanel>
                                </Grid>
                            </TabItem>
                        </TabControl>
                    </TabItem>
                </TabControl>
            </Border>
        </Grid>

        <!-- 로딩 오버레이 -->
        <Grid x:Name="LoadingOverlay" 
              Grid.Row="0" Grid.RowSpan="3" 
              Background="#80000000" 
              Visibility="Collapsed">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock x:Name="LoadingText" 
                           Text="네트워크 모니터링 초기화 중..." 
                           Foreground="White" 
                           FontSize="18" 
                           HorizontalAlignment="Center"
                           Margin="0,0,0,20"/>
                <ItemsControl x:Name="SpinnerItems" 
                              Width="50" Height="50">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <Canvas/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.RenderTransform>
                        <StaticResource ResourceKey="SpinnerRotate"/>
                    </ItemsControl.RenderTransform>
                </ItemsControl>
            </StackPanel>
        </Grid>
    </Grid>
</Page>
