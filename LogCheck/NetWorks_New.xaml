<Page x:Class="LogCheck.NetWorks_New"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
      xmlns:local="clr-namespace:LogCheck"
      xmlns:converters="clr-namespace:LogCheck.Converters"
      mc:Ignorable="d" 
      d:DesignHeight="1000" d:DesignWidth="1400"
      Title="네트워크 보안 모니터링" Background="Transparent">

    <Page.Resources>
        <RotateTransform x:Key="SpinnerRotate" CenterX="25" CenterY="25"/>
        <!-- <local:FileSizeConverter x:Key="FileSizeConverter"/> -->
        
        <!-- 컨버터들 -->
        <converters:WhitelistStatusToColorConverter x:Key="WhitelistStatusToColorConverter"/>
        <converters:SecurityRiskLevelToColorConverter x:Key="SecurityRiskLevelToColorConverter"/>
        <converters:WhitelistStatusToIconConverter x:Key="WhitelistStatusToIconConverter"/>
        <converters:ProtocolCountConverter x:Key="ProtocolCountConverter"/>

        <!-- 프로세스 상태별 색상 -->
        <SolidColorBrush x:Key="ProcessNormalColor" Color="#4CAF50"/>
        <SolidColorBrush x:Key="ProcessWarningColor" Color="#FF9800"/>
        <SolidColorBrush x:Key="ProcessDangerColor" Color="#F44336"/>
        <SolidColorBrush x:Key="ProcessUnknownColor" Color="#9E9E9E"/>
        
        <!-- 화이트리스트 프로세스 색상 -->
        <SolidColorBrush x:Key="ProcessWhitelistColor" Color="#2196F3"/>
        <SolidColorBrush x:Key="ProcessSystemColor" Color="#607D8B"/>

        <!-- 위험도별 색상 -->
        <SolidColorBrush x:Key="RiskLowColor" Color="#4CAF50"/>
        <SolidColorBrush x:Key="RiskMediumColor" Color="#FF9800"/>
        <SolidColorBrush x:Key="RiskHighColor" Color="#F44336"/>
        <SolidColorBrush x:Key="RiskCriticalColor" Color="#9C27B0"/>
        <SolidColorBrush x:Key="RiskSystemColor" Color="#607D8B"/>

        <!-- 위험도별 배경색 컨버터 -->
        <!-- <converters:RiskLevelToBackgroundConverter x:Key="RiskLevelToBackgroundConverter"/> -->
        <!-- <converters:RiskLevelToColorConverter x:Key="RiskLevelToColorConverter"/> -->
        <!-- <converters:AlertLevelToBackgroundConverter x:Key="AlertLevelToBackgroundConverter"/> -->

        <Style x:Key="RoundedScrollViewerStyle" TargetType="{x:Type ScrollViewer}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ScrollViewer}">
                        <Border CornerRadius="12"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            ClipToBounds="True">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <ScrollContentPresenter Grid.Column="0" Margin="{TemplateBinding Padding}"/>

                                <ScrollBar x:Name="PART_VerticalScrollBar"
                                       Grid.Column="1"
                                       Value="{TemplateBinding VerticalOffset}"
                                       Maximum="{TemplateBinding ScrollableHeight}"
                                       ViewportSize="{TemplateBinding ViewportHeight}"
                                       Visibility="{TemplateBinding ComputedVerticalScrollBarVisibility}"/>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid>
        <!-- 프로세스 및 네트워크 연결 테이블 -->
        <Border Background="{DynamicResource ButtonBackgroundColor}" CornerRadius="12" Margin="10,5,10,0" BorderBrush="#C2C2C2" BorderThickness="1">
            <Grid Margin="15">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- 테이블 제목 및 필터 -->
                <StackPanel Grid.Row="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,15">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="10,0,0,0" VerticalAlignment="Center">
                            <TextBlock Text="실시간 프로세스-네트워크 연결" 
                                   Foreground="{DynamicResource ForegroundColor}" 
                                   FontSize="20" 
                                   FontWeight="SemiBold"
                                   Margin="0,0,10,0"
                                   VerticalAlignment="Center"/>

                            <TextBox x:Name="SearchTextBox"                                                                      
                                     VerticalContentAlignment="Center"
                                     Width="200"
                                     Height="30"
                                     materialDesign:HintAssist.Hint="프로세스명, IP, 포트로 검색"
                                     Margin="0,0,10,0"
                                     TextChanged="Search_TextChanged"/>

                            <ComboBox x:Name="ProtocolFilterComboBox"
                                      VerticalContentAlignment="Center"
                                      Width="120"
                                      Height="30"
                                      materialDesign:HintAssist.Hint="프로토콜"
                                      SelectionChanged="ProtocolFilter_SelectionChanged">
                                <ComboBoxItem Content="모든 프로토콜" IsSelected="True"/>
                                <ComboBoxItem Content="TCP"/>
                                <ComboBoxItem Content="UDP"/>
                                <ComboBoxItem Content="ICMP"/>
                            </ComboBox>
                        </StackPanel>

                        <StackPanel Grid.Column="1" Margin="10,0,0,0" Orientation="Horizontal" VerticalAlignment="Center">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <ComboBox Grid.Column="0"
                                          x:Name="NetworkInterfaceComboBox"                                       
                                          Width="150"   
                                          Height="30"
                                          VerticalContentAlignment="Center"
                                          Margin="0,0,15,0"
                                          materialDesign:HintAssist.Hint="네트워크 인터페이스 선택"/>

                                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                                    
                                    <Button x:Name="StartMonitoringButton"
                                            Content="모니터링 시작"
                                            Style="{DynamicResource RefreshButtonStyle}"
                                            Click="StartMonitoring_Click"
                                            Width="120" Height="30"
                                            Margin="0,0,8,0">
                                    </Button>

                                    <Button x:Name="StopMonitoringButton"
                                            Content="모니터링 중지"
                                            Style="{DynamicResource RefreshButtonStyle}"
                                            Click="StopMonitoring_Click"
                                            Width="120" Height="30"
                                            Margin="0,0,8,0"
                                            Visibility="Collapsed">
                                    </Button>

                                    <Button x:Name="RefreshButton"
                                            Content="새로고침"
                                            Style="{DynamicResource RefreshButtonStyle}"
                                            Click="Refresh_Click"
                                            VerticalAlignment="Center"
                                            Width="100" Height="30" 
                                            Margin="0,0,8,0">
                                    </Button>

                                    <Button x:Name="OpenSettingsButton"
                                            Style="{DynamicResource StartMonitoringButtonStyle}"
                                            Click="OpenSettings_Click"
                                            Width="40" Height="30" 
                                            Margin="0,0,0,0"
                                            ToolTip="설정">
                                        <materialDesign:PackIcon Kind="Cog" Width="20" Height="20"/>
                                    </Button>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Grid>
                </StackPanel>

                <!-- 상태 표시 -->
                <Border Grid.Row="1" Background="{DynamicResource BackgroundColor}" CornerRadius="8" Padding="10" Margin="0,0,0,15">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="모니터링 상태: " 
                                       Foreground="{DynamicResource ForegroundColor}" 
                                       FontWeight="SemiBold"/>
                        <TextBlock x:Name="MonitoringStatusText"
                                       Text="대기 중" 
                                       Foreground="{DynamicResource SecondaryForegroundColor}" 
                                       Margin="5,0,0,0"/>

                        <TextBlock Text="| 활성 연결: " 
                                       Foreground="{DynamicResource ForegroundColor}" 
                                       FontWeight="SemiBold"
                                       Margin="20,0,0,0"/>
                        <TextBlock x:Name="ActiveConnectionsText"
                                       Text="0" 
                                       Foreground="{DynamicResource PrimaryColor}" 
                                       FontWeight="Bold"
                                       Margin="5,0,0,0"/>

                        <TextBlock Text="| 위험 연결: " 
                                       Foreground="{DynamicResource ForegroundColor}" 
                                       FontWeight="SemiBold"
                                       Margin="20,0,0,0"/>
                        <TextBlock x:Name="DangerousConnectionsText"
                                       Text="0" 
                                       Foreground="{DynamicResource ProcessDangerColor}" 
                                       FontWeight="Bold"
                                       Margin="5,0,0,0"/>
                    </StackPanel>
                </Border>

                <TabControl Grid.Row="2">
                    <!-- 프로세스-네트워크 연결 테이블 -->
                    <!-- 일반 프로세스 탭 (그룹화된 뷰) -->
                    <TabItem Header="일반 프로세스 (그룹화)">
                        <DataGrid x:Name="GroupedProcessDataGrid"
                                  AutoGenerateColumns="False"
                                  IsReadOnly="True"
                                  Background="{DynamicResource DataGridBackgroundColor}"
                                  Foreground="{DynamicResource DataGridForegroundColor}" 
                                  BorderThickness="0"
                                  GridLinesVisibility="None"
                                  RowBackground="{DynamicResource DataGridRowBackgroundColor}" 
                                  AlternatingRowBackground="{DynamicResource DataGridAlternatingRowBackgroundColor}"
                                  RowHeight="45"
                                  HeadersVisibility="Column"
                                  CanUserResizeRows="False"
                                  SelectionMode="Single"
                                  SelectionChanged="ProcessNetworkDataGrid_SelectionChanged"
                                  HorizontalScrollBarVisibility="Auto"
                                  VerticalScrollBarVisibility="Auto">

                            <DataGrid.ColumnHeaderStyle>
                                <Style TargetType="DataGridColumnHeader">
                                    <Setter Property="Background" Value="{DynamicResource BackgroundColor}"/>
                                    <Setter Property="Foreground" Value="{DynamicResource ForegroundColor}"/>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                    <Setter Property="Padding" Value="10,8"/>
                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                </Style>
                            </DataGrid.ColumnHeaderStyle>

                            <!-- 그룹화 스타일 정의 -->
                            <DataGrid.GroupStyle>
                                <GroupStyle>
                                    <GroupStyle.HeaderTemplate>
                                        <DataTemplate>
                                            <Border Background="{DynamicResource PrimaryColor}" 
                                                    CornerRadius="5" 
                                                    Padding="10,8" 
                                                    Margin="5,5,5,0">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="300"/>
                                                        <ColumnDefinition Width="100"/>
                                                        <ColumnDefinition Width="150"/>
                                                        <ColumnDefinition Width="120"/>
                                                        <ColumnDefinition Width="100"/>
                                                        <ColumnDefinition Width="140"/>
                                                    </Grid.ColumnDefinitions>

                                                    <!-- 프로세스 그룹 정보 -->
                                                    <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                                                        <!-- 위험도 표시 -->
                                                        <Ellipse Width="10" Height="10" 
                                                                 Fill="{Binding Items[0].RiskLevel, Converter={StaticResource SecurityRiskLevelToColorConverter}, Mode=OneWay}" 
                                                                 Margin="0,0,8,0"/>

                                                        <!-- 화이트리스트 표시 -->
                                                        <TextBlock Text="{Binding Items[0].IsWhitelisted, Converter={StaticResource WhitelistStatusToIconConverter}, Mode=OneWay}" 
                                                                   Foreground="{Binding Items[0].IsWhitelisted, Converter={StaticResource WhitelistStatusToColorConverter}, Mode=OneWay}"
                                                                   FontSize="14" Margin="0,0,6,0" VerticalAlignment="Center"/>

                                                        <!-- 프로세스 정보 -->
                                                        <StackPanel>
                                                            <StackPanel Orientation="Horizontal">
                                                                <TextBlock Text="{Binding Items[0].ProcessName, Mode=OneWay}" 
                                                                           FontWeight="Bold" 
                                                                           FontSize="14"
                                                                           Foreground="White"/>
                                                                <TextBlock Text="{Binding ItemCount, StringFormat=' ({0}개 연결)', Mode=OneWay}" 
                                                                           FontWeight="SemiBold" 
                                                                           FontSize="12"
                                                                           Foreground="#E0E0E0"
                                                                           Margin="5,0,0,0"/>
                                                            </StackPanel>
                                                            <TextBlock FontSize="11" Foreground="#E0E0E0">
                                                                <Run Text="PID: "/>
                                                                <Run Text="{Binding Name, Mode=OneWay}"/>
                                                            </TextBlock>
                                                        </StackPanel>
                                                    </StackPanel>

                                                    <!-- 활성 연결 수 -->
                                                    <TextBlock Grid.Column="1" 
                                                               Text="{Binding ItemCount}" 
                                                               HorizontalAlignment="Center" 
                                                               VerticalAlignment="Center"
                                                               FontWeight="Bold"
                                                               FontSize="14"
                                                               Foreground="White"/>

                                                    <!-- 프로토콜 요약 -->
                                                    <StackPanel Grid.Column="2" 
                                                                VerticalAlignment="Center" 
                                                                HorizontalAlignment="Center">
                                                        <TextBlock FontSize="11" Foreground="White" HorizontalAlignment="Center">
                                                            <Run Text="TCP: "/>
                                                            <Run Text="{Binding Items, Converter={StaticResource ProtocolCountConverter}, ConverterParameter='TCP', Mode=OneWay}"/>
                                                            <Run Text=" | UDP: "/>
                                                            <Run Text="{Binding Items, Converter={StaticResource ProtocolCountConverter}, ConverterParameter='UDP', Mode=OneWay}"/>
                                                        </TextBlock>
                                                    </StackPanel>

                                                    <!-- 총 데이터 전송량 (임시) -->
                                                    <TextBlock Grid.Column="3" 
                                                               Text="0 bytes" 
                                                               HorizontalAlignment="Center" 
                                                               VerticalAlignment="Center"
                                                               FontSize="11" 
                                                               Foreground="White"/>

                                                    <!-- 최고 위험도 -->
                                                    <Border Grid.Column="4" 
                                                            CornerRadius="4" 
                                                            Padding="8,4" 
                                                            VerticalAlignment="Center" 
                                                            HorizontalAlignment="Center">
                                                        <Border.Style>
                                                            <Style TargetType="Border">
                                                                <Setter Property="Background" Value="#607D8B"/>
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding Items[0].RiskLevel, Mode=OneWay}" Value="Low">
                                                                        <Setter Property="Background" Value="#4CAF50"/>
                                                                    </DataTrigger>
                                                                    <DataTrigger Binding="{Binding Items[0].RiskLevel, Mode=OneWay}" Value="Medium">
                                                                        <Setter Property="Background" Value="#F39C12"/>
                                                                    </DataTrigger>
                                                                    <DataTrigger Binding="{Binding Items[0].RiskLevel, Mode=OneWay}" Value="High">
                                                                        <Setter Property="Background" Value="#E74C3C"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </Border.Style>
                                                        <TextBlock Text="{Binding Items[0].RiskLevel, Mode=OneWay}" 
                                                                   Foreground="White" 
                                                                   FontWeight="Bold"
                                                                   HorizontalAlignment="Center" 
                                                                   FontSize="11"/>
                                                    </Border>

                                                    <!-- 그룹 액션 버튼들 -->
                                                    <StackPanel Grid.Column="5" 
                                                                Orientation="Horizontal" 
                                                                HorizontalAlignment="Center" 
                                                                VerticalAlignment="Center">
                                                        <Button Content="전체 차단" 
                                                                Background="#E53E3E"
                                                                Foreground="White"
                                                                BorderBrush="Transparent"
                                                                Width="70" 
                                                                Height="25"
                                                                FontSize="10"
                                                                Click="BlockGroupConnections_Click"/>
                                                        <Button Content="전체 종료" 
                                                                Background="#9F7AEA"
                                                                Foreground="White"
                                                                BorderBrush="Transparent"
                                                                Width="70" 
                                                                Height="25"
                                                                FontSize="10"
                                                                Margin="5,0,0,0" 
                                                                Click="TerminateGroupProcess_Click"/>
                                                    </StackPanel>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </GroupStyle.HeaderTemplate>

                                    <GroupStyle.ContainerStyle>
                                        <Style TargetType="{x:Type GroupItem}">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="{x:Type GroupItem}">
                                                        <Expander IsExpanded="True" 
                                                                  Background="Transparent"
                                                                  BorderThickness="0">
                                                            <Expander.Header>
                                                                <ContentPresenter Content="{TemplateBinding Content}" 
                                                                                  ContentTemplate="{TemplateBinding ContentTemplate}"/>
                                                            </Expander.Header>
                                                            <ItemsPresenter Margin="10,0,0,10"/>
                                                        </Expander>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </GroupStyle.ContainerStyle>
                                </GroupStyle>
                            </DataGrid.GroupStyle>

                            <!-- 컬럼 정의 (개별 연결 정보) -->
                            <DataGrid.Columns>
                                <DataGridTemplateColumn Header="로컬 주소" Width="120">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding LocalAddress}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>

                                <DataGridTemplateColumn Header="원격 주소" Width="120">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding RemoteAddress}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>

                                <DataGridTemplateColumn Header="프로토콜" Width="80">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding Protocol}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>

                                <DataGridTemplateColumn Header="상태" Width="100">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding ConnectionState}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>

                                <DataGridTemplateColumn Header="연결 시간" Width="100">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding ConnectionDuration, StringFormat='{}{0:hh\\:mm\\:ss}'}" 
                                                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>

                                <DataGridTemplateColumn Header="데이터 전송" Width="120">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                                <TextBlock Text="{Binding DataTransferred}" HorizontalAlignment="Center"/>
                                                <TextBlock Text="{Binding DataRate, StringFormat='{}{0:F1} KB/s'}" 
                                                           FontSize="10" Foreground="{DynamicResource SecondaryForegroundColor}" HorizontalAlignment="Center"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>

                                <DataGridTemplateColumn Header="위험도" Width="80">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Border CornerRadius="4" Padding="8,4" VerticalAlignment="Center" HorizontalAlignment="Center">
                                                <Border.Style>
                                                    <Style TargetType="Border">
                                                        <Setter Property="Background" Value="Gray"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding RiskLevel}" Value="Low">
                                                                <Setter Property="Background" Value="#4CAF50"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding RiskLevel}" Value="Medium">
                                                                <Setter Property="Background" Value="#F39C12"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding RiskLevel}" Value="High">
                                                                <Setter Property="Background" Value="#E74C3C"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Border.Style>
                                                <TextBlock Text="{Binding RiskLevel}" Foreground="White" FontWeight="SemiBold"
                                                           HorizontalAlignment="Center" FontSize="11"/>
                                            </Border>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>

                                <DataGridTemplateColumn Header="액션" Width="140">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                                                <Button Content="차단" Style="{DynamicResource BlockButtonStyle}"
                                                        Width="60" Height="25" Click="BlockConnection_Click" Tag="{Binding}"/>
                                                <Button Content="종료" Style="{DynamicResource TerminateButtonStyle}" Width="60" Height="25"
                                                        Margin="5,0,0,0" Click="TerminateProcess_Click" Tag="{Binding}"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </TabItem>

                    <!-- 기존 일반 프로세스 탭 (상세 뷰) -->
                    <TabItem Header="일반 프로세스 (상세)">
                        <DataGrid x:Name="GeneralProcessDataGrid"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          Background="{DynamicResource DataGridBackgroundColor}"
                          Foreground="{DynamicResource DataGridForegroundColor}" 
                          BorderThickness="0"
                          GridLinesVisibility="None"
                          RowBackground="{DynamicResource DataGridRowBackgroundColor}" 
                          AlternatingRowBackground="{DynamicResource DataGridAlternatingRowBackgroundColor}"
                          RowHeight="45"
                          HeadersVisibility="Column"
                          CanUserResizeRows="False"
                          SelectionMode="Single"
                          SelectionChanged="ProcessNetworkDataGrid_SelectionChanged"
                          HorizontalScrollBarVisibility="Auto"
                          VerticalScrollBarVisibility="Auto">

                            <DataGrid.ColumnHeaderStyle>
                                <Style TargetType="DataGridColumnHeader">
                                    <Setter Property="Background" Value="{DynamicResource BackgroundColor}"/>
                                    <Setter Property="Foreground" Value="{DynamicResource ForegroundColor}"/>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                    <Setter Property="Padding" Value="10,8"/>
                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                </Style>
                            </DataGrid.ColumnHeaderStyle>

                            <DataGrid.Columns>
                                <DataGridTemplateColumn Header="프로세스" Width="200">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal" Margin="5" HorizontalAlignment="Left">
                                                <Ellipse Width="8" Height="8" 
                                                         Fill="{Binding RiskLevel, Converter={StaticResource SecurityRiskLevelToColorConverter}}" 
                                                         Margin="0,0,8,0"/>
                                                <TextBlock Text="{Binding IsWhitelisted, Converter={StaticResource WhitelistStatusToIconConverter}}" 
                                                           Foreground="{Binding IsWhitelisted, Converter={StaticResource WhitelistStatusToColorConverter}}"
                                                           FontSize="12" Margin="0,0,4,0" VerticalAlignment="Center"/>
                                                <StackPanel>
                                                    <TextBlock Text="{Binding ProcessName}" FontWeight="SemiBold" 
                                                               Foreground="{DynamicResource ForegroundColor}"/>
                                                    <TextBlock Text="{Binding ProcessId, StringFormat='PID: {0}'}" FontSize="11" 
                                                               Foreground="{DynamicResource SecondaryForegroundColor}"/>
                                                </StackPanel>
                                            </StackPanel>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>

                                <DataGridTemplateColumn Header="로컬 주소" Width="120">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding LocalAddress}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>

                                <DataGridTemplateColumn Header="원격 주소" Width="120">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding RemoteAddress}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>

                                <DataGridTemplateColumn Header="프로토콜" Width="80">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding Protocol}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>

                                <DataGridTemplateColumn Header="상태" Width="100">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding ConnectionState}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>

                                <DataGridTemplateColumn Header="연결 시간" Width="100">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding ConnectionDuration, StringFormat='{}{0:hh\\:mm\\:ss}'}" 
                                                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>

                                <DataGridTemplateColumn Header="데이터 전송" Width="120">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                                <TextBlock Text="{Binding DataTransferred}" HorizontalAlignment="Center"/>
                                                <TextBlock Text="{Binding DataRate, StringFormat='{}{0:F1} KB/s'}" 
                                                           FontSize="10" Foreground="{DynamicResource SecondaryForegroundColor}" HorizontalAlignment="Center"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>

                                <DataGridTemplateColumn Header="위험도" Width="80">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Border CornerRadius="4" Padding="8,4" VerticalAlignment="Center">
                                                <Border.Style>
                                                    <Style TargetType="Border">
                                                        <Setter Property="Background" Value="Gray"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding RiskLevel}" Value="Low">
                                                                <Setter Property="Background" Value="#4CAF50"/>
                                                                <!-- 초록 -->
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding RiskLevel}" Value="Medium">
                                                                <Setter Property="Background" Value="#F39C12"/>
                                                                <!-- 주황 -->
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding RiskLevel}" Value="High">
                                                                <Setter Property="Background" Value="#E74C3C"/>
                                                                <!-- 빨강 -->
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Border.Style>

                                                <TextBlock Text="{Binding RiskLevel}" Foreground="White" FontWeight="SemiBold"
                                                           HorizontalAlignment="Center" FontSize="11"/>
                                            </Border>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>

                                <DataGridTemplateColumn Header="액션" Width="140">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                                                <Button Content="차단" Style="{DynamicResource BlockButtonStyle}"
                                                        Width="60" Height="25" Click="BlockConnection_Click" Tag="{Binding}"/>
                                                <Button Content="종료" Style="{DynamicResource TerminateButtonStyle}" Width="60" Height="25"
                                                        Margin="5,0,0,0" Click="TerminateProcess_Click" Tag="{Binding}"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </TabItem>

                    <!-- 시스템 프로세스 탭 -->
                    <TabItem Header="시스템 프로세스">
                        <DataGrid x:Name="SystemProcessDataGrid"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          Background="{DynamicResource DataGridBackgroundColor}"
                          Foreground="{DynamicResource DataGridForegroundColor}" 
                          BorderThickness="0"
                          GridLinesVisibility="None"
                          RowBackground="{DynamicResource DataGridRowBackgroundColor}" 
                          AlternatingRowBackground="{DynamicResource DataGridAlternatingRowBackgroundColor}"
                          RowHeight="45"
                          HeadersVisibility="Column"
                          CanUserResizeRows="False"
                          SelectionMode="Single"
                          SelectionChanged="ProcessNetworkDataGrid_SelectionChanged"
                          HorizontalScrollBarVisibility="Auto"
                          VerticalScrollBarVisibility="Auto">

                            <DataGrid.ColumnHeaderStyle>
                                <Style TargetType="DataGridColumnHeader">
                                    <Setter Property="Background" Value="{DynamicResource BackgroundColor}"/>
                                    <Setter Property="Foreground" Value="{DynamicResource ForegroundColor}"/>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                    <Setter Property="Padding" Value="10,8"/>
                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                </Style>
                            </DataGrid.ColumnHeaderStyle>

                            <DataGrid.Columns>
                                <DataGridTemplateColumn Header="프로세스" Width="200">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal" Margin="5" HorizontalAlignment="Left">
                                                <Ellipse Width="8" Height="8" Fill="Gray" Margin="0,0,8,0"/>
                                                <StackPanel>
                                                    <TextBlock Text="{Binding ProcessName}" FontWeight="SemiBold" 
                                           Foreground="{DynamicResource ForegroundColor}"/>
                                                    <TextBlock Text="{Binding ProcessId, StringFormat='PID: {0}'}" FontSize="11" 
                                           Foreground="{DynamicResource SecondaryForegroundColor}"/>
                                                </StackPanel>
                                            </StackPanel>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>

                                <DataGridTemplateColumn Header="로컬 주소" Width="120">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding LocalAddress}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>

                                <DataGridTemplateColumn Header="원격 주소" Width="120">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding RemoteAddress}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>

                                <DataGridTemplateColumn Header="프로토콜" Width="80">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding Protocol}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>

                                <DataGridTemplateColumn Header="상태" Width="100">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding ConnectionState}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>

                                <DataGridTemplateColumn Header="연결 시간" Width="100">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding ConnectionDuration, StringFormat='{}{0:hh\\:mm\\:ss}'}" 
                                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>

                                <DataGridTemplateColumn Header="데이터 전송" Width="120">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                                <TextBlock Text="{Binding DataTransferred}" HorizontalAlignment="Center"/>
                                                <TextBlock Text="{Binding DataRate, StringFormat='{}{0:F1} KB/s'}" 
                                       FontSize="10" Foreground="{DynamicResource SecondaryForegroundColor}" HorizontalAlignment="Center"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>

                                <DataGridTemplateColumn Header="위험도" Width="80">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Border CornerRadius="4" Padding="8,4" VerticalAlignment="Center">
                                                <Border.Style>
                                                    <Style TargetType="Border">
                                                        <Setter Property="Background" Value="Gray"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding RiskLevel}" Value="Low">
                                                                <Setter Property="Background" Value="#4CAF50"/>
                                                                <!-- 초록 -->
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding RiskLevel}" Value="Medium">
                                                                <Setter Property="Background" Value="#F39C12"/>
                                                                <!-- 주황 -->
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding RiskLevel}" Value="High">
                                                                <Setter Property="Background" Value="#E74C3C"/>
                                                                <!-- 빨강 -->
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Border.Style>

                                                <TextBlock Text="{Binding RiskLevel}" Foreground="White" FontWeight="SemiBold"
                                       HorizontalAlignment="Center" FontSize="11"/>
                                            </Border>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>

                                <DataGridTemplateColumn Header="액션" Width="140">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                                                <Button Content="차단" Style="{DynamicResource BlockButtonStyle}"
                                    Width="60" Height="25" Click="BlockConnection_Click" Tag="{Binding}"/>
                                                <Button Content="종료" Style="{DynamicResource TerminateButtonStyle}" Width="60" Height="25"
                                    Margin="5,0,0,0" Click="TerminateProcess_Click" Tag="{Binding}"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </TabItem>

                    <TabItem Header="보안 상태 및 차트">
                        <!-- 보안 상태 및 차트 / 로그 및 상태 -->
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="2*"/>
                                <RowDefinition Height="1*"/>
                            </Grid.RowDefinitions>

                            <!-- 상단: 보안 상태 및 차트 -->
                            <Border Grid.Row="0" Background="{DynamicResource ButtonBackgroundColor}" CornerRadius="12" Margin="10,10,10,0" BorderBrush="#C2C2C2" BorderThickness="1" ClipToBounds="True">

                                <Grid Margin="15">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <Border Grid.Column="0" Background="{DynamicResource BackgroundColor}" CornerRadius="8" Padding="15" Margin="0,0,10,0">
                                        <StackPanel>
                                            <TextBlock Text="보안 상태 요약" Foreground="{DynamicResource ForegroundColor}" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,10"/>
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                </Grid.RowDefinitions>
                                                <StackPanel Grid.Column="0" Grid.Row="0" Margin="0,0,10,0">
                                                    <TextBlock Text="위험도별 연결" Foreground="{DynamicResource SecondaryForegroundColor}" FontSize="12"/>
                                                    <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                                        <Border Background="{StaticResource RiskLowColor}" CornerRadius="4" Padding="8,4" Margin="0,0,5,0">
                                                            <TextBlock Text="낮음" Foreground="White" FontSize="11"/>
                                                        </Border>
                                                        <TextBlock Text="{Binding LowRiskCount}" Foreground="{DynamicResource ForegroundColor}" FontWeight="Bold" VerticalAlignment="Center" Margin="5,0,0,0"/>
                                                    </StackPanel>
                                                    <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                                        <Border Background="{StaticResource RiskMediumColor}" CornerRadius="4" Padding="8,4" Margin="0,0,5,0">
                                                            <TextBlock Text="보통" Foreground="White" FontSize="11"/>
                                                        </Border>
                                                        <TextBlock Text="{Binding MediumRiskCount}" Foreground="{DynamicResource ForegroundColor}" FontWeight="Bold" VerticalAlignment="Center" Margin="5,0,0,0"/>
                                                    </StackPanel>
                                                    <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                                        <Border Background="{StaticResource RiskHighColor}" CornerRadius="4" Padding="8,4" Margin="0,0,5,0">
                                                            <TextBlock Text="높음" Foreground="White" FontSize="11"/>
                                                        </Border>
                                                        <TextBlock Text="{Binding HighRiskCount}" Foreground="{DynamicResource ForegroundColor}" FontWeight="Bold" VerticalAlignment="Center" Margin="5,0,0,0"/>
                                                    </StackPanel>
                                                </StackPanel>
                                                <StackPanel Grid.Column="1" Grid.Row="0" Margin="10,0,0,0">
                                                    <TextBlock Text="프로토콜별 통계" Foreground="{DynamicResource SecondaryForegroundColor}" FontSize="12"/>
                                                    <TextBlock Text="{Binding TcpCount, StringFormat='TCP: {0}'}" Foreground="{DynamicResource ForegroundColor}" Margin="0,5,0,0"/>
                                                    <TextBlock Text="{Binding UdpCount, StringFormat='UDP: {0}'}" Foreground="{DynamicResource ForegroundColor}" Margin="0,2,0,0"/>
                                                    <TextBlock Text="{Binding IcmpCount, StringFormat='ICMP: {0}'}" Foreground="{DynamicResource ForegroundColor}" Margin="0,2,0,0"/>
                                                </StackPanel>
                                                <StackPanel Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2" Margin="0,15,0,0">
                                                    <TextBlock Text="전체 통계" Foreground="{DynamicResource SecondaryForegroundColor}" FontSize="12"/>
                                                    <Grid Margin="0,5,0,0">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="*"/>
                                                        </Grid.ColumnDefinitions>
                                                        <TextBlock Grid.Column="0" Text="{Binding TotalConnections, StringFormat='총 연결: {0}'}" Foreground="{DynamicResource ForegroundColor}" FontWeight="SemiBold"/>
                                                        <TextBlock Grid.Column="1" Text="{Binding TotalDataTransferred, StringFormat='총 데이터: {0}'}" Foreground="{DynamicResource ForegroundColor}" FontWeight="SemiBold"/>
                                                    </Grid>
                                                </StackPanel>
                                            </Grid>
                                        </StackPanel>
                                    </Border>

                                    <Border Grid.Column="1" Background="{DynamicResource BackgroundColor}" CornerRadius="8" Padding="15" Margin="0,0,10,0">
                                        <StackPanel>
                                            <TextBlock Text="실시간 네트워크 활동" Foreground="{DynamicResource ForegroundColor}" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,10"/>
                                            <lvc:CartesianChart x:Name="NetworkActivityChart" Height="250" Series="{Binding ChartSeries}" XAxes="{Binding ChartXAxes}" YAxes="{Binding ChartYAxes}"/>
                                        </StackPanel>
                                    </Border>

                                    <Border Grid.Column="2" Background="{DynamicResource BackgroundColor}" CornerRadius="8" Padding="15" Margin="0,0,0,0">
                                        <StackPanel>
                                            <TextBlock Text="보안 경고 및 권장 조치" Foreground="{DynamicResource ForegroundColor}" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,10"/>
                                            <ScrollViewer Height="270" VerticalScrollBarVisibility="Auto">
                                                <ItemsControl x:Name="SecurityAlertsControl">

                                                    <ItemsControl.ItemTemplate>
                                                        <DataTemplate>
                                                            <Border Background="Gray" CornerRadius="6" Padding="10" Margin="0,0,0,8">
                                                                <StackPanel>
                                                                    <TextBlock Text="{Binding Title}" Foreground="White" FontWeight="SemiBold" Margin="0,0,0,5"/>
                                                                    <TextBlock Text="{Binding Description}" Foreground="White" FontSize="12" TextWrapping="Wrap" Margin="0,0,0,8"/>
                                                                    <TextBlock Text="{Binding RecommendedAction}" Foreground="White" FontSize="11" FontStyle="Italic"/>
                                                                </StackPanel>
                                                            </Border>
                                                        </DataTemplate>
                                                    </ItemsControl.ItemTemplate>
                                                </ItemsControl>
                                            </ScrollViewer>
                                        </StackPanel>
                                    </Border>
                                </Grid>
                            </Border>

                            <!-- 하단: 로그 및 상태 표시 -->
                            <Border Grid.Row="2" Background="{DynamicResource ButtonBackgroundColor}" CornerRadius="12" Padding="15" Margin="10,10,10,10" BorderBrush="#C2C2C2" BorderThickness="1">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="1*"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="2*"/>
                                    </Grid.RowDefinitions>

                                    <!-- 모니터링 상태 + 런타임 구성 요약 -->
                                    <StackPanel Grid.Row="0" Orientation="Vertical" VerticalAlignment="Center">
                                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                            <Ellipse x:Name="MonitoringStatusIndicator" Width="12" Height="12" 
                                                     Fill="Gray" Margin="0,0,8,0"/>
                                            <TextBlock x:Name="MonitoringStatusText2" Text="대기 중" 
                                                       Foreground="{DynamicResource SecondaryForegroundColor}" FontSize="12"/>
                                        </StackPanel>
                                        <TextBlock x:Name="RuntimeConfigText"
                                                   Text="NIC: 자동 선택 | BPF: tcp or udp or icmp"
                                                   Foreground="{DynamicResource SecondaryForegroundColor}"
                                                   FontSize="11"
                                                   Margin="0,4,0,0"/>
                                    </StackPanel>

                                    <Border Grid.Row="1" Height="1" Background="#CCCCCC" Margin="0,0,0,0"/>

                                    <!-- 로그 표시 -->
                                    <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto" Height="83">
                                        <ItemsControl x:Name="LogMessagesControl">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <TextBlock Text="{Binding}" 
                                                               Foreground="{DynamicResource SecondaryForegroundColor}" 
                                                               FontSize="11"
                                                               Margin="0,2,0,0"
                                                               TextWrapping="Wrap"/>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </ScrollViewer>
                                </Grid>
                            </Border>
                        </Grid>
                    </TabItem>
                </TabControl>
            </Grid>
        </Border>

        <!-- 로딩 오버레이 -->
        <Grid x:Name="LoadingOverlay" 
              Grid.Row="0" Grid.RowSpan="3" 
              Background="#80000000" 
              Visibility="Collapsed">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock x:Name="LoadingText" 
                           Text="네트워크 모니터링 초기화 중..." 
                           Foreground="White" 
                           FontSize="18" 
                           HorizontalAlignment="Center"
                           Margin="0,0,0,20"/>
                <ItemsControl x:Name="SpinnerItems" 
                              Width="50" Height="50">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <Canvas/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.RenderTransform>
                        <StaticResource ResourceKey="SpinnerRotate"/>
                    </ItemsControl.RenderTransform>
                </ItemsControl>
            </StackPanel>
        </Grid>
    </Grid>
</Page>
