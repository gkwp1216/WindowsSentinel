                                </Grid>
                            </Border>

                            <!-- 차단된 연결 목록 -->
                            <Border Grid.Row="1" Background="{DynamicResource BackgroundColor}" 
                                    CornerRadius="8" Padding="10" Margin="0,0,0,5">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Grid.Row="0" Text="차단된 연결" 
                                               FontWeight="Bold" FontSize="14"
                                               Margin="0,0,0,10"
                                               Foreground="{DynamicResource PrimaryForegroundColor}"/>

                                    <DataGrid Grid.Row="1" x:Name="BlockedConnectionsDataGrid"
                                              ItemsSource="{Binding BlockedConnections}"
                                              AutoGenerateColumns="False"
                                              HeadersVisibility="Column"
                                              GridLinesVisibility="Horizontal"
                                              CanUserResizeColumns="True"
                                              CanUserSortColumns="True"
                                              Background="{DynamicResource DataGridBackgroundColor}"
                                              Foreground="{DynamicResource DataGridForegroundColor}">
                                        <DataGrid.Columns>
                                            <DataGridTextColumn Header="시간" Binding="{Binding BlockedAt, StringFormat=HH:mm:ss}" Width="80"/>
                                            <DataGridTextColumn Header="프로세스" Binding="{Binding ProcessName}" Width="120"/>
                                            <DataGridTextColumn Header="원격 주소" Binding="{Binding RemoteAddress}" Width="120"/>
                                            <DataGridTextColumn Header="포트" Binding="{Binding RemotePort}" Width="60"/>
                                            <DataGridTextColumn Header="레벨" Binding="{Binding BlockLevel}" Width="80"/>
                                            <DataGridTextColumn Header="사유" Binding="{Binding Reason}" Width="*"/>
                                        </DataGrid.Columns>
                                    </DataGrid>
                                </Grid>
                            </Border>

                            <!-- 화이트리스트 관리 -->
                            <Border Grid.Row="2" Background="{DynamicResource BackgroundColor}" 
                                    CornerRadius="8" Padding="10" Margin="0,5,0,0">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Grid.Row="0" Text="화이트리스트" 
                                               FontWeight="Bold" FontSize="14"
                                               Margin="0,0,0,10"
                                               Foreground="{DynamicResource PrimaryForegroundColor}"/>

                                    <DataGrid Grid.Row="1" x:Name="WhitelistDataGrid"
                                              ItemsSource="{Binding WhitelistEntries}"
                                              AutoGenerateColumns="False"
                                              HeadersVisibility="Column"
                                              GridLinesVisibility="Horizontal"
                                              CanUserResizeColumns="True"
                                              Background="{DynamicResource DataGridBackgroundColor}"
                                              Foreground="{DynamicResource DataGridForegroundColor}">
                                        <DataGrid.Columns>
                                            <DataGridTextColumn Header="프로세스 경로" Binding="{Binding ProcessPath}" Width="*"/>
                                            <DataGridTextColumn Header="추가 사유" Binding="{Binding Reason}" Width="200"/>
                                            <DataGridTextColumn Header="추가일" Binding="{Binding AddedAt, StringFormat=yyyy-MM-dd}" Width="100"/>
                                        </DataGrid.Columns>
                                    </DataGrid>

                                    <StackPanel Grid.Row="2" Orientation="Horizontal" 
                                                HorizontalAlignment="Right" Margin="0,10,0,0">
                                        <Button Content="🧪 AutoBlock 테스트" 
                                                Style="{DynamicResource MaterialDesignRaisedButton}"
                                                Background="#FF9800"
                                                Foreground="White"
                                                Margin="0,0,10,0"
                                                Click="TestAutoBlock_Click"
                                                ToolTip="AutoBlock 시스템의 차단 규칙을 테스트합니다"/>
                                        <Button Content="화이트리스트 추가" 
                                                Style="{DynamicResource MaterialDesignRaisedButton}"
                                                Background="#4CAF50"
                                                Foreground="White"
                                                Margin="0,0,10,0"
                                                Click="AddToWhitelist_Click"/>
                                        <Button Content="선택 항목 제거" 
                                                Style="{DynamicResource MaterialDesignRaisedButton}"
                                                Background="#F44336"
                                                Foreground="White"
                                                Click="RemoveFromWhitelist_Click"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </Grid>
                    </TabItem>

                    <!-- 차단된 연결 탭 -->
                    <TabItem>
                        <TabItem.Header>
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Shield" VerticalAlignment="Center" Margin="0,0,8,0" Foreground="#F44336"/>
                                <TextBlock Text="차단된 연결" VerticalAlignment="Center"/>
                            </StackPanel>
                        </TabItem.Header>
                        
                        <Grid Margin="10">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- 헤더 -->
                            <TextBlock Grid.Row="0" Text="차단된 연결 관리" FontSize="20" FontWeight="Bold" 
                                       Foreground="{DynamicResource PrimaryHueMidBrush}" Margin="0,0,0,15"/>

                            <!-- 필터 및 컨트롤 -->
                            <Border Grid.Row="1" Background="{DynamicResource ButtonBackgroundColor}" CornerRadius="8" Padding="15" Margin="0,0,0,15">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                                        <materialDesign:PackIcon Kind="Filter" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                        <ComboBox x:Name="BlockedFilterComboBox" Width="150" Margin="0,0,10,0"
                                                  materialDesign:HintAssist.Hint="필터 선택"
                                                  SelectionChanged="BlockedFilter_SelectionChanged">
                                            <ComboBoxItem Content="전체 보기" IsSelected="True"/>
                                            <ComboBoxItem Content="수동 차단"/>
                                            <ComboBoxItem Content="자동 차단"/>
                                            <ComboBoxItem Content="그룹 차단"/>
                                            <ComboBoxItem Content="오늘"/>
                                            <ComboBoxItem Content="최근 7일"/>
                                        </ComboBox>

                                        <TextBox x:Name="BlockedSearchTextBox" Width="200" Margin="10,0,0,0"
                                                 materialDesign:HintAssist.Hint="IP 또는 프로세스 검색"
                                                 TextChanged="BlockedSearch_TextChanged"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" Margin="10,0,0,0">
                                        <Button Content="새로고침" 
                                                Style="{DynamicResource RefreshButtonStyle}"
                                                Click="RefreshBlockedList_Click"
                                                Width="80" Height="32" Margin="0,0,10,0"/>
                                        
                                        <Button Content="선택 해제" 
                                                Style="{DynamicResource RefreshButtonStyle}"
                                                Click="UnblockSelected_Click"
                                                Width="80" Height="32" Margin="0,0,10,0"
                                                Background="#4CAF50" Foreground="White"/>
                                        
                                        <Button Content="전체 삭제" 
                                                Style="{DynamicResource RefreshButtonStyle}"
                                                Click="ClearAllBlocked_Click"
                                                Width="80" Height="32"
                                                Background="#F44336" Foreground="White"/>
                                    </StackPanel>

                                    <TextBlock Grid.Column="2" x:Name="BlockedCountText" 
                                               Text="총 0개 차단됨" 
                                               VerticalAlignment="Center" 
                                               FontWeight="Bold" 
                                               Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                                </Grid>
                            </Border>

                            <!-- 차단된 연결 목록 -->
                            <Border Grid.Row="2" Background="{DynamicResource CardBackgroundColor}" CornerRadius="12" 
                                    BorderBrush="#E0E0E0" BorderThickness="1">
                                <DataGrid x:Name="BlockedConnectionsDataGrid2"
                                          AutoGenerateColumns="False"
                                          CanUserAddRows="False"
                                          CanUserDeleteRows="False"
                                          GridLinesVisibility="Horizontal"
                                          HeadersVisibility="Column"
                                          SelectionMode="Extended"
                                          AlternatingRowBackground="#F9F9F9"
                                          RowBackground="White"
                                          BorderThickness="0"
                                          FontSize="12">
                                    <DataGrid.Columns>
                                        <DataGridCheckBoxColumn Header="선택" Width="50" Binding="{Binding IsSelected}"/>
                                        
                                        <DataGridTextColumn Header="차단 시간" Width="130" Binding="{Binding BlockedAt, StringFormat={}{0:MM/dd HH:mm:ss}}">
                                            <DataGridTextColumn.CellStyle>
                                                <Style TargetType="DataGridCell">
                                                    <Setter Property="ToolTip" Value="{Binding BlockedAt, StringFormat={}{0:yyyy-MM-dd HH:mm:ss}}"/>
                                                </Style>
                                            </DataGridTextColumn.CellStyle>
                                        </DataGridTextColumn>
                                        
                                        <DataGridTextColumn Header="프로세스" Width="120" Binding="{Binding ProcessName}">
                                            <DataGridTextColumn.CellStyle>
                                                <Style TargetType="DataGridCell">
                                                    <Setter Property="ToolTip" Value="{Binding ProcessPath}"/>
                                                </Style>
                                            </DataGridTextColumn.CellStyle>
                                        </DataGridTextColumn>
                                        
                                        <DataGridTextColumn Header="PID" Width="60" Binding="{Binding ProcessId}"/>
                                        
                                        <DataGridTextColumn Header="원격 주소" Width="120" Binding="{Binding RemoteAddress}">
                                            <DataGridTextColumn.CellStyle>
                                                <Style TargetType="DataGridCell">
                                                    <Setter Property="Foreground" Value="#D32F2F"/>
                                                    <Setter Property="FontWeight" Value="Bold"/>
                                                </Style>
                                            </DataGridTextColumn.CellStyle>
                                        </DataGridTextColumn>
                                        
                                        <DataGridTextColumn Header="포트" Width="60" Binding="{Binding RemotePort}"/>
                                        
                                        <DataGridTextColumn Header="프로토콜" Width="70" Binding="{Binding Protocol}"/>
                                        
                                        <DataGridTextColumn Header="차단 레벨" Width="80" Binding="{Binding BlockLevel}">
                                            <DataGridTextColumn.CellStyle>
                                                <Style TargetType="DataGridCell">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding BlockLevel}" Value="Immediate">
                                                            <Setter Property="Background" Value="#FFCDD2"/>
                                                            <Setter Property="Foreground" Value="#D32F2F"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding BlockLevel}" Value="Warning">
                                                            <Setter Property="Background" Value="#FFF3E0"/>
                                                            <Setter Property="Foreground" Value="#F57C00"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding BlockLevel}" Value="Monitor">
                                                            <Setter Property="Background" Value="#E8F5E8"/>
                                                            <Setter Property="Foreground" Value="#388E3C"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </DataGridTextColumn.CellStyle>
                                        </DataGridTextColumn>
                                        
                                        <DataGridTextColumn Header="차단 이유" Width="200" Binding="{Binding Reason}">
                                            <DataGridTextColumn.CellStyle>
                                                <Style TargetType="DataGridCell">
                                                    <Setter Property="ToolTip" Value="{Binding TriggeredRules}"/>
                                                </Style>
                                            </DataGridTextColumn.CellStyle>
                                        </DataGridTextColumn>
                                        
                                        <DataGridTextColumn Header="신뢰도" Width="60" Binding="{Binding ConfidenceScore, StringFormat={}{0:P0}}">
                                            <DataGridTextColumn.CellStyle>
                                                <Style TargetType="DataGridCell">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding ConfidenceScore}" Value="1">
                                                            <Setter Property="Foreground" Value="#D32F2F"/>
                                                            <Setter Property="FontWeight" Value="Bold"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </DataGridTextColumn.CellStyle>
                                        </DataGridTextColumn>

                                        <DataGridTemplateColumn Header="작업" Width="100">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <StackPanel Orientation="Horizontal">
                                                        <Button Content="🔓" ToolTip="차단 해제"
                                                                Style="{DynamicResource MaterialDesignIconButton}"
                                                                Click="UnblockConnection_Click"
                                                                Tag="{Binding}"
                                                                Width="30" Height="30" Margin="0,0,5,0"/>
                                                        <Button Content="📋" ToolTip="상세 정보"
                                                                Style="{DynamicResource MaterialDesignIconButton}"
                                                                Click="ShowBlockedDetails_Click"
                                                                Tag="{Binding}"
                                                                Width="30" Height="30"/>
                                                    </StackPanel>
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>
                                    </DataGrid.Columns>

                                    <DataGrid.RowStyle>
                                        <Style TargetType="DataGridRow">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding BlockLevel}" Value="Immediate">
                                                    <Setter Property="Background" Value="#FFEBEE"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding BlockLevel}" Value="Warning">
                                                    <Setter Property="Background" Value="#FFF8E1"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </DataGrid.RowStyle>
                                </DataGrid>
                            </Border>

                            <!-- 하단 정보 -->
                            <Border Grid.Row="3" Background="{DynamicResource ButtonBackgroundColor}" CornerRadius="8" Padding="15" Margin="0,15,0,0">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                                        <materialDesign:PackIcon Kind="Information" VerticalAlignment="Center" Margin="0,0,8,0" Foreground="#2196F3"/>
                                        <TextBlock x:Name="BlockedSummaryText" 
                                                   Text="차단된 연결이 표시됩니다. 선택하여 일괄 해제하거나 개별 관리가 가능합니다." 
                                                   VerticalAlignment="Center" Foreground="#666"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                                        <Button Content="📊 통계 보기" 
                                                Style="{DynamicResource MaterialDesignRaisedButton}"
                                                Background="#2196F3" Foreground="White"
                                                Click="ShowBlockedStatistics_Click"
                                                Margin="0,0,10,0"/>
                                        <Button Content="📤 내보내기" 
                                                Style="{DynamicResource MaterialDesignRaisedButton}"
                                                Background="#4CAF50" Foreground="White"
                                                Click="ExportBlockedList_Click"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </Grid>
                    </TabItem>
                </TabControl>
            </Border>
        </Grid>

        <!-- 로딩 오버레이 -->
        <Grid x:Name="LoadingOverlay" 
              Grid.Row="0" Grid.RowSpan="3" 
              Background="#80000000" 
              Visibility="Collapsed">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock x:Name="LoadingText" 
                           Text="네트워크 모니터링 초기화 중..." 
                           Foreground="White" 
                           FontSize="18" 
                           HorizontalAlignment="Center"
                           Margin="0,0,0,20"/>
                <ItemsControl x:Name="SpinnerItems" 
                              Width="50" Height="50">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <Canvas/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.RenderTransform>
                        <StaticResource ResourceKey="SpinnerRotate"/>
                    </ItemsControl.RenderTransform>
                </ItemsControl>
            </StackPanel>
        </Grid>
    </Grid>
</Page>
