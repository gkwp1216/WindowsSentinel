                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>

                                    <DataGridTemplateColumn Header="데이터 전송" Width="90">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                                    <TextBlock Text="{Binding DataTransferred}" HorizontalAlignment="Center"/>
                                                    <TextBlock Text="{Binding DataRate, StringFormat='{}{0:F1} KB/s'}" 
                                                           FontSize="10" Foreground="{DynamicResource SecondaryForegroundColor}" HorizontalAlignment="Center"/>
                                                </StackPanel>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>

                                    <DataGridTemplateColumn Header="위험도" Width="80">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <Border CornerRadius="6" Padding="10,5" VerticalAlignment="Center" 
                                                        Background="{Binding RiskLevel, Converter={StaticResource RiskLevelToColorConverter}}">
                                                    <!-- 위험도 아이콘과 텍스트 -->
                                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                                        <!-- 위험도 아이콘 -->
                                                        <TextBlock FontFamily="Segoe MDL2 Assets" VerticalAlignment="Center" Margin="0,0,4,0">
                                                            <TextBlock.Style>
                                                                <Style TargetType="TextBlock">
                                                                    <Setter Property="Text" Value="&#xE774;"/> <!-- 기본 아이콘 -->
                                                                    <Setter Property="Foreground" Value="White"/>
                                                                    <Style.Triggers>
                                                                        <DataTrigger Binding="{Binding RiskLevel}" Value="Low">
                                                                            <Setter Property="Text" Value="&#xE73E;"/> <!-- 체크 아이콘 -->
                                                                        </DataTrigger>
                                                                        <DataTrigger Binding="{Binding RiskLevel}" Value="Medium">
                                                                            <Setter Property="Text" Value="&#xE7BA;"/> <!-- 경고 아이콘 -->
                                                                        </DataTrigger>
                                                                        <DataTrigger Binding="{Binding RiskLevel}" Value="High">
                                                                            <Setter Property="Text" Value="&#xE783;"/> <!-- 위험 아이콘 -->
                                                                        </DataTrigger>
                                                                        <DataTrigger Binding="{Binding RiskLevel}" Value="Critical">
                                                                            <Setter Property="Text" Value="&#xE7C7;"/> <!-- 중요 아이콘 -->
                                                                        </DataTrigger>
                                                                        <DataTrigger Binding="{Binding RiskLevel}" Value="System">
                                                                            <Setter Property="Text" Value="&#xE7EF;"/> <!-- 시스템 아이콘 -->
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </TextBlock.Style>
                                                        </TextBlock>
                                                        
                                                        <!-- 위험도 텍스트 -->
                                                        <TextBlock Foreground="White" FontWeight="SemiBold" FontSize="11" VerticalAlignment="Center">
                                                            <TextBlock.Style>
                                                                <Style TargetType="TextBlock">
                                                                    <Style.Triggers>
                                                                        <DataTrigger Binding="{Binding RiskLevel}" Value="Low">
                                                                            <Setter Property="Text" Value="낮음"/>
                                                                        </DataTrigger>
                                                                        <DataTrigger Binding="{Binding RiskLevel}" Value="Medium">
                                                                            <Setter Property="Text" Value="보통"/>
                                                                        </DataTrigger>
                                                                        <DataTrigger Binding="{Binding RiskLevel}" Value="High">
                                                                            <Setter Property="Text" Value="높음"/>
                                                                        </DataTrigger>
                                                                        <DataTrigger Binding="{Binding RiskLevel}" Value="Critical">
                                                                            <Setter Property="Text" Value="위험"/>
                                                                        </DataTrigger>
                                                                        <DataTrigger Binding="{Binding RiskLevel}" Value="System">
                                                                            <Setter Property="Text" Value="시스템"/>
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </TextBlock.Style>
                                                        </TextBlock>
                                                    </StackPanel>

                                                    <!-- 툴팁 -->
                                                    <Border.ToolTip>
                                                        <ToolTip>
                                                            <StackPanel>
                                                                <TextBlock Text="{Binding RiskDescription}" FontWeight="Bold"/>
                                                                <TextBlock>
                                                                    <TextBlock.Style>
                                                                        <Style TargetType="TextBlock">
                                                                            <Style.Triggers>
                                                                                <DataTrigger Binding="{Binding RiskLevel}" Value="Low">
                                                                                    <Setter Property="Text" Value="안전한 수준의 네트워크 활동"/>
                                                                                </DataTrigger>
                                                                                <DataTrigger Binding="{Binding RiskLevel}" Value="Medium">
                                                                                    <Setter Property="Text" Value="주의가 필요한 네트워크 활동"/>
                                                                                </DataTrigger>
                                                                                <DataTrigger Binding="{Binding RiskLevel}" Value="High">
                                                                                    <Setter Property="Text" Value="위험한 네트워크 활동 - 모니터링 필요"/>
                                                                                </DataTrigger>
                                                                                <DataTrigger Binding="{Binding RiskLevel}" Value="Critical">
                                                                                    <Setter Property="Text" Value="매우 위험한 활동 - 즉시 조치 필요"/>
                                                                                </DataTrigger>
                                                                                <DataTrigger Binding="{Binding RiskLevel}" Value="System">
                                                                                    <Setter Property="Text" Value="시스템 프로세스 - 정상 활동"/>
                                                                                </DataTrigger>
                                                                            </Style.Triggers>
                                                                        </Style>
                                                                    </TextBlock.Style>
                                                                </TextBlock>
                                                            </StackPanel>
                                                        </ToolTip>
                                                    </Border.ToolTip>
                                                </Border>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>

                                    <DataGridTemplateColumn Header="액션" Width="SizeToCells">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                                                    <Button Content="차단" Style="{DynamicResource BlockButtonStyle}"
                                                        Width="60" Height="25" Click="BlockConnection_Click" Tag="{Binding}"/>
                                                    <Button Content="종료" Style="{DynamicResource TerminateButtonStyle}" Width="60" Height="25"
                                                        Margin="5,0,0,0" Click="TerminateProcess_Click" Tag="{Binding}"/>
                                                </StackPanel>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                </DataGrid.Columns>
                            </DataGrid>
                            </Grid>
                            </TabItem>
                            
                            <!-- 시스템 프로세스 서브탭 -->
                            <TabItem>
                                <TabItem.Header>
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                        <Border Width="16" Height="16" 
                                                Background="Transparent"
                                                Cursor="Hand"
                                                ToolTipService.Placement="Top"
                                                ToolTipService.HorizontalOffset="300"
                                                ToolTipService.VerticalOffset="-5">
                                            <materialDesign:PackIcon Kind="Alert"
                                                                     Width="16" Height="16"
                                                                     Foreground="#E74C3C"
                                                                     HorizontalAlignment="Center"
                                                                     VerticalAlignment="Center"
                                                                     Margin="0,0,5,0"/>
                                            <Border.ToolTip>
                                                <ToolTip Content="이 프로세스는 Windows 운영체제의 핵심 구성 요소입니다.&#x0A;강제로 차단하거나 종료하면 시스템 오류가 발생하거나 PC가 불안정해질 수 있습니다."
                                                         Style="{StaticResource WarningToolTipStyle}"/>
                                            </Border.ToolTip>
                                        </Border>
                                        <TextBlock Text="시스템 프로세스" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </TabItem.Header>
                        <Grid>
                            <DataGrid x:Name="SystemProcessDataGrid"
                                      AutoGenerateColumns="False"
                                      IsReadOnly="True"
                                      Background="{DynamicResource DataGridBackgroundColor}"
                                      Foreground="{DynamicResource DataGridForegroundColor}" 
                                      BorderThickness="0"
                                      GridLinesVisibility="None"
                                      RowBackground="{DynamicResource DataGridRowBackgroundColor}" 
                                      AlternatingRowBackground="{DynamicResource DataGridAlternatingRowBackgroundColor}"
                                      RowHeight="45"
                                      HeadersVisibility="Column"
                                      CanUserResizeRows="False"
                                      SelectionMode="Single"
                                      SelectionChanged="ProcessNetworkDataGrid_SelectionChanged"
                                      HorizontalScrollBarVisibility="Auto"
                                      VerticalScrollBarVisibility="Auto"
                                      HorizontalAlignment="Stretch"
                                      VerticalAlignment="Stretch">

                                <DataGrid.ColumnHeaderStyle>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="Background" Value="{DynamicResource BackgroundColor}"/>
                                        <Setter Property="Foreground" Value="{DynamicResource ForegroundColor}"/>
                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                        <Setter Property="Padding" Value="10,8"/>
                                        <Setter Property="HorizontalAlignment" Value="Center"/>
                                    </Style>
                                </DataGrid.ColumnHeaderStyle>

                                <DataGrid.Columns>
                                    <DataGridTemplateColumn Header="프로세스" Width="150">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="5,0,0,0">
                                                    <Image Width="20" Height="20" Margin="0,0,8,0" Source="{Binding ProcessPath, Converter={StaticResource FilePathToIconConverter}}"/>
                                                    <Ellipse Width="8" Height="8" Fill="Gray" Margin="0,0,8,0"/>
                                                    <StackPanel>
                                                        <TextBlock Text="{Binding ProcessName}" FontWeight="SemiBold" 
                                           Foreground="{DynamicResource ForegroundColor}"/>
                                                        <TextBlock Text="{Binding ProcessId, StringFormat='PID: {0}'}" FontSize="11" 
                                           Foreground="{DynamicResource SecondaryForegroundColor}"/>
                                                    </StackPanel>
                                                </StackPanel>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>

                                    <DataGridTemplateColumn Header="로컬 주소" Width="90">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding LocalAddress}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>

                                    <DataGridTemplateColumn Header="원격 주소" Width="90">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding RemoteAddress}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>

                                    <DataGridTemplateColumn Header="프로토콜" Width="70">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding Protocol}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>

                                    <DataGridTemplateColumn Header="상태" Width="90">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding ConnectionState}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>

                                    <DataGridTemplateColumn Header="연결 시간" Width="90">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding ConnectionDuration, StringFormat='{}{0:hh\\:mm\\:ss}'}" 
                                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>

                                    <DataGridTemplateColumn Header="데이터 전송" Width="90">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                                    <TextBlock Text="{Binding DataTransferred}" HorizontalAlignment="Center"/>
                                                    <TextBlock Text="{Binding DataRate, StringFormat='{}{0:F1} KB/s'}" 
                                       FontSize="10" Foreground="{DynamicResource SecondaryForegroundColor}" HorizontalAlignment="Center"/>
                                                </StackPanel>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>

                                    <DataGridTemplateColumn Header="위험도" Width="70">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <Border CornerRadius="4" Padding="8,4" VerticalAlignment="Center">
                                                    <Border.Style>
                                                        <Style TargetType="Border">
                                                            <Setter Property="Background" Value="Gray"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding RiskLevel}" Value="Low">
                                                                    <Setter Property="Background" Value="#4CAF50"/>
                                                                    <!-- 초록 -->
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding RiskLevel}" Value="Medium">
                                                                    <Setter Property="Background" Value="#F39C12"/>
                                                                    <!-- 주황 -->
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding RiskLevel}" Value="High">
                                                                    <Setter Property="Background" Value="#E74C3C"/>
                                                                    <!-- 빨강 -->
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Border.Style>

                                                    <TextBlock Text="{Binding RiskLevel}" Foreground="White" FontWeight="SemiBold"
                                       HorizontalAlignment="Center" FontSize="11"/>
                                                </Border>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>

                                    <DataGridTemplateColumn Header="액션" Width="SizeToCells">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                                                    <Button Content="차단" Style="{DynamicResource BlockButtonStyle}"
                                    Width="60" Height="25" Click="BlockConnection_Click" Tag="{Binding}"/>
                                                    <Button Content="종료" Style="{DynamicResource TerminateButtonStyle}" Width="60" Height="25"
                                    Margin="5,0,0,0" Click="TerminateProcess_Click" Tag="{Binding}"/>
                                                </StackPanel>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                </DataGrid.Columns>
                            </DataGrid>
                            </Grid>
                            </TabItem>
                        </TabControl>
                    </TabItem>

                    <!-- 🔒 보안 관리 메인 탭 -->
                    <TabItem>
                        <TabItem.Header>
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Security" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                <TextBlock Text="🔒 보안 관리" VerticalAlignment="Center"/>
                            </StackPanel>
                        </TabItem.Header>
                        
                        <!-- 보안 관리 서브 탭들 -->
