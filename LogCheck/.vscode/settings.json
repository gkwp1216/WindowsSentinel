{
    "version": "0.2.0",
    "configurations": [
        {
            "name": ".NET Core Launch (console)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            // Program 경로를 프로젝트의 실제 이름과 프레임워크에 맞게 확인 (예: LogCheck.dll)
            "program": "${workspaceFolder}/bin/Debug/net8.0/LogCheck.dll", 
            // 또는 "program": "${workspaceFolder}/bin/Debug/net8.0-windows/LogCheck.dll",
            "args": [],
            "cwd": "${workspaceFolder}",
            "console": "internalConsole",
            "stopAtEntry": false
        },
        {
            "name": ".NET Core Attach",
            "type": "coreclr",
            "request": "attach"
        }
    ]
}