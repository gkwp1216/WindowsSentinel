<Page x:Class="WindowsSentinel.Network"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:easing="clr-namespace:System.Windows.Media.Animation;assembly=PresentationCore"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:local="clr-namespace:WindowsSentinel"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="1200"
      Title="Network" Background="{DynamicResource BackgroundColor}">

    <Page.Resources>
        <ItemsPanelTemplate x:Key="SpinnerPanelTemplate">
            <Canvas Width="100" Height="100"/>
        </ItemsPanelTemplate>
    </Page.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- 사이드바 -->
        <Border Grid.Column="0" Background="{DynamicResource ButtonBackgroundColor}" CornerRadius="12" Margin="0,0,10,0" BorderBrush="#C2C2C2" BorderThickness="1">
            <StackPanel Margin="10">
                <Button Style="{DynamicResource SidebarButtonStyle}"
                        Tag="&#xE71D;"
                        Content="설치된 프로그램"
                        Cursor="Hand"
                        Click="SidebarPrograms_Click"/>
                <Button Style="{DynamicResource SidebarButtonStyle}"
                        Tag="&#xE81C;"
                        Content="네트워크 접속 내역"
                        Cursor="Hand"
                        Click="SidebarModification_Click"/>
                <Button Style="{DynamicResource SidebarButtonStyle}"
                        Tag="&#xE72E;"
                        Content="보안 로그"
                        Cursor="Hand"
                        Click="SidebarLog_Click"/>
                <Button Style="{DynamicResource SidebarButtonStyle}"
                        Tag="&#xE946;"
                        Content="보안 프로그램 복구"
                        Cursor="Hand"
                        Click="SidebarRecovery_Click"/>
            </StackPanel>
        </Border>

        <!-- Main Content Area -->
        <Grid Grid.Column="1" Margin="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" Background="{DynamicResource ButtonBackgroundColor}" CornerRadius="12" Padding="20" Margin="0,0,0,10" BorderBrush="#C2C2C2" BorderThickness="1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- 제목 및 검사 버튼 -->
                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock Text="네트워크 접속 내역" 
                                       Foreground="{DynamicResource ForegroundColor}" 
                                       FontSize="24" 
                                       FontWeight="SemiBold"
                                       VerticalAlignment="Center"/>
                            <!--<TextBlock Text="시스템에 설치된 모든 프로그램을 확인하고 관리할 수 있습니다"
                                           Foreground="{DynamicResource ForegroundColor}"
                                           FontSize="14"
                                           Margin="0,5,0,0"/>-->
                            <!-- 도움말 아이콘 -->
                            <Border Width="30" Height="30" 
                                    Background="Transparent"
                                    Cursor="Hand"
                                    Margin="10,0,0,0">
                                <materialDesign:PackIcon Kind="HelpCircleOutline"
                                                         Width="30" Height="30"
                                                         HorizontalAlignment="Center"
                                                         VerticalAlignment="Center" />
                                <Border.ToolTip>
                                    <ToolTip Content="네트워크 접속 내역들을 확인하고 관리할 수 있습니다."
                                             Placement="Bottom"
                                             HorizontalOffset="0" VerticalOffset="5"/>
                                </Border.ToolTip>
                            </Border>
                        </StackPanel>

                        <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                            <Button x:Name="ScanButton"
                                    Style="{DynamicResource CheckButtonStyle}"                               
                                    Click="BtnCheck_Click"
                                    Padding="15,10"                               
                                    BorderThickness="0"
                                    Cursor="Hand"
                                    Height="40">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                CornerRadius="8">
                                            <ContentPresenter HorizontalAlignment="Center" 
                                                              VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                                <TextBlock Text="네트워크 접속 내역 확인" FontSize="14"
                                           VerticalAlignment="Center"/>
                            </Button>
                            
                        </StackPanel>
                    </Grid>
                </Grid>
            </Border>

            <!-- 현재 접속 상태 및 기간별 조회 컨트롤 -->
            <Border Grid.Row="1" Background="{DynamicResource ButtonBackgroundColor}" CornerRadius="12" Padding="20" Margin="0,0,0,10" BorderBrush="#C2C2C2" BorderThickness="1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- 현재 접속 상태 -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                        <Button x:Name="BtnCurrentConnections" 
                                Content="현재 접속 상태 보기" 
                                Click="BtnCurrentConnections_Click"
                                Style="{DynamicResource CheckButtonStyle}"
                                Padding="15,10"
                                Height="40"
                                Margin="0,0,10,0"/>
                    </StackPanel>

                    <!-- 기간별 조회 -->
                    <StackPanel Grid.Row="1" Orientation="Horizontal">
                        <DatePicker x:Name="StartDatePicker" 
                                  Width="120" 
                                  Margin="0,0,5,0"
                                  materialDesign:HintAssist.Hint="시작일"/>
                        <TextBlock Text="~" 
                                 VerticalAlignment="Center" 
                                 Margin="0,0,5,0"/>
                        <DatePicker x:Name="EndDatePicker" 
                                  Width="120" 
                                  Margin="0,0,5,0"
                                  materialDesign:HintAssist.Hint="종료일"/>
                        <Button x:Name="BtnPeriodSearch" 
                              Content="기간별 기록 조회" 
                              Click="BtnPeriodSearch_Click"
                              Style="{DynamicResource CheckButtonStyle}"
                              Padding="15,10"
                              Height="40"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- 현재 접속 상태 DataGrid -->
            <Border Grid.Row="2" 
                    Background="{DynamicResource ButtonBackgroundColor}" 
                    CornerRadius="12" 
                    Padding="20" 
                    Margin="0,0,0,10" 
                    BorderBrush="#C2C2C2" 
                    BorderThickness="1">
                <DataGrid x:Name="currentConnectionsDataGrid" 
                         AutoGenerateColumns="False"
                         IsReadOnly="True"
                         Background="{DynamicResource DataGridBackgroundColor}"
                         Foreground="{DynamicResource DataGridForegroundColor}"
                         BorderThickness="0"
                         GridLinesVisibility="None"
                         RowBackground="{DynamicResource DataGridRowBackgroundColor}"
                         AlternatingRowBackground="{DynamicResource DataGridAlternatingRowBackgroundColor}"
                         RowHeight="40"
                         HeadersVisibility="Column"
                         CanUserResizeRows="False"
                         Height="200">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="프로토콜" Binding="{Binding Protocol}" Width="100"/>
                        <DataGridTextColumn Header="로컬 주소" Binding="{Binding LocalAddress}" Width="*"/>
                        <DataGridTextColumn Header="원격 주소" Binding="{Binding ForeignAddress}" Width="*"/>
                        <DataGridTextColumn Header="상태" Binding="{Binding State}" Width="100"/>
                        <DataGridTextColumn Header="PID" Binding="{Binding PID}" Width="80"/>
                    </DataGrid.Columns>
                    <DataGrid.ColumnHeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Background" Value="{DynamicResource BackgroundColor}"/>
                            <Setter Property="Foreground" Value="{DynamicResource ForegroundColor}"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                            <Setter Property="HorizontalContentAlignment" Value="Center"/>
                            <Setter Property="Padding" Value="10,10"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Cursor" Value="Hand"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#FF969393"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </DataGrid.ColumnHeaderStyle>
                </DataGrid>
            </Border>

            <!-- Programs DataGrid -->
            <Border Grid.Row="3" Background="{DynamicResource ButtonBackgroundColor}" CornerRadius="12" Padding="20" BorderBrush="#C2C2C2" BorderThickness="1" Visibility="Visible">
                <Grid>
                    <DataGrid x:Name="eventDataGrid" 
          AutoGenerateColumns="False" 
          IsReadOnly="True"
          Background="{DynamicResource DataGridBackgroundColor}"
          Foreground="{DynamicResource DataGridForegroundColor}" 
          BorderThickness="0" 
          GridLinesVisibility="None"
          RowBackground="{DynamicResource DataGridRowBackgroundColor}" 
          AlternatingRowBackground="{DynamicResource DataGridAlternatingRowBackgroundColor}" 
          RowHeight="40"
          HeadersVisibility="Column" 
          CanUserResizeRows="False">

                        <DataGrid.ColumnHeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Background" Value="{DynamicResource BackgroundColor}"/>
                                <Setter Property="Foreground" Value="{DynamicResource ForegroundColor}"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                                <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                <Setter Property="Padding" Value="10,10"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="Cursor" Value="Hand"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#FF969393"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </DataGrid.ColumnHeaderStyle>

                        <DataGrid.Columns>
                            <DataGridTextColumn Header="시간" Binding="{Binding TimeGenerated, StringFormat=yyyy-MM-dd HH:mm:ss}" Width="150"/>
                            <DataGridTextColumn Header="애플리케이션" Binding="{Binding ApplicationName}" Width="100"/>
                            <DataGridTextColumn Header="PID" Binding="{Binding ProcessId}" Width="80"/>
                            <DataGridTextColumn Header="프로토콜" Binding="{Binding Protocol}" Width="80"/>
                            <DataGridTextColumn Header="방향" Binding="{Binding Direction}" Width="90"/>
                            <DataGridTextColumn Header="소스" Binding="{Binding Source}" Width="120"/>
                            <DataGridTextColumn Header="대상" Binding="{Binding Destination}" Width="120"/>
                            <DataGridTextColumn Header="결과" Binding="{Binding Result}" Width="90">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="HorizontalAlignment" Value="Center"/>
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Result}" Value="허용">
                                                <Setter Property="Foreground" Value="#4CAF50"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding Result}" Value="차단">
                                                <Setter Property="Foreground" Value="#DC3545"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="이벤트 ID" Binding="{Binding EventId}" Width="90"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- 로딩 오버레이 -->
                    <Grid x:Name="LoadingOverlay" Background="#80000000" Visibility="Collapsed">
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Vertical" Margin="0,0,0,20">
                            <ItemsControl x:Name="SpinnerItems"
                          ItemsPanel="{StaticResource SpinnerPanelTemplate}"
                          RenderTransformOrigin="0.5,0.5">
                                <ItemsControl.RenderTransform>
                                    <RotateTransform x:Name="SpinnerRotate"/>
                                </ItemsControl.RenderTransform>
                                <ItemsControl.ItemContainerStyle>
                                    <Style TargetType="ContentPresenter">
                                        <Setter Property="Canvas.Left" Value="{Binding X}"/>
                                        <Setter Property="Canvas.Top" Value="{Binding Y}"/>
                                    </Style>
                                </ItemsControl.ItemContainerStyle>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Ellipse Width="10" Height="10" Fill="DarkGray"/>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                            <TextBlock x:Name="LoadingText" Text="검사 중..." Foreground="White" FontSize="16" Margin="10" HorizontalAlignment="Center" TextAlignment="Center"/>
                        </StackPanel>
                    </Grid>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Page>
