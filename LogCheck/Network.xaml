<Page x:Class="LogCheck.Network"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:easing="clr-namespace:System.Windows.Media.Animation;assembly=PresentationCore"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:local="clr-namespace:LogCheck"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="1200"
      Title="Network" Background="{DynamicResource BackgroundColor}">

    <Page.Resources>
        <ItemsPanelTemplate x:Key="SpinnerPanelTemplate">
            <Canvas Width="100" Height="100"/>
        </ItemsPanelTemplate>
    </Page.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- 사이드바 -->
        <Border Grid.Column="0" Background="{DynamicResource ButtonBackgroundColor}" CornerRadius="12" Margin="0,0,10,0" BorderBrush="#C2C2C2" BorderThickness="1">
            <StackPanel Margin="10">
                <Button Style="{DynamicResource SidebarButtonStyle}"
                        Tag="&#xE71D;"
                        Content="설치된 프로그램"
                        Cursor="Hand"
                        Click="SidebarPrograms_Click"/>
                <Button Style="{DynamicResource SidebarButtonStyle}"
                        Tag="&#xE81C;"
                        Content="네트워크 접속 내역"
                        Cursor="Hand"
                        Click="SidebarModification_Click"/>
                <Button Style="{DynamicResource SidebarButtonStyle}"
                        Tag="&#xE72E;"
                        Content="보안 로그"
                        Cursor="Hand"
                        Click="SidebarLog_Click"/>
                <Button Style="{DynamicResource SidebarButtonStyle}"
                        Tag="&#xE946;"
                        Content="보안 프로그램 복구"
                        Cursor="Hand"
                        Click="SidebarRecovery_Click"/>
            </StackPanel>
        </Border>

        <!-- Main Content Area -->
        <Grid Grid.Column="1" Margin="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" Background="{DynamicResource ButtonBackgroundColor}" CornerRadius="12" Padding="20" Margin="0,0,0,10" BorderBrush="#C2C2C2" BorderThickness="1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- 제목 및 검사 버튼 -->
                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock Text="네트워크 접속 내역" 
                                       Foreground="{DynamicResource ForegroundColor}" 
                                       FontSize="24" 
                                       FontWeight="SemiBold"
                                       VerticalAlignment="Center"/>
                            <Border Width="30" Height="30" 
                                    Background="Transparent"
                                    Cursor="Hand"
                                    Margin="10,0,0,0">
                                <Border.ToolTip>
                                    <ToolTip Content="네트워크 접속 내역들을 확인하고 관리할 수 있습니다."
                                             Placement="Bottom"
                                             HorizontalOffset="0" VerticalOffset="5"/>
                                </Border.ToolTip>
                            </Border>
                        </StackPanel>

                        <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                            <Button x:Name="ScanButton"
                                    Style="{DynamicResource CheckButtonStyle}"                               
                                    Click="BtnCheck_Click"
                                    Padding="15,10"                               
                                    BorderThickness="0"
                                    Cursor="Hand"
                                    Height="40"
                                    Background="#4CAF50"
                                    Foreground="White">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                CornerRadius="8">
                                            <ContentPresenter HorizontalAlignment="Center" 
                                                              VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                                <TextBlock Text="네트워크 접속 내역 확인" FontSize="14"
                                           VerticalAlignment="Center"/>
                            </Button>
                        </StackPanel>
                    </Grid>
                </Grid>
            </Border>

            <!-- 패킷 캡처 결과 DataGrid -->
            <Border Grid.Row="1" 
                    Background="{DynamicResource ButtonBackgroundColor}" 
                    CornerRadius="12" 
                    Padding="20" 
                    BorderBrush="#C2C2C2" 
                    BorderThickness="1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- 필터 설정 패널 -->
                    <Border Grid.Row="0" 
                            Background="{DynamicResource DataGridBackgroundColor}"
                            CornerRadius="8"
                            Padding="15"
                            Margin="0,0,0,10">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- 프로토콜 필터 -->
                            <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="0,0,20,0">
                                <TextBlock Text="프로토콜:" 
                                         VerticalAlignment="Center"
                                         Margin="0,0,10,0"/>
                                <ComboBox x:Name="ProtocolFilter" 
                                        Width="100"
                                        SelectionChanged="ProtocolFilter_SelectionChanged">
                                    <ComboBoxItem Content="모두" IsSelected="True"/>
                                    <ComboBoxItem Content="TCP"/>
                                    <ComboBoxItem Content="UDP"/>
                                </ComboBox>
                            </StackPanel>

                            <!-- IP 및 포트 필터 -->
                            <Grid Grid.Column="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- 소스 IP -->
                                <StackPanel Grid.Row="0" Grid.Column="0" 
                                          Orientation="Horizontal" 
                                          Margin="0,0,10,5">
                                    <TextBlock Text="소스 IP:" 
                                             VerticalAlignment="Center"
                                             Margin="0,0,10,0"/>
                                    <TextBox x:Name="SourceIPFilter" 
                                           Width="150"
                                           TextChanged="IPFilter_TextChanged"/>
                                </StackPanel>

                                <!-- 목적지 IP -->
                                <StackPanel Grid.Row="0" Grid.Column="1" 
                                          Orientation="Horizontal" 
                                          Margin="10,0,0,5">
                                    <TextBlock Text="목적지 IP:" 
                                             VerticalAlignment="Center"
                                             Margin="0,0,10,0"/>
                                    <TextBox x:Name="DestinationIPFilter" 
                                           Width="150"
                                           TextChanged="IPFilter_TextChanged"/>
                                </StackPanel>

                                <!-- 소스 포트 -->
                                <StackPanel Grid.Row="1" Grid.Column="0" 
                                          Orientation="Horizontal" 
                                          Margin="0,5,10,0">
                                    <TextBlock Text="소스 포트:" 
                                             VerticalAlignment="Center"
                                             Margin="0,0,10,0"/>
                                    <TextBox x:Name="SourcePortFilter" 
                                           Width="100"
                                           TextChanged="PortFilter_TextChanged"/>
                                </StackPanel>

                                <!-- 목적지 포트 -->
                                <StackPanel Grid.Row="1" Grid.Column="1" 
                                          Orientation="Horizontal" 
                                          Margin="10,5,0,0">
                                    <TextBlock Text="목적지 포트:" 
                                             VerticalAlignment="Center"
                                             Margin="0,0,10,0"/>
                                    <TextBox x:Name="DestinationPortFilter" 
                                           Width="100"
                                           TextChanged="PortFilter_TextChanged"/>
                                </StackPanel>
                            </Grid>

                            <!-- 필터 버튼 -->
                            <StackPanel Grid.Column="2" 
                                      Orientation="Horizontal" 
                                      HorizontalAlignment="Right">
                                <Button x:Name="ApplyFilterButton"
                                      Content="필터 적용"
                                      Click="ApplyFilter_Click"
                                      Style="{DynamicResource CheckButtonStyle}"
                                      Margin="0,0,10,0"
                                      Padding="15,5"/>
                                <Button x:Name="ResetFilterButton"
                                      Content="필터 초기화"
                                      Click="ResetFilter_Click"
                                      Style="{DynamicResource CheckButtonStyle}"
                                      Padding="15,5"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- 필터 상태 표시 -->
                    <Border Grid.Row="0" 
                            Background="{DynamicResource DataGridBackgroundColor}"
                            CornerRadius="8"
                            Padding="10"
                            Margin="0,0,0,10"
                            x:Name="FilterStatusBorder"
                            Visibility="Collapsed">
                        <TextBlock x:Name="FilterStatusText"
                                 TextWrapping="Wrap"/>
                    </Border>

                    <!-- 기존 DataGrid -->
                    <DataGrid Grid.Row="1"
                             x:Name="eventDataGrid" 
                             AutoGenerateColumns="False"
                             IsReadOnly="True"
                             Background="{DynamicResource DataGridBackgroundColor}"
                             Foreground="{DynamicResource DataGridForegroundColor}"
                             BorderThickness="0"
                             GridLinesVisibility="None"
                             RowBackground="{DynamicResource DataGridRowBackgroundColor}"
                             AlternatingRowBackground="{DynamicResource DataGridAlternatingRowBackgroundColor}"
                             RowHeight="40"
                             HeadersVisibility="Column"
                             CanUserResizeRows="False">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="시간" Binding="{Binding Time, StringFormat=yyyy-MM-dd HH:mm:ss}" Width="150"/>
                            <DataGridTextColumn Header="프로토콜" Binding="{Binding Protocol}" Width="100"/>
                            <DataGridTextColumn Header="소스" Binding="{Binding Source}" Width="*"/>
                            <DataGridTextColumn Header="소스 포트" Binding="{Binding SourcePort}" Width="100"/>
                            <DataGridTextColumn Header="대상" Binding="{Binding Destination}" Width="*"/>
                            <DataGridTextColumn Header="대상 포트" Binding="{Binding DestinationPort}" Width="100"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- 로딩 오버레이 -->
                    <Grid x:Name="LoadingOverlay" 
                          Background="#80000000" 
                          Visibility="Collapsed">
                        <StackPanel HorizontalAlignment="Center" 
                                  VerticalAlignment="Center" 
                                  Orientation="Vertical" 
                                  Margin="0,0,0,20">
                            <ItemsControl x:Name="SpinnerItems"
                                        ItemsPanel="{StaticResource SpinnerPanelTemplate}"
                                        RenderTransformOrigin="0.5,0.5">
                                <ItemsControl.RenderTransform>
                                    <RotateTransform x:Name="SpinnerRotate"/>
                                </ItemsControl.RenderTransform>
                                <ItemsControl.ItemContainerStyle>
                                    <Style TargetType="ContentPresenter">
                                        <Setter Property="Canvas.Left" Value="{Binding X}"/>
                                        <Setter Property="Canvas.Top" Value="{Binding Y}"/>
                                    </Style>
                                </ItemsControl.ItemContainerStyle>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Ellipse Width="10" Height="10" Fill="DarkGray"/>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                            <TextBlock x:Name="LoadingText" 
                                     Text="검사 중..." 
                                     Foreground="White" 
                                     FontSize="16" 
                                     Margin="10" 
                                     HorizontalAlignment="Center" 
                                     TextAlignment="Center"/>
                        </StackPanel>
                    </Grid>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Page>
