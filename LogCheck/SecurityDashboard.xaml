<Page x:Class="LogCheck.SecurityDashboard"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="1200"
      Title="보안 상태 대시보드"
      Background="Transparent">

    <Page.Resources>
        <!-- 보안 상태 카드 스타일 -->
        <Style x:Key="SecurityCardStyle" TargetType="Border">
            <Setter Property="Background" Value="{DynamicResource CardBackgroundBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="Margin" Value="8"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="{DynamicResource ShadowColor}" 
                                    Direction="315" 
                                    ShadowDepth="2" 
                                    BlurRadius="4" 
                                    Opacity="0.3"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 보안 지표 타이틀 스타일 -->
        <Style x:Key="SecurityTitleStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{DynamicResource SecondaryTextBrush}"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
        </Style>

        <!-- 보안 지표 값 스타일 -->
        <Style x:Key="SecurityValueStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="28"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="{DynamicResource PrimaryTextBrush}"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
        </Style>

        <!-- 상태 아이콘 스타일 -->
        <Style x:Key="StatusIconStyle" TargetType="Ellipse">
            <Setter Property="Width" Value="12"/>
            <Setter Property="Height" Value="12"/>
            <Setter Property="Margin" Value="8,0,0,0"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
    </Page.Resources>

    <Grid>
        <Border Margin="20,0,20,20" Background="{DynamicResource BackgroundColor}" CornerRadius="12" Padding="10">
            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                
                <Grid Margin="24">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <!-- 헤더 -->
                        <RowDefinition Height="Auto"/>
                        <!-- 보안 상태 카드들 -->
                        <RowDefinition Height="Auto"/>
                        <!-- 차트 영역 -->
                        <RowDefinition Height="Auto"/>
                        <!-- 원클릭 보안 액션 -->
                        <RowDefinition Height="*"/>
                        <!-- 이벤트 및 IP 목록 -->
                    </Grid.RowDefinitions>

                    <!-- 헤더 영역 -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,24">
                        <TextBlock Text="🛡️" FontSize="32" VerticalAlignment="Center" Margin="0,0,12,0"/>
                        <StackPanel>
                            <TextBlock Text="보안 상태 대시보드" 
                             FontSize="24" 
                             FontWeight="Bold"
                             Foreground="{DynamicResource PrimaryTextBrush}"/>
                            <TextBlock Text="실시간 보안 모니터링 및 위험도 분석" 
                             FontSize="14"
                             Foreground="{DynamicResource SecondaryTextBrush}"/>
                        </StackPanel>
                        <Border Background="{DynamicResource AccentBrush}" 
                        CornerRadius="4" 
                        Padding="8,4" 
                        Margin="16,0,0,0"
                        VerticalAlignment="Center">
                            <TextBlock Text="Enterprise+" 
                             Foreground="White" 
                             FontWeight="SemiBold" 
                             FontSize="12"/>
                        </Border>
                    </StackPanel>

                    <!-- 보안 상태 카드 영역 (4x2 그리드) -->
                    <Grid Grid.Row="1" Margin="0,0,0,24">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- 현재 위험도 -->
                        <Border Grid.Row="0" Grid.Column="0" Style="{StaticResource SecurityCardStyle}">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="🎯 현재 위험도" Style="{StaticResource SecurityTitleStyle}"/>
                                    <Ellipse x:Name="ThreatLevelIndicator" Style="{StaticResource StatusIconStyle}"
                                   Fill="{Binding CurrentThreatLevelColor, FallbackValue=Green}"/>
                                </StackPanel>
                                <TextBlock Text="{Binding CurrentThreatLevelText, FallbackValue='안전'}" 
                                 Style="{StaticResource SecurityValueStyle}"
                                 Foreground="{Binding CurrentThreatLevelColor, FallbackValue=Green}"/>
                                <TextBlock Text="{Binding ActiveThreatsText, FallbackValue='활성 위협: 0개'}" 
                                 FontSize="12" 
                                 Foreground="{DynamicResource SecondaryTextBrush}"
                                 Margin="0,4,0,0"/>
                            </StackPanel>
                        </Border>

                        <!-- 24시간 차단 연결 -->
                        <Border Grid.Row="0" Grid.Column="1" Style="{StaticResource SecurityCardStyle}">
                            <StackPanel>
                                <TextBlock Text="🚫 24시간 차단 수" Style="{StaticResource SecurityTitleStyle}"/>
                                <TextBlock Text="{Binding BlockedConnections24h, FallbackValue=42}" 
                                 Style="{StaticResource SecurityValueStyle}"
                                 Foreground="{DynamicResource RiskMediumColor}"/>
                                <TextBlock Text="{Binding BlockedConnectionsChangeText, FallbackValue='↑ 전일 대비 +12%'}" 
                                 FontSize="12" 
                                 Foreground="{DynamicResource SecondaryTextBrush}"
                                 Margin="0,4,0,0"/>
                            </StackPanel>
                        </Border>

                        <!-- 시스템 가동 시간 -->
                        <Border Grid.Row="0" Grid.Column="2" Style="{StaticResource SecurityCardStyle}">
                            <StackPanel>
                                <TextBlock Text="⏱️ 가동 시간" Style="{StaticResource SecurityTitleStyle}"/>
                                <TextBlock Text="{Binding NetworkTrafficText, FallbackValue='0분'}" 
                                 Style="{StaticResource SecurityValueStyle}"
                                 Foreground="{DynamicResource AccentBrush}"/>
                                <TextBlock Text="{Binding NetworkTrafficStatusText, FallbackValue='정상 작동 중'}" 
                                 FontSize="12" 
                                 Foreground="{DynamicResource SecondaryTextBrush}"
                                 Margin="0,4,0,0"/>
                            </StackPanel>
                        </Border>

                        <!-- DDoS 방어 상태 -->
                        <Border Grid.Row="0" Grid.Column="3" Style="{StaticResource SecurityCardStyle}">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="🛡️ DDoS 방어" Style="{StaticResource SecurityTitleStyle}"/>
                                    <Ellipse x:Name="DDoSStatusIndicator" Style="{StaticResource StatusIconStyle}"
                                   Fill="{Binding DDoSDefenseColor, FallbackValue=Green}"/>
                                </StackPanel>
                                <TextBlock Text="{Binding DDoSDefenseStatusText, FallbackValue='활성'}" 
                                 Style="{StaticResource SecurityValueStyle}"
                                 Foreground="{Binding DDoSDefenseColor, FallbackValue=Green}"/>
                                <TextBlock Text="{Binding DDoSAttacksBlockedText, FallbackValue='차단된 공격: 3개'}" 
                                 FontSize="12" 
                                 Foreground="{DynamicResource SecondaryTextBrush}"
                                 Margin="0,4,0,0"/>
                            </StackPanel>
                        </Border>

                        <!-- Rate Limiting 상태 -->
                        <Border Grid.Row="1" Grid.Column="0" Style="{StaticResource SecurityCardStyle}">
                            <StackPanel>
                                <TextBlock Text="⚡ Rate Limiting" Style="{StaticResource SecurityTitleStyle}"/>
                                <TextBlock Text="{Binding RateLimitingStatusText, FallbackValue='활성'}" 
                                 Style="{StaticResource SecurityValueStyle}"
                                 Foreground="{DynamicResource RiskLowColor}"/>
                                <TextBlock Text="{Binding RateLimitedIPsText, FallbackValue='제한된 IP: 7개'}" 
                                 FontSize="12" 
                                 Foreground="{DynamicResource SecondaryTextBrush}"
                                 Margin="0,4,0,0"/>
                            </StackPanel>
                        </Border>

                        <!-- 영구 차단 규칙 -->
                        <Border Grid.Row="1" Grid.Column="1" Style="{StaticResource SecurityCardStyle}">
                            <StackPanel>
                                <TextBlock Text="🔒 영구 차단 규칙" Style="{StaticResource SecurityTitleStyle}"/>
                                <TextBlock Text="{Binding PermanentRulesCount, FallbackValue=15}" 
                                 Style="{StaticResource SecurityValueStyle}"
                                 Foreground="{DynamicResource RiskCriticalColor}"/>
                                <TextBlock Text="{Binding PermanentRulesStatusText, FallbackValue='방화벽 동기화됨'}" 
                                 FontSize="12" 
                                 Foreground="{DynamicResource SecondaryTextBrush}"
                                 Margin="0,4,0,0"/>
                            </StackPanel>
                        </Border>

                        <!-- 시스템 상태 -->
                        <Border Grid.Row="1" Grid.Column="2" Style="{StaticResource SecurityCardStyle}">
                            <StackPanel>
                                <TextBlock Text="💻 시스템 상태" Style="{StaticResource SecurityTitleStyle}"/>
                                <TextBlock Text="{Binding SystemStatusText, FallbackValue='정상'}" 
                                 Style="{StaticResource SecurityValueStyle}"
                                 Foreground="{DynamicResource RiskLowColor}"/>
                                <TextBlock Text="{Binding SystemUptimeText, FallbackValue='가동시간: 2일 14시간'}" 
                                 FontSize="12" 
                                 Foreground="{DynamicResource SecondaryTextBrush}"
                                 Margin="0,4,0,0"/>
                            </StackPanel>
                        </Border>

                        <!-- 마지막 업데이트 -->
                        <Border Grid.Row="1" Grid.Column="3" Style="{StaticResource SecurityCardStyle}">
                            <StackPanel>
                                <TextBlock Text="🔄 마지막 업데이트" Style="{StaticResource SecurityTitleStyle}"/>
                                <TextBlock Text="{Binding LastUpdateText, FallbackValue='방금 전'}" 
                                 Style="{StaticResource SecurityValueStyle}"
                                 Foreground="{DynamicResource AccentBrush}"/>
                                <TextBlock Text="{Binding NextUpdateText, FallbackValue='다음 업데이트: 30초 후'}" 
                                 FontSize="12" 
                                 Foreground="{DynamicResource SecondaryTextBrush}"
                                 Margin="0,4,0,0"/>
                            </StackPanel>
                        </Border>
                    </Grid>

                    <!-- 차트 영역 -->
                    <Grid Grid.Row="2" Margin="0,0,0,24">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- 위험도 트렌드 차트 -->
                        <Border Grid.Column="0" Style="{StaticResource SecurityCardStyle}">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                                    <TextBlock Text="📈 위험도 트렌드" 
                                     FontSize="16" 
                                     FontWeight="SemiBold"
                                     Foreground="{DynamicResource PrimaryTextBrush}"/>
                                    <ComboBox x:Name="ChartPeriodSelector" 
                                    SelectedIndex="0" 
                                    Margin="16,0,0,0"
                                    MinWidth="100">
                                        <ComboBoxItem Content="시간별"/>
                                        <ComboBoxItem Content="일별"/>
                                        <ComboBoxItem Content="주별"/>
                                    </ComboBox>
                                </StackPanel>
                                <lvc:CartesianChart x:Name="ThreatTrendChart" 
                                          Height="200"
                                          Series="{Binding ThreatTrendSeries}"
                                          XAxes="{Binding ThreatTrendXAxes}"
                                          YAxes="{Binding ThreatTrendYAxes}"/>
                            </StackPanel>
                        </Border>

                        <!-- 차단된 상위 IP 목록 -->
                        <Border Grid.Column="1" Style="{StaticResource SecurityCardStyle}">
                            <StackPanel>
                                <TextBlock Text="🚫 차단된 상위 IP" 
                                 FontSize="16" 
                                 FontWeight="SemiBold"
                                 Foreground="{DynamicResource PrimaryTextBrush}"
                                 Margin="0,0,0,16"/>
                                <ListView x:Name="TopBlockedIPsList" 
                                ItemsSource="{Binding TopBlockedIPs}"
                                Height="200"
                                BorderThickness="0"
                                Background="Transparent"
                                ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                                    <ListView.ItemTemplate>
                                        <DataTemplate>
                                            <Border Background="Transparent" 
                                          BorderBrush="{DynamicResource BorderBrush}" 
                                          BorderThickness="0,0,0,1"
                                          Padding="0,8">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>
                                                    <StackPanel Grid.Column="0">
                                                        <TextBlock Text="{Binding IPAddress}" 
                                                         FontWeight="SemiBold"
                                                         FontSize="12"
                                                         Foreground="{DynamicResource PrimaryTextBrush}"/>
                                                        <TextBlock Text="{Binding Location}" 
                                                         FontSize="10"
                                                         Foreground="{DynamicResource SecondaryTextBrush}"/>
                                                    </StackPanel>
                                                    <TextBlock Grid.Column="1" 
                                                     Text="{Binding BlockCount}" 
                                                     FontWeight="Bold"
                                                     FontSize="12"
                                                     Foreground="{DynamicResource RiskHighColor}"
                                                     VerticalAlignment="Center"/>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ListView.ItemTemplate>
                                </ListView>
                            </StackPanel>
                        </Border>
                    </Grid>

                    <!-- 최근 보안 이벤트 -->
                    <Border Grid.Row="3" Style="{StaticResource SecurityCardStyle}">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                                <TextBlock Text="📋 최근 보안 이벤트" 
                                 FontSize="16" 
                                 FontWeight="SemiBold"
                                 Foreground="{DynamicResource PrimaryTextBrush}"/>
                                <Button Content="전체 보기" 
                              Margin="16,0,0,0"
                              Style="{DynamicResource AccentButtonStyle}"
                              Height="28"
                              Padding="12,4"/>
                            </StackPanel>
                            <DataGrid x:Name="RecentEventsGrid" 
                            ItemsSource="{Binding RecentSecurityEvents}"
                            AutoGenerateColumns="False"
                            RowHeaderWidth="0"
                            GridLinesVisibility="Horizontal"
                            HorizontalGridLinesBrush="{DynamicResource BorderBrush}"
                            Background="Transparent"
                            BorderThickness="0"
                            Height="200">
                                <DataGrid.Columns>
                                    <DataGridTemplateColumn Header="시간" Width="120">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding Timestamp, StringFormat=HH:mm:ss}" 
                                                 Foreground="{DynamicResource SecondaryTextBrush}"
                                                 VerticalAlignment="Center"/>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                    <DataGridTemplateColumn Header="유형" Width="100">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <Border Background="{Binding TypeColor}" 
                                              CornerRadius="4" 
                                              Padding="6,2">
                                                    <TextBlock Text="{Binding EventType}" 
                                                     Foreground="White"
                                                     FontSize="10"
                                                     HorizontalAlignment="Center"/>
                                                </Border>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                    <DataGridTextColumn Header="설명" 
                                              Binding="{Binding Description}" 
                                              Width="*"/>
                                    <DataGridTemplateColumn Header="위험도" Width="80">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Horizontal">
                                                    <Ellipse Width="8" Height="8" 
                                                   Fill="{Binding RiskColor}"
                                                   VerticalAlignment="Center"
                                                   Margin="0,0,4,0"/>
                                                    <TextBlock Text="{Binding RiskLevel}" 
                                                     Foreground="{DynamicResource PrimaryTextBrush}"
                                                     VerticalAlignment="Center"
                                                     FontSize="11"/>
                                                </StackPanel>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                    <DataGridTextColumn Header="IP/프로세스" 
                                              Binding="{Binding Source}" 
                                              Width="140"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </StackPanel>
                    </Border>
                </Grid>
            </ScrollViewer>
        </Border>
    </Grid>
</Page>