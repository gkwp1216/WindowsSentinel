<UserControl x:Class="LogCheck.Controls.SimpleToastControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <Border x:Name="ToastBorder"
            Background="#2196F3"
            BorderBrush="#1976D2"
            BorderThickness="0,0,4,0"
            CornerRadius="6"
            Padding="15,8"
            MinWidth="280"
            MaxWidth="350"
            Margin="0,0,0,8">
        
        <Border.Effect>
            <DropShadowEffect Color="Black" Direction="270" ShadowDepth="2" Opacity="0.25" BlurRadius="6"/>
        </Border.Effect>
        
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <!-- 아이콘 -->
            <TextBlock Grid.Column="0"
                       x:Name="IconText"
                       Text="ℹ️"
                       FontSize="18"
                       VerticalAlignment="Center"
                       Margin="0,0,12,0"/>
            
            <!-- 메시지 -->
            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                <TextBlock x:Name="TitleText"
                           Text="제목"
                           FontWeight="SemiBold"
                           FontSize="14"
                           Foreground="White"
                           TextWrapping="Wrap"/>
                <TextBlock x:Name="MessageText"
                           Text="메시지 내용"
                           FontSize="12"
                           Foreground="#E3F2FD"
                           TextWrapping="Wrap"
                           Margin="0,2,0,0"/>
            </StackPanel>
            
            <!-- 닫기 버튼 -->
            <Button Grid.Column="2"
                    x:Name="CloseButton"
                    Content="✕"
                    FontSize="12"
                    Width="20"
                    Height="20"
                    Background="Transparent"
                    BorderThickness="0"
                    Foreground="White"
                    Cursor="Hand"
                    VerticalAlignment="Top"
                    HorizontalAlignment="Right"
                    Click="CloseButton_Click"
                    ToolTip="닫기"/>
        </Grid>
    </Border>
</UserControl>