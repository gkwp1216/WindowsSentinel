<Page x:Class="LogCheck.Setting"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:local="clr-namespace:LogCheck"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="1200"
      Title="Setting" Background="Transparent">

    <Grid Grid.Column="1">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="{DynamicResource ButtonBackgroundColor}" CornerRadius="12" Padding="20" Margin="20,0,20,20" BorderBrush="#C2C2C2" BorderThickness="1">
            <StackPanel>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0" CornerRadius="8" Height="50" Margin="0" VerticalAlignment="Center" >
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <Button x:Name="BackToMainButton" Width="40" Height="35" Margin="0,0,10,0" Click="BackToMain_Click" ToolTip="메인으로">
                                <materialDesign:PackIcon Kind="ArrowLeft" Width="20" Height="20"/>
                            </Button>
                            <TextBlock Foreground="{DynamicResource ForegroundColor}" Text="화면 모드" FontSize="20" FontWeight="SemiBold" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <Border Grid.Column="1" CornerRadius="8" Padding="15" Margin="0">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">

                            <!-- 라디오 버튼을 사용하여 화면 모드 선택 -->
                            <RadioButton x:Name="LightModeRadioButton" Content="라이트 모드"                                      
                                         Margin="0,0,30,0" 
                                         FontSize="20" FontWeight="SemiBold"
                                         Foreground="{DynamicResource ForegroundColor}"
                                         Cursor="Hand"                                        
                                         Style="{DynamicResource CustomRadioButtonStyle}"
                                         GroupName="Theme"
                                         Checked="SwitchToLightMode_Checked"/>

                            <RadioButton x:Name="DarkModeRadioButton" Content="다크 모드"
                                         FontSize="20" FontWeight="SemiBold"
                                         Foreground="{DynamicResource ForegroundColor}"
                                         Cursor="Hand"
                                         Style="{DynamicResource CustomRadioButtonStyle}"
                                         GroupName="Theme"
                                         Checked="SwitchToDarkMode_Checked"/>
                        </StackPanel>
                    </Border>

                    <Border Grid.Column="2" CornerRadius="8" Padding="15" Margin="0">
                        <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                            <CheckBox x:Name="AutoStartCheckBox"
                                      Content="앱 시작 시 모니터링 자동 시작"
                                      FontSize="16"
                                      VerticalAlignment="Center"
                                      Foreground="{DynamicResource ForegroundColor}"
                                      Margin="0,0,0,10"
                                      Checked="AutoStartCheckBox_Changed"
                                      Unchecked="AutoStartCheckBox_Changed"/>

                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,10">
                                <CheckBox x:Name="AutoSelectNicCheckBox" Content="NIC 자동 선택" FontSize="16" Foreground="{DynamicResource ForegroundColor}"
                                          Margin="0,0,10,0"
                                          Checked="AutoSelectNicCheckBox_Changed" Unchecked="AutoSelectNicCheckBox_Changed"/>
                                <ComboBox x:Name="NicComboBox" Width="260" IsEnabled="False" SelectionChanged="NicComboBox_SelectionChanged"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <TextBlock Text="BPF 필터" FontSize="16" Foreground="{DynamicResource ForegroundColor}" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                <TextBox x:Name="BpfTextBox" Width="260" Margin="0,0,10,0"/>
                                <Button Content="검증/저장" Click="ValidateAndSaveBpf_Click"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </Grid>
            </StackPanel>
        </Border>
    </Grid>
</Page>
