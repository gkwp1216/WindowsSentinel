<Page x:Class="WindowsSentinel.Setting"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WindowsSentinel"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Setting">

    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="테마 설정" 
                       FontSize="24" 
                       Margin="0,0,0,20"/>
            
            <Button x:Name="SwitchToLightMode" 
                    Content="라이트 모드" 
                    Click="SwitchToLightMode_Click"
                    Margin="0,0,0,10"
                    Padding="20,10"/>
            
            <Button x:Name="SwitchToDarkMode" 
                    Content="다크 모드" 
                    Click="SwitchToDarkMode_Click"
                    Padding="20,10"/>
        </StackPanel>
    </Grid>
</Page>
