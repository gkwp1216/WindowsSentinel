<Page x:Class="LogCheck.Setting"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:LogCheck"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d"
      d:DesignHeight="1000" d:DesignWidth="1400"
      Title="Setting"
      Background="Transparent">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- 🔹 설정 섹션 -->
            <StackPanel Grid.Row="1" Orientation="Vertical">

                <!-- 🟦 화면 모드 설정 -->
                <Border Background="{DynamicResource ButtonBackgroundColor}"
                        CornerRadius="8"
                        Padding="20"
                        BorderBrush="#C2C2C2"
                        BorderThickness="1"
                        Margin="20,0,20,20">
                    <StackPanel>
                        <TextBlock Text="화면 모드"
                                   FontSize="20"
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,10"
                                   Foreground="{DynamicResource ForegroundColor}" />

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                            <RadioButton x:Name="LightModeRadioButton"
                                         Content="라이트 모드"
                                         Margin="0,0,30,0"
                                         FontSize="16"
                                         GroupName="Theme"
                                         Cursor="Hand"
                                         Foreground="{DynamicResource ForegroundColor}"
                                         Style="{DynamicResource CustomRadioButtonStyle}"
                                         Checked="SwitchToLightMode_Checked" />

                            <RadioButton x:Name="DarkModeRadioButton"
                                         Content="다크 모드"
                                         FontSize="16"
                                         GroupName="Theme"
                                         Cursor="Hand"
                                         Foreground="{DynamicResource ForegroundColor}"
                                         Style="{DynamicResource CustomRadioButtonStyle}"
                                         Checked="SwitchToDarkMode_Checked" />
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- 🟦 모니터링 설정 -->
                <Border Background="{DynamicResource ButtonBackgroundColor}"
                        CornerRadius="8"
                        Padding="20"
                        BorderBrush="#C2C2C2"
                        BorderThickness="1"
                        Margin="20,0,20,20">
                    <StackPanel>
                        <TextBlock Text="모니터링 설정"
                                   FontSize="20"
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,10"
                                   Foreground="{DynamicResource ForegroundColor}" />

                        <!-- 자동 시작 -->
                        <CheckBox x:Name="AutoStartCheckBox"
                                  Content="앱 시작 시 모니터링 자동 시작"
                                  FontSize="16"
                                  Margin="0,0,0,10"
                                  Foreground="{DynamicResource ForegroundColor}"
                                  Checked="AutoStartCheckBox_Changed"
                                  Unchecked="AutoStartCheckBox_Changed" />

                        <!-- NIC 선택 -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <CheckBox x:Name="AutoSelectNicCheckBox"
                                      Content="NIC 자동 선택"
                                      FontSize="16"
                                      Margin="0,0,10,0"
                                      Foreground="{DynamicResource ForegroundColor}"
                                      Checked="AutoSelectNicCheckBox_Changed"
                                      Unchecked="AutoSelectNicCheckBox_Changed" />
                            <ComboBox x:Name="NicComboBox"
                                      Width="260"
                                      IsEnabled="False"
                                      SelectionChanged="NicComboBox_SelectionChanged" />
                        </StackPanel>

                        <!-- BPF 필터 -->
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock Text="BPF 필터"
                                       FontSize="16"
                                       VerticalAlignment="Center"
                                       Margin="0,0,10,0"
                                       Foreground="{DynamicResource ForegroundColor}" />
                            <TextBox x:Name="BpfTextBox"
                                     Width="260"
                                     Margin="0,0,10,0" />
                            <Button Content="검증/저장"
                                    Click="ValidateAndSaveBpf_Click" />
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- 🟧 필요한 경우: 추가 섹션들 여기에 추가 -->
                <!-- 예: 알림 설정, 저장 경로 설정 등 -->

            </StackPanel>
        </Grid>
    </ScrollViewer>
</Page>
