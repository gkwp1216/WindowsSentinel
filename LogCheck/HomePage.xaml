<Page x:Class="WindowsSentinel.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:local="clr-namespace:WindowsSentinel"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="1200"
      Title="HomePage" Background="White">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- 사이드바 -->
        <Border Grid.Column="0" Background="White" CornerRadius="12" Margin="0,0,10,0" BorderBrush="#C2C2C2" BorderThickness="1">
            <StackPanel Margin="10">
                <Button Style="{StaticResource SidebarButtonStyle}"
                        Tag="&#xE80F;"
                        Content="홈"
                        Click="SidebarHome_Click"/>
                <Button Style="{StaticResource SidebarButtonStyle}"
                        Tag="&#xE71D;"
                        Content="설치된 프로그램"
                        Click="SidebarPrograms_Click"/>
                <Button Style="{StaticResource SidebarButtonStyle}"
                        Tag="&#xE81C;"
                        Content="네트워크 접속 내역"
                        Click="SidebarModification_Click"/>
                <Button Style="{StaticResource SidebarButtonStyle}"
                        Tag="&#xE72E;"
                        Content="보안 로그"
                        Click="SidebarLog_Click"/>
                <Button Style="{StaticResource SidebarButtonStyle}"
                        Tag="&#xE946;"
                        Content="보안 프로그램 복구"
                        Click="SidebarRecovery_Click"/>
            </StackPanel>
        </Border>

        <!-- 메인 콘텐츠 영역 -->
        <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Disabled">
            <Grid Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- 헤더 섹션 -->
                <Border Grid.Row="0" Background="White" CornerRadius="12" Padding="20" Margin="0,0,0,20" BorderBrush="#C2C2C2" BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="Windows Sentinel" 
                                 FontSize="32" 
                                 FontWeight="Bold" 
                                 Foreground="#FF333333"
                                 Margin="0,0,0,10"/>
                        <TextBlock Text="Windows 시스템 보안 모니터링 및 관리 도구" 
                                 FontSize="16" 
                                 Foreground="#FF333333"/>
                    </StackPanel>
                </Border>

                <!-- 주요 기능 섹션 -->
                <Grid Grid.Row="1" Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- 설치된 프로그램 카드 -->
                    <Border Grid.Column="0" 
                            Background="White" 
                            CornerRadius="12" 
                            Margin="0,0,10,0" 
                            BorderBrush="#C2C2C2" 
                            BorderThickness="1"
                            MouseDown="NavigateToPrograms">
                        <Grid Margin="15">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <materialDesign:PackIcon Kind="Application" 
                                                   Width="40" 
                                                   Height="40" 
                                                   HorizontalAlignment="Left"
                                                   VerticalAlignment="Top"
                                                   Foreground="#FF333333"/>
                            <StackPanel Grid.Row="1" Margin="0,15,0,0">
                                <TextBlock Text="설치된 프로그램" 
                                         FontSize="18" 
                                         FontWeight="SemiBold"
                                         Foreground="#FF333333"
                                         Margin="0,0,0,5"/>
                                <TextBlock Text="시스템에 설치된 프로그램 목록을 확인하고 보안 상태를 점검합니다."
                                         TextWrapping="Wrap"
                                         Foreground="#FF333333"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- 네트워크 접속 내역 카드 -->
                    <Border Grid.Column="1" 
                            Background="White" 
                            CornerRadius="12" 
                            Margin="5,0" 
                            BorderBrush="#C2C2C2" 
                            BorderThickness="1"
                            MouseDown="NavigateToNetwork">
                        <Grid Margin="15">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <materialDesign:PackIcon Kind="Network" 
                                                   Width="40" 
                                                   Height="40" 
                                                   HorizontalAlignment="Left"
                                                   VerticalAlignment="Top"
                                                   Foreground="#FF333333"/>
                            <StackPanel Grid.Row="1" Margin="0,15,0,0">
                                <TextBlock Text="네트워크 접속 내역" 
                                         FontSize="18" 
                                         FontWeight="SemiBold"
                                         Foreground="#FF333333"
                                         Margin="0,0,0,5"/>
                                <TextBlock Text="시스템의 네트워크 접속 기록을 확인하고 보안 상태를 점검합니다."
                                         TextWrapping="Wrap"
                                         Foreground="#FF333333"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- 보안 로그 카드 -->
                    <Border Grid.Column="2" 
                            Background="White" 
                            CornerRadius="12" 
                            Margin="10,0,0,0" 
                            BorderBrush="#C2C2C2" 
                            BorderThickness="1"
                            MouseDown="NavigateToLog">
                        <Grid Margin="15">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <materialDesign:PackIcon Kind="FileDocument" 
                                                   Width="40" 
                                                   Height="40" 
                                                   HorizontalAlignment="Left"
                                                   VerticalAlignment="Top"
                                                   Foreground="#FF333333"/>
                            <StackPanel Grid.Row="1" Margin="0,15,0,0">
                                <TextBlock Text="보안 로그" 
                                         FontSize="18" 
                                         FontWeight="SemiBold"
                                         Foreground="#FF333333"
                                         Margin="0,0,0,5"/>
                                <TextBlock Text="시스템의 보안 로그를 확인하고 보안 이벤트를 분석합니다."
                                         TextWrapping="Wrap"
                                         Foreground="#FF333333"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </Grid>

                <!-- 보안 상태 섹션 -->
                <Border Grid.Row="2" 
                        Background="White" 
                        CornerRadius="12" 
                        BorderBrush="#C2C2C2" 
                        BorderThickness="1">
                    <Grid Margin="20">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="시스템 보안 상태" 
                                 FontSize="24" 
                                 FontWeight="Bold"
                                 Foreground="#FF333333"
                                 Margin="0,0,0,20"/>

                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Windows Defender 상태 -->
                            <Border Grid.Column="0" 
                                    Background="White" 
                                    CornerRadius="8" 
                                    Margin="0,0,10,0" 
                                    Padding="15">
                                <StackPanel>
                                    <TextBlock Text="Windows Defender" 
                                             FontSize="16" 
                                             FontWeight="SemiBold"
                                             Foreground="#FF333333"
                                             Margin="0,0,0,10"/>
                                    <TextBlock x:Name="DefenderStatus" 
                                             Text="확인 중..."
                                             Foreground="#4EC9B0"/>
                                </StackPanel>
                            </Border>

                            <!-- Windows Firewall 상태 -->
                            <Border Grid.Column="1" 
                                    Background="White" 
                                    CornerRadius="8" 
                                    Margin="5,0" 
                                    Padding="15">
                                <StackPanel>
                                    <TextBlock Text="Windows Firewall" 
                                             FontSize="16" 
                                             FontWeight="SemiBold"
                                             Foreground="#FF333333"
                                             Margin="0,0,0,10"/>
                                    <TextBlock x:Name="FirewallStatus" 
                                             Text="확인 중..."
                                             Foreground="#4EC9B0"/>
                                </StackPanel>
                            </Border>

                            <!-- Security Center 상태 -->
                            <Border Grid.Column="2" 
                                    Background="White" 
                                    CornerRadius="8" 
                                    Margin="5,0" 
                                    Padding="15">
                                <StackPanel>
                                    <TextBlock Text="Security Center" 
                                             FontSize="16" 
                                             FontWeight="SemiBold"
                                             Foreground="#FF333333"
                                             Margin="0,0,0,10"/>
                                    <TextBlock x:Name="SecurityCenterStatus" 
                                             Text="확인 중..."
                                             Foreground="#4EC9B0"/>
                                </StackPanel>
                            </Border>

                            <!-- BitLocker 상태 -->
                            <Border Grid.Column="3" 
                                    Background="#1E1E1E" 
                                    CornerRadius="8" 
                                    Margin="10,0,0,0" 
                                    Padding="15">
                                <StackPanel>
                                    <TextBlock Text="BitLocker" 
                                             FontSize="16" 
                                             FontWeight="SemiBold"
                                             Foreground="White"
                                             Margin="0,0,0,10"/>
                                    <TextBlock x:Name="BitLockerStatus" 
                                             Text="확인 중..."
                                             Foreground="#4EC9B0"/>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </Grid>
                </Border>
            </Grid>
        </ScrollViewer>
    </Grid>
</Page> 