<Window x:Class="LogCheck.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LogCheck"
        mc:Ignorable="d"
        Title="Windows Sentinel" Height="800" Width="1200"
        Background="White">
    
    <Window.Resources>
        <!-- Material 아이콘 스타일 -->
        <Style x:Key="MaterialIconStyle" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Segoe MDL2 Assets"/>
            <Setter Property="FontSize" Value="64"/>
            <Setter Property="Foreground" Value="#4CAF50"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,0,0,20"/>
        </Style>

        <!-- 네비게이션 아이콘 스타일 -->
        <Style x:Key="NavIconStyle" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Segoe MDL2 Assets"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="Foreground" Value="#4CAF50"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <DropShadowEffect x:Key="ShadowEffect" BlurRadius="10" Color="Black" ShadowDepth="4" Opacity="0.3" />
    </Window.Resources>

    <Grid x:Name="mainGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        

        <!-- 가이드 오버레이 -->
        <Canvas x:Name="GuideOverlay" 
                Background="#80000000" 
                Visibility="Collapsed" 
                Panel.ZIndex="999"
                MouseLeftButtonDown="GuideOverlay_MouseLeftButtonDown"
                Grid.RowSpan="3">
            <Canvas x:Name="MaskLayer"/>
            
            <!-- 가이드 컨트롤 -->
            <Border Background="{DynamicResource MaterialDesignPaper}"
                    CornerRadius="8"
                    Padding="20"
                    Width="400"
                    Canvas.Left="400"
                    Canvas.Top="200">
                <StackPanel>
                    <TextBlock x:Name="GuideText"
                             TextWrapping="Wrap"
                             Margin="0,0,0,20"
                             FontSize="16"/>
                    
                    <StackPanel Orientation="Horizontal" 
                              HorizontalAlignment="Right">
                        <Button x:Name="PrevButton"
                                Content="이전"
                                Click="PrevButton_Click"
                                Margin="0,0,10,0"
                                Style="{StaticResource FlatButtonStyle}"/>
                        
                        <Button x:Name="NextButton"
                                Content="다음"
                                Click="NextButton_Click"
                                Margin="0,0,10,0"
                                Style="{StaticResource FlatButtonStyle}"/>
                        
                        <Button x:Name="SkipButton"
                                Content="건너뛰기"
                                Click="SkipButton_Click"
                                Style="{StaticResource FlatButtonStyle}"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Canvas>

        <!-- Top Navigation Menu -->
        <Border Grid.Row="0" Background="White" CornerRadius="12" Margin="10" BorderBrush="#C2C2C2" BorderThickness="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" 
                            Orientation="Horizontal" 
                            Margin="10,10,0,10" 
                            HorizontalAlignment="Left">
                    
                    <Button Style="{StaticResource NavIconButtonStyle}"
                            Cursor="Hand"
                            Click="BtnHome_click" 
                            ToolTip="홈">
                        <TextBlock Text="&#xE80F;" 
                                 Style="{StaticResource NavIconStyle}"/>
                    </Button>
                </StackPanel>

                <StackPanel Grid.Column="1" 
                            Orientation="Horizontal" 
                            Margin="0,10,10,10" 
                            HorizontalAlignment="Right">

                    <Button x:Name="HelpButton"
                            Style="{StaticResource NavIconButtonStyle}" 
                            Cursor="Hand"
                            Click="HelpButton_Click"
                            ToolTip="프로그램 안내">
                        <TextBlock Text="&#xE897;" Style="{StaticResource NavIconStyle}"/>
                    </Button>
                    
                    <Button Style="{StaticResource NavIconButtonStyle}" 
                            Cursor="Hand"
                            Click="BtnSetting_Click"
                            ToolTip="설정">
                        <TextBlock Text="&#xE713;" 
                                 Style="{StaticResource NavIconStyle}"/>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Security Status Section -->
        <Border x:Name="securityStatusSection" Grid.Row="1" Background="White" CornerRadius="12" Padding="20" Margin="10" BorderBrush="#C2C2C2" BorderThickness="1">
            <StackPanel>
                <TextBlock Text="보안 상태" Foreground="#FF333333" FontSize="24" Margin="0,0,0,20"/>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Windows Defender Status -->
                    <Border Grid.Column="0" Background="White" CornerRadius="8" Padding="15" Margin="0,0,10,0">
                        <StackPanel>
                            <TextBlock Text="Windows Defender" Foreground="#FF333333" FontSize="16"/>
                            <TextBlock Text="정상" Foreground="#4CAF50" FontSize="14" Margin="0,5,0,0"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </StackPanel>
        </Border>

        <!-- Main Content Area -->
        <Grid Grid.Row="2">
            <!-- Main Buttons Grid -->
            <Grid x:Name="mainButtonsGrid" Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- 설치된 프로그램 버튼 -->
                <Button x:Name="InstalledProgramsButton"
                        Grid.Row="0" Grid.Column="0" 
                        Style="{DynamicResource MainButtonStyle}" 
                        Cursor="Hand"
                        Click="InstalledPrograms_Click"
                        Margin="5"
                        VerticalAlignment="Stretch"
                        HorizontalAlignment="Stretch">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <TextBlock Text="&#xE71D;" 
                                 Style="{StaticResource MaterialIconStyle}"
                                 Grid.Row="0"
                                 VerticalAlignment="Center"/>
                        <TextBlock Text="설치된 프로그램 목록"                               
                                   Grid.Row="1"
                                   TextAlignment="Center"
                                   FontSize="25"
                                   FontWeight="SemiBold"
                                   Margin="0,20,0,0"/>
                    </Grid>
                </Button>

                <!-- 수정/변경 내역 버튼 -->
                <Button x:Name="ModificationHistoryButton"
                        Grid.Row="0" Grid.Column="1" 
                        Style="{DynamicResource MainButtonStyle}" 
                        Cursor="Hand"
                        Click="ModificationHistory_Click"
                        Margin="5"
                        VerticalAlignment="Stretch"
                        HorizontalAlignment="Stretch">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <TextBlock Text="&#xE81C;" 
                                   Style="{StaticResource MaterialIconStyle}"
                                   Grid.Row="0"
                                   VerticalAlignment="Center"/>
                        <TextBlock Text="네트워크 접속 내역" 
                                   Grid.Row="1"
                                   TextAlignment="Center"
                                   FontSize="25" 
                                   FontWeight="SemiBold"
                                   Margin="0,20,0,0"/>
                    </Grid>
                </Button>

                <!-- 보안 로그 버튼 -->
                <Button x:Name="SecurityLogButton"
                        Grid.Row="1" Grid.Column="0" 
                        Style="{DynamicResource MainButtonStyle}" 
                        Cursor="Hand"
                        Click="BtnLog_Click"
                        Margin="5"
                        VerticalAlignment="Stretch"
                        HorizontalAlignment="Stretch">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <TextBlock Text="&#xE72E;" 
                                   Style="{StaticResource MaterialIconStyle}"
                                   Grid.Row="0"
                                   VerticalAlignment="Center"/>
                        <TextBlock Text="보안 로그" 
                                   Grid.Row="1"
                                   TextAlignment="Center"
                                   FontSize="25" 
                                   FontWeight="SemiBold"
                                   Margin="0,20,0,0"/>
                    </Grid>
                </Button>

                <!-- 보안 복구 버튼 -->
                <Button x:Name="SecurityRecoveryButton"
                        Grid.Row="1" Grid.Column="1" 
                        Style="{DynamicResource MainButtonStyle}" 
                        Cursor="Hand"
                        Click="SecurityRecovery_Click"
                        Margin="5"
                        VerticalAlignment="Stretch"
                        HorizontalAlignment="Stretch">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <TextBlock Text="&#xE946;" 
                                   Style="{StaticResource MaterialIconStyle}"
                                   Grid.Row="0"
                                   VerticalAlignment="Center"/>
                        <TextBlock Text="보안 프로그램 복구" 
                                   Grid.Row="1"
                                   TextAlignment="Center"
                                   FontSize="25" 
                                   FontWeight="SemiBold"
                                   Margin="0,20,0,0"/>
                    </Grid>
                </Button>
            </Grid>

            <!-- Hidden Frame for Page Navigation -->
            <Frame x:Name="MainFrame" Visibility="Collapsed" NavigationUIVisibility="Hidden"/>
        </Grid>
    </Grid>
</Window>