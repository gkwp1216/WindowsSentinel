<Window x:Class="LogCheck.MainWindows"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LogCheck"
        mc:Ignorable="d"
        Icon="/IconTexture/WindowsSentinel.ico"
        Title="MainWindows" 
        Height="800" Width="1200"
        ResizeMode="CanMinimize"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource TextureBackground}">

    <Window.Resources>
        <!-- Material 아이콘 스타일 -->
        <Style x:Key="MaterialIconStyle" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Segoe MDL2 Assets"/>
            <Setter Property="FontSize" Value="64"/>
            <Setter Property="Foreground" Value="#1A6FE0"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,0,0,20"/>
        </Style>

        <!-- 네비게이션 아이콘 스타일 -->
        <Style x:Key="NavIconStyle" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Segoe MDL2 Assets"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <DropShadowEffect x:Key="ShadowEffect" BlurRadius="10" Color="Black" ShadowDepth="4" Opacity="0.3" />
    </Window.Resources>

    <Grid x:Name="mainGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Canvas x:Name="GuideOverlay" Background="#80000000" Visibility="Collapsed" Panel.ZIndex="999">
            <Canvas x:Name="MaskLayer"/>

            <!-- 건너뛰기 버튼 -->
            <Button x:Name="GuideSkipButton"
                Content="SKIP"
                Click="GuideSkip_Click"    
                Foreground="Black"
                FontWeight="Bold"
                Padding="8,4"         
                Cursor="Hand"
                Visibility="Collapsed"
                Panel.ZIndex="1001"/>

            <!-- 말풍선 -->
            <Border x:Name="GuideBubble"
                Background="White"
                CornerRadius="12"
                Padding="15"
                Width="300"
                Panel.ZIndex="1000"
                Effect="{StaticResource ShadowEffect}">
                <StackPanel>
                    <!-- 설명 텍스트 -->
                    <TextBlock x:Name="GuideText"
                           Text="설명 텍스트"
                           FontSize="16"
                           TextWrapping="Wrap"
                           Foreground="Black"
                           Margin="0,0,0,10"/>

                    <!-- 이전/다음 버튼 영역 -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button x:Name="GuidePrevButton" Content="이전" Click="GuidePrev_Click" Margin="0,0,5,0" Cursor=""/>
                        <Button x:Name="GuideNextButton" Content="다음" Click="GuideNext_Click"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <Path x:Name="GuideTail"                 
              Fill="White"
              Data="M 0 0 L 10 10 L 20 0 Z"
              Width="20" Height="10"
              Stretch="Fill"
              RenderTransformOrigin="0.5,0.5"
              Panel.ZIndex="1002"/>
        </Canvas>

        <!-- Top Navigation Menu -->
        <Border Grid.Row="0" Background="{DynamicResource ButtonBackgroundColor}" CornerRadius="12" Margin="20" BorderBrush="#C2C2C2" BorderThickness="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" 
                        Orientation="Horizontal" 
                        Margin="10,10,0,10" 
                        HorizontalAlignment="Left">

                    <Button Style="{DynamicResource NavIconButtonStyle}"
                        Cursor="Hand"
                        Click="BtnHome_click" 
                        ToolTip="홈">
                        <TextBlock Text="&#xE80F;" 
                               Style="{StaticResource NavIconStyle}"/>
                    </Button>
                </StackPanel>

                <StackPanel Grid.Column="1" 
                        Orientation="Horizontal" 
                        Margin="0,10,10,10" 
                        HorizontalAlignment="Right">

                    <Button x:Name="HelpButton"
                        Style="{DynamicResource NavIconButtonStyle}" 
                        Cursor="Hand"
                        Click="HelpButton_Click"
                        ToolTip="프로그램 안내">
                        <TextBlock Text="&#xE897;" Style="{StaticResource NavIconStyle}"/>
                    </Button>

                    <Button Style="{DynamicResource NavIconButtonStyle}" 
                        Cursor="Hand"
                        Click="BtnSetting_Click"
                        ToolTip="설정">
                        <TextBlock Text="&#xE713;" 
                             Style="{StaticResource NavIconStyle}"/>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Security Status Section -->
        <Border x:Name="securityStatusSection" Grid.Row="1" Background="{DynamicResource ButtonBackgroundColor}" CornerRadius="12" Padding="20" Margin="20,0,20,10" BorderBrush="#C2C2C2" BorderThickness="1">
            <StackPanel>
                <Grid Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" Text="보안 상태" Foreground="{DynamicResource ForegroundColor}" FontSize="24" FontWeight="SemiBold" VerticalAlignment="Center"/>

                    <Button Grid.Column="1" 
                        x:Name="RefreshSecurityStatusButton"
                        Click="RefreshSecurityStatus_Click"
                        Style="{DynamicResource NavIconButtonStyle}" 
                        Cursor="Hand"
                        ToolTip="보안 상태 새로 고침"
                        Width="32" Height="32">
                        <TextBlock Text="&#xE72C;" 
                               FontFamily="Segoe MDL2 Assets"
                               FontSize="16"
                               Foreground="{DynamicResource ForegroundColor}"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>
                    </Button>
                </Grid>

                <!-- 보안 상태 메인 그리드 -->
                <Grid>
                    <!-- 3개 항목을 가로로 배치 -->
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- 1. 핵심 Windows 보안 서비스 상태 -->
                    <Border Grid.Column="0" Background="{DynamicResource BackgroundColor}" CornerRadius="8" Padding="15" Margin="0,0,10,0">
                        <StackPanel>
                            <TextBlock Text="🛡️ 핵심 보안 서비스" Foreground="{DynamicResource ForegroundColor}" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,15"/>

                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,3">
                                    <TextBlock Text="Defender:" Foreground="{DynamicResource ForegroundColor}" FontSize="13" Width="80"/>
                                    <TextBlock x:Name="DefenderStatusText" Text="정상" Foreground="Green" FontSize="13" FontWeight="SemiBold"/>
                                </StackPanel>

                                <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,3">
                                    <TextBlock Text="Firewall:" Foreground="{DynamicResource ForegroundColor}" FontSize="13" Width="80"/>
                                    <TextBlock x:Name="FirewallStatusText" Text="정상" Foreground="Green" FontSize="13" FontWeight="SemiBold"/>
                                </StackPanel>

                                <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,3">
                                    <TextBlock Text="Security:" Foreground="{DynamicResource ForegroundColor}" FontSize="13" Width="80"/>
                                    <TextBlock x:Name="SecurityCenterStatusText" Text="정상" Foreground="Green" FontSize="13" FontWeight="SemiBold"/>
                                </StackPanel>

                                <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="0,3">
                                    <TextBlock Text="BitLocker:" Foreground="{DynamicResource ForegroundColor}" FontSize="13" Width="80"/>
                                    <TextBlock x:Name="BitLockerStatusText" Text="비활성" Foreground="Orange" FontSize="13" FontWeight="SemiBold"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- 2. 실시간 보안 모니터링 상태 -->
                    <Border Grid.Column="1" Background="{DynamicResource BackgroundColor}" CornerRadius="8" Padding="15" Margin="5,0,5,0">
                        <StackPanel>
                            <TextBlock Text="📊 실시간 모니터링" Foreground="{DynamicResource ForegroundColor}" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,15"/>

                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,3">
                                    <TextBlock Text="네트워크:" Foreground="{DynamicResource ForegroundColor}" FontSize="13" Width="80"/>
                                    <TextBlock x:Name="NetworkMonitoringStatusText" Text="활성" Foreground="Green" FontSize="13" FontWeight="SemiBold"/>
                                </StackPanel>

                                <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,3">
                                    <TextBlock Text="경고 24h:" Foreground="{DynamicResource ForegroundColor}" FontSize="13" Width="80"/>
                                    <TextBlock x:Name="Alerts24HText" Text="0건" Foreground="Green" FontSize="13" FontWeight="SemiBold"/>
                                </StackPanel>

                                <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,3">
                                    <TextBlock Text="고위험:" Foreground="{DynamicResource ForegroundColor}" FontSize="13" Width="80"/>
                                    <TextBlock x:Name="HighRiskAlertsText" Text="0건" Foreground="Green" FontSize="13" FontWeight="SemiBold"/>
                                </StackPanel>

                                <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="0,3">
                                    <TextBlock Text="최근검사:" Foreground="{DynamicResource ForegroundColor}" FontSize="13" Width="80"/>
                                    <TextBlock x:Name="LastScanText" Text="미실행" Foreground="Orange" FontSize="13" FontWeight="SemiBold"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- 3. 시스템 위험 지표 -->
                    <Border Grid.Column="2" Background="{DynamicResource BackgroundColor}" CornerRadius="8" Padding="15" Margin="10,0,0,0">
                        <StackPanel>
                            <TextBlock Text="⚠️ 시스템 위험 지표" Foreground="{DynamicResource ForegroundColor}" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,15"/>

                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,3">
                                    <TextBlock Text="네트워크:" Foreground="{DynamicResource ForegroundColor}" FontSize="13" Width="80"/>
                                    <TextBlock x:Name="SuspiciousNetworkText" Text="정상" Foreground="Green" FontSize="13" FontWeight="SemiBold"/>
                                </StackPanel>

                                <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,3">
                                    <TextBlock Text="악성IP:" Foreground="{DynamicResource ForegroundColor}" FontSize="13" Width="80"/>
                                    <TextBlock x:Name="MaliciousIPText" Text="없음" Foreground="Green" FontSize="13" FontWeight="SemiBold"/>
                                </StackPanel>

                                <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,3">
                                    <TextBlock Text="프로그램:" Foreground="{DynamicResource ForegroundColor}" FontSize="13" Width="80"/>
                                    <TextBlock x:Name="InstalledProgramsCountText" Text="확인중" Foreground="Gray" FontSize="13" FontWeight="SemiBold"/>
                                </StackPanel>

                                <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="0,3">
                                    <TextBlock Text="악성검사:" Foreground="{DynamicResource ForegroundColor}" FontSize="13" Width="80"/>
                                    <TextBlock x:Name="LastMalwareScanText" Text="미실행" Foreground="Orange" FontSize="13" FontWeight="SemiBold"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Border>
                </Grid>
            </StackPanel>
        </Border>

        <!-- Main Buttons Grid -->
        <Border x:Name="mainButtonsGrid" CornerRadius="12" Grid.Row="2" Margin="20,10,20,20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- 설치된 프로그램 버튼 (행/열 변경) -->
                <Button x:Name="InstalledProgramsButton"
                    Grid.Row="1" Grid.Column="0" 
                    Margin="0,10,10,0"
                    Style="{DynamicResource MainButtonStyle}" 
                    Cursor="Hand"
                    Click="NetWorksNew_Click">
                    <StackPanel VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Margin="0" Background="Transparent">
                        <TextBlock Text="&#xE704;" 
                             Style="{StaticResource MaterialIconStyle}"/>
                        <TextBlock Text="네트워크 모니터링"                          
                               TextAlignment="Center"
                               FontSize="25"
                               FontWeight="SemiBold"/>

                    </StackPanel>
                </Button>

                <!-- 네트워크 접속 내역 버튼 -->
                <Button x:Name="ModificationHistoryButton"
                    Grid.Row="0" Grid.Column="1" 
                    Margin="10,0,0,10"
                    Style="{DynamicResource MainButtonStyle}" 
                    Cursor="Hand"
                    Click="ProgramList_Click">
                    <StackPanel VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Margin="0" Background="Transparent">
                        <TextBlock Text="&#xE71D;" 
                               Style="{StaticResource MaterialIconStyle}"/>
                        <TextBlock Text="설치된 프로그램 목록" 
                               TextAlignment="Center"
                               FontSize="25" 
                               FontWeight="SemiBold"/>

                    </StackPanel>
                </Button>

                <!-- 백신 검사 버튼 (기존 보안 로그 버튼 위치/기능 변경) -->
                <Button x:Name="SecurityLogButton"
                    Grid.Row="0" Grid.Column="0" 
                    Margin="0,0,10,10"
                    Style="{DynamicResource MainButtonStyle}" 
                    Cursor="Hand"
                    Click="Vaccine_Click">
                    <StackPanel VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Margin="0" Background="Transparent">
                        <TextBlock Text="&#xE721;" 
                               Style="{StaticResource MaterialIconStyle}"/>
                        <TextBlock Text="악성 프로그램 탐지" 
                               TextAlignment="Center"
                               FontSize="25" 
                               FontWeight="SemiBold"/>
                    </StackPanel>
                </Button>

                <!-- 보안 복구 버튼 -->
                <Button x:Name="SecurityRecoveryButton"
                    Grid.Row="1" Grid.Column="1" 
                    Margin="10,10,0,0"
                    Style="{DynamicResource MainButtonStyle}" 
                    Cursor="Hand"
                    Click="SecurityRecovery_Click">
                    <StackPanel VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Margin="0" Background="Transparent">
                        <TextBlock Text="&#xE946;" 
                               Style="{StaticResource MaterialIconStyle}"/>
                        <TextBlock Text="보안 프로그램 복구" 
                               TextAlignment="Center"
                               FontSize="25" 
                               FontWeight="SemiBold"/>
                    </StackPanel>
                </Button>
            </Grid>
        </Border>
    </Grid>
</Window>