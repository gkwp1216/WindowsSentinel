<Window x:Class="LogCheck.MainWindows"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LogCheck"
        mc:Ignorable="d"
        Icon="/IconTexture/WindowsSentinel.ico"
        Title="MainWindows" 
        Height="800" Width="1200"
        ResizeMode="CanMinimize"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource TextureBackground}">

    <Window.Resources>
        <!-- Material 아이콘 스타일 -->
        <Style x:Key="MaterialIconStyle" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Segoe MDL2 Assets"/>
            <Setter Property="FontSize" Value="64"/>
            <Setter Property="Foreground" Value="#1A6FE0"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,0,0,20"/>
        </Style>

        <!-- 네비게이션 아이콘 스타일 -->
        <Style x:Key="NavIconStyle" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Segoe MDL2 Assets"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <!-- 사이드바 버튼 스타일 -->
        <Style x:Key="SidebarButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{DynamicResource ForegroundColor}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,12"/>
            <Setter Property="Margin" Value="0,2"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#E3F2FD"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#BBDEFB"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 개선된 사이드바 슬라이드 애니메이션 -->
        <Storyboard x:Key="ShowSidebar">
            <!-- 위치 애니메이션 -->
            <DoubleAnimation Storyboard.TargetName="SidebarTransform" 
                           Storyboard.TargetProperty="X" 
                           From="-250" To="0" Duration="0:0:0.4">
                <DoubleAnimation.EasingFunction>
                    <BackEase EasingMode="EaseOut" Amplitude="0.3"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <!-- 투명도 애니메이션 -->
            <DoubleAnimation Storyboard.TargetName="Sidebar" 
                           Storyboard.TargetProperty="Opacity" 
                           From="0.7" To="1.0" Duration="0:0:0.25">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>
        
        <Storyboard x:Key="HideSidebar">
            <!-- 위치 애니메이션 -->
            <DoubleAnimation Storyboard.TargetName="SidebarTransform" 
                           Storyboard.TargetProperty="X" 
                           From="0" To="-250" Duration="0:0:0.3">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseIn"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <!-- 투명도 애니메이션 -->
            <DoubleAnimation Storyboard.TargetName="Sidebar" 
                           Storyboard.TargetProperty="Opacity" 
                           From="1.0" To="0.7" Duration="0:0:0.2">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseIn"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>

        <DropShadowEffect x:Key="ShadowEffect" BlurRadius="10" Color="Black" ShadowDepth="4" Opacity="0.3" />
    </Window.Resources>

    <Grid x:Name="mainGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 사이드바 마우스 호버 트리거 영역 -->
        <Border x:Name="SidebarTrigger" 
                Grid.RowSpan="3" 
                Width="15"
                Background="Transparent" 
                HorizontalAlignment="Left"
                Panel.ZIndex="1060"
                MouseEnter="SidebarTrigger_MouseEnter"
                MouseLeave="SidebarTrigger_MouseLeave"
                Cursor="Hand"
                ToolTip="사이드바 열기">
            <Border.Style>
                <Style TargetType="Border">
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Trigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ColorAnimation Storyboard.TargetProperty="Background.Color"
                                                       To="#1A0078D4" Duration="0:0:0.2"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                            <Trigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ColorAnimation Storyboard.TargetProperty="Background.Color"
                                                       To="Transparent" Duration="0:0:0.3"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.ExitActions>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Border.Style>
        </Border>

        <!-- 토글형 사이드바 -->
        <Border x:Name="Sidebar" 
                Grid.RowSpan="3" 
                Width="250"
                Background="{DynamicResource BackgroundColor}" 
                BorderBrush="#E0E0E0" 
                BorderThickness="0,0,1,0"
                HorizontalAlignment="Left"
                Panel.ZIndex="1050"
                Opacity="1.0"
                MouseEnter="Sidebar_MouseEnter"
                MouseLeave="Sidebar_MouseLeave">
            <Border.RenderTransform>
                <TranslateTransform x:Name="SidebarTransform" X="-250"/>
            </Border.RenderTransform>
            <Border.Style>
                <Style TargetType="Border">
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect Color="Black" BlurRadius="10" ShadowDepth="5" Opacity="0.3"/>
                        </Setter.Value>
                    </Setter>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Effect">
                                <Setter.Value>
                                    <DropShadowEffect Color="Black" BlurRadius="15" ShadowDepth="8" Opacity="0.5"/>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Border.Style>
            
            <ScrollViewer VerticalScrollBarVisibility="Auto" 
                          HorizontalScrollBarVisibility="Disabled">
                <StackPanel Margin="0,10,0,20">
                    <!-- 상단 헤더 영역 (로고 + 닫기 버튼) -->
                    <Grid Margin="10,10,10,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- 로고 -->
                        <StackPanel Grid.Column="0" HorizontalAlignment="Left">
                            <TextBlock Text="🛡️" 
                                       FontSize="24" 
                                       HorizontalAlignment="Left" 
                                       Margin="0,0,0,5"/>
                            <TextBlock Text="WindowsSentinel" 
                                       FontSize="14" 
                                       FontWeight="Bold" 
                                       Foreground="{DynamicResource ForegroundColor}" 
                                       HorizontalAlignment="Left"/>
                        </StackPanel>
                        
                        <!-- 닫기 버튼 -->
                        <Button Grid.Column="1" 
                                x:Name="SidebarCloseButton"
                                Click="SidebarClose_Click"
                                Style="{DynamicResource NavIconButtonStyle}"
                                Width="32" Height="32"
                                ToolTip="사이드바 닫기"
                                Cursor="Hand">
                            <TextBlock Text="&#xE711;" 
                                       FontFamily="Segoe MDL2 Assets" 
                                       FontSize="14" 
                                       Foreground="{DynamicResource ForegroundColor}"
                                       HorizontalAlignment="Center" 
                                       VerticalAlignment="Center"/>
                        </Button>
                    </Grid>
                    
                    <!-- 구분선 -->
                    <Border Height="1" 
                            Background="{DynamicResource BorderBrush}" 
                            Margin="15,0,15,20" 
                            Opacity="0.3"/>
                    <StackPanel Margin="0,0,0,30" HorizontalAlignment="Center">
                        <TextBlock Text="🛡️" 
                                   FontSize="32" 
                                   HorizontalAlignment="Center" 
                                   Margin="0,0,0,10"/>
                        <TextBlock Text="WindowsSentinel" 
                                   FontSize="16" 
                                   FontWeight="Bold" 
                                   Foreground="{DynamicResource ForegroundColor}" 
                                   HorizontalAlignment="Center"/>
                    </StackPanel>

                    <!-- 내비게이션 메뉴 -->
                    <StackPanel>
                        <Button Style="{StaticResource SidebarButtonStyle}" 
                                Click="SecurityDashboard_Click" 
                                Cursor="Hand">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="&#xE83D;" 
                                           FontFamily="Segoe MDL2 Assets" 
                                           FontSize="18" 
                                           Margin="0,0,15,0" 
                                           VerticalAlignment="Center"/>
                                <TextBlock Text="보안 상태 대시보드" 
                                           FontSize="14" 
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <Button Style="{StaticResource SidebarButtonStyle}" 
                                Click="NetWorksNew_Click" 
                                Cursor="Hand">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="&#xE704;" 
                                           FontFamily="Segoe MDL2 Assets" 
                                           FontSize="18" 
                                           Margin="0,0,15,0" 
                                           VerticalAlignment="Center"/>
                                <TextBlock Text="네트워크 보안" 
                                           FontSize="14" 
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <Button Style="{StaticResource SidebarButtonStyle}" 
                                Click="AutoBlock_Click" 
                                Cursor="Hand">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="&#xE72E;" 
                                           FontFamily="Segoe MDL2 Assets" 
                                           FontSize="18" 
                                           Margin="0,0,15,0" 
                                           VerticalAlignment="Center"/>
                                <TextBlock Text="자동 차단 시스템" 
                                           FontSize="14" 
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <Button Style="{StaticResource SidebarButtonStyle}" 
                                Click="Recoverys_Click" 
                                Cursor="Hand">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="&#xE777;" 
                                           FontFamily="Segoe MDL2 Assets" 
                                           FontSize="18" 
                                           Margin="0,0,15,0" 
                                           VerticalAlignment="Center"/>
                                <TextBlock Text="시스템 복구" 
                                           FontSize="14" 
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <Button Style="{StaticResource SidebarButtonStyle}" 
                                Click="ProgramList_Click" 
                                Cursor="Hand">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="&#xE8B7;" 
                                           FontFamily="Segoe MDL2 Assets" 
                                           FontSize="18" 
                                           Margin="0,0,15,0" 
                                           VerticalAlignment="Center"/>
                                <TextBlock Text="설치된 프로그램" 
                                           FontSize="14" 
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <Button Style="{StaticResource SidebarButtonStyle}" 
                                Click="BtnLog_Click" 
                                Cursor="Hand">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="&#xE7C3;" 
                                           FontFamily="Segoe MDL2 Assets" 
                                           FontSize="18" 
                                           Margin="0,0,15,0" 
                                           VerticalAlignment="Center"/>
                                <TextBlock Text="보안 로그" 
                                           FontSize="14" 
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- Toast Notification Container (최상위 레이어) -->
        <Grid x:Name="ToastNotificationContainer" 
              Grid.RowSpan="3" 
              IsHitTestVisible="False" 
              Panel.ZIndex="1100"
              HorizontalAlignment="Right"
              VerticalAlignment="Top"
              Margin="0,20,20,0">
            <StackPanel x:Name="ToastStack" 
                        Orientation="Vertical"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"/>
        </Grid>

        <Canvas x:Name="GuideOverlay" Background="#80000000" Visibility="Collapsed" Panel.ZIndex="999">
            <Canvas x:Name="MaskLayer"/>

            <!-- 건너뛰기 버튼 -->
            <Button x:Name="GuideSkipButton"
                Content="SKIP"
                Click="GuideSkip_Click"    
                Foreground="Black"
                FontWeight="Bold"
                Padding="8,4"         
                Cursor="Hand"
                Visibility="Collapsed"
                Panel.ZIndex="1001"/>

            <!-- 말풍선 -->
            <Border x:Name="GuideBubble"
                Background="White"
                CornerRadius="12"
                Padding="15"
                Width="300"
                Panel.ZIndex="1000"
                Effect="{StaticResource ShadowEffect}">
                <StackPanel>
                    <!-- 설명 텍스트 -->
                    <TextBlock x:Name="GuideText"
                           Text="설명 텍스트"
                           FontSize="16"
                           TextWrapping="Wrap"
                           Foreground="Black"
                           Margin="0,0,0,10"/>

                    <!-- 이전/다음 버튼 영역 -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button x:Name="GuidePrevButton" Content="이전" Click="GuidePrev_Click" Margin="0,0,5,0" Cursor=""/>
                        <Button x:Name="GuideNextButton" Content="다음" Click="GuideNext_Click"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <Path x:Name="GuideTail"                 
              Fill="White"
              Data="M 0 0 L 10 10 L 20 0 Z"
              Width="20" Height="10"
              Stretch="Fill"
              RenderTransformOrigin="0.5,0.5"
              Panel.ZIndex="1002"/>
        </Canvas>

        <!-- Top Navigation Menu -->
        <Border Grid.Row="0" Background="{DynamicResource ButtonBackgroundColor}" CornerRadius="12" Margin="20" BorderBrush="#C2C2C2" BorderThickness="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" 
                        Orientation="Horizontal" 
                        Margin="10,10,0,10" 
                        HorizontalAlignment="Left">

                    <Button x:Name="MenuToggleButton"
                        Style="{DynamicResource NavIconButtonStyle}"
                        Cursor="Hand"
                        Click="MenuToggle_Click" 
                        ToolTip="메뉴">
                        <TextBlock Text="&#xE700;" 
                               Style="{StaticResource NavIconStyle}"/>
                    </Button>

                    <Button Style="{DynamicResource NavIconButtonStyle}"
                        Cursor="Hand"
                        Click="BtnHome_click" 
                        ToolTip="홈"
                        Margin="5,0,0,0">
                        <TextBlock Text="&#xE80F;" 
                               Style="{StaticResource NavIconStyle}"/>
                    </Button>
                </StackPanel>

                <StackPanel Grid.Column="1" 
                        Orientation="Horizontal" 
                        Margin="0,10,10,10" 
                        HorizontalAlignment="Right">

                    <Button x:Name="HelpButton"
                        Style="{DynamicResource NavIconButtonStyle}" 
                        Cursor="Hand"
                        Click="HelpButton_Click"
                        ToolTip="프로그램 안내">
                        <TextBlock Text="&#xE897;" Style="{StaticResource NavIconStyle}"/>
                    </Button>

                    <Button Style="{DynamicResource NavIconButtonStyle}" 
                        Cursor="Hand"
                        Click="BtnSetting_Click"
                        ToolTip="설정">
                        <TextBlock Text="&#xE713;" 
                             Style="{StaticResource NavIconStyle}"/>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Security Status Section -->
        <Border x:Name="securityStatusSection" Grid.Row="1" Background="{DynamicResource ButtonBackgroundColor}" CornerRadius="12" Padding="20" Margin="20,0,20,10" BorderBrush="#C2C2C2" BorderThickness="1">
            <StackPanel>
                <Grid Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" Text="보안 상태" Foreground="{DynamicResource ForegroundColor}" FontSize="24" FontWeight="SemiBold" VerticalAlignment="Center"/>

                    <Button Grid.Column="1" 
                        x:Name="RefreshSecurityStatusButton"
                        Click="RefreshSecurityStatus_Click"
                        Style="{DynamicResource NavIconButtonStyle}" 
                        Cursor="Hand"
                        ToolTip="보안 상태 새로 고침"
                        Width="32" Height="32">
                        <TextBlock Text="&#xE72C;" 
                               FontFamily="Segoe MDL2 Assets"
                               FontSize="16"
                               Foreground="{DynamicResource ForegroundColor}"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>
                    </Button>
                </Grid>

                <!-- 보안 상태 메인 그리드 -->
                <Grid>
                    <!-- 3개 항목을 가로로 배치 -->
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- 1. 핵심 Windows 보안 서비스 상태 -->
                    <Border Grid.Column="0" Background="{DynamicResource BackgroundColor}" CornerRadius="8" Padding="15" Margin="0,0,10,0">
                        <StackPanel>
                            <TextBlock Text="🛡️ 핵심 보안 서비스" Foreground="{DynamicResource ForegroundColor}" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,15"/>

                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,3">
                                    <TextBlock Text="Defender:" Foreground="{DynamicResource ForegroundColor}" FontSize="13" Width="80"/>
                                    <TextBlock x:Name="DefenderStatusText" Text="정상" Foreground="Green" FontSize="13" FontWeight="SemiBold"/>
                                </StackPanel>

                                <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,3">
                                    <TextBlock Text="Firewall:" Foreground="{DynamicResource ForegroundColor}" FontSize="13" Width="80"/>
                                    <TextBlock x:Name="FirewallStatusText" Text="정상" Foreground="Green" FontSize="13" FontWeight="SemiBold"/>
                                </StackPanel>

                                <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,3">
                                    <TextBlock Text="Security:" Foreground="{DynamicResource ForegroundColor}" FontSize="13" Width="80"/>
                                    <TextBlock x:Name="SecurityCenterStatusText" Text="정상" Foreground="Green" FontSize="13" FontWeight="SemiBold"/>
                                </StackPanel>

                                <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="0,3">
                                    <TextBlock Text="BitLocker:" Foreground="{DynamicResource ForegroundColor}" FontSize="13" Width="80"/>
                                    <TextBlock x:Name="BitLockerStatusText" Text="비활성" Foreground="Orange" FontSize="13" FontWeight="SemiBold"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- 2. 실시간 보안 모니터링 상태 -->
                    <Border Grid.Column="1" Background="{DynamicResource BackgroundColor}" CornerRadius="8" Padding="15" Margin="5,0,5,0">
                        <StackPanel>
                            <TextBlock Text="📊 실시간 모니터링" Foreground="{DynamicResource ForegroundColor}" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,15"/>

                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,3">
                                    <TextBlock Text="네트워크:" Foreground="{DynamicResource ForegroundColor}" FontSize="13" Width="80"/>
                                    <TextBlock x:Name="NetworkMonitoringStatusText" Text="활성" Foreground="Green" FontSize="13" FontWeight="SemiBold"/>
                                </StackPanel>

                                <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,3">
                                    <TextBlock Text="경고 24h:" Foreground="{DynamicResource ForegroundColor}" FontSize="13" Width="80"/>
                                    <TextBlock x:Name="Alerts24HText" Text="0건" Foreground="Green" FontSize="13" FontWeight="SemiBold"/>
                                </StackPanel>

                                <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,3">
                                    <TextBlock Text="고위험:" Foreground="{DynamicResource ForegroundColor}" FontSize="13" Width="80"/>
                                    <TextBlock x:Name="HighRiskAlertsText" Text="0건" Foreground="Green" FontSize="13" FontWeight="SemiBold"/>
                                </StackPanel>

                                <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="0,3">
                                    <TextBlock Text="최근검사:" Foreground="{DynamicResource ForegroundColor}" FontSize="13" Width="80"/>
                                    <TextBlock x:Name="LastScanText" Text="미실행" Foreground="Orange" FontSize="13" FontWeight="SemiBold"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- 3. 시스템 위험 지표 -->
                    <Border Grid.Column="2" Background="{DynamicResource BackgroundColor}" CornerRadius="8" Padding="15" Margin="10,0,0,0">
                        <StackPanel>
                            <TextBlock Text="⚠️ 시스템 위험 지표" Foreground="{DynamicResource ForegroundColor}" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,15"/>

                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,3">
                                    <TextBlock Text="네트워크:" Foreground="{DynamicResource ForegroundColor}" FontSize="13" Width="80"/>
                                    <TextBlock x:Name="SuspiciousNetworkText" Text="정상" Foreground="Green" FontSize="13" FontWeight="SemiBold"/>
                                </StackPanel>

                                <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,3">
                                    <TextBlock Text="악성IP:" Foreground="{DynamicResource ForegroundColor}" FontSize="13" Width="80"/>
                                    <TextBlock x:Name="MaliciousIPText" Text="없음" Foreground="Green" FontSize="13" FontWeight="SemiBold"/>
                                </StackPanel>

                                <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,3">
                                    <TextBlock Text="프로그램:" Foreground="{DynamicResource ForegroundColor}" FontSize="13" Width="80"/>
                                    <TextBlock x:Name="InstalledProgramsCountText" Text="확인중" Foreground="Gray" FontSize="13" FontWeight="SemiBold"/>
                                </StackPanel>

                                <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="0,3">
                                    <TextBlock Text="악성검사:" Foreground="{DynamicResource ForegroundColor}" FontSize="13" Width="80"/>
                                    <TextBlock x:Name="LastMalwareScanText" Text="미실행" Foreground="Orange" FontSize="13" FontWeight="SemiBold"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Border>
                </Grid>
            </StackPanel>
        </Border>

        <!-- Main Buttons Grid -->
        <Border x:Name="mainButtonsGrid" CornerRadius="12" Grid.Row="2" Margin="20,10,20,20">
            <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>                <!-- 악성 프로그램 탐지 버튼 -->
                <Button x:Name="SecurityDashboardButton"
                    Grid.Row="0" Grid.Column="0" 
                    Margin="0,0,10,10"
                    Style="{DynamicResource MainButtonStyle}" 
                    Cursor="Hand"
                    Click="SecurityDashboard_Click">
                    <StackPanel VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Margin="0" Background="Transparent">
                        <TextBlock Text="&#xE8C7;" 
                               Style="{StaticResource MaterialIconStyle}"/>
                        <TextBlock Text="악성 프로그램 탐지" 
                               TextAlignment="Center"
                               FontSize="25" 
                               FontWeight="SemiBold"/>
                    </StackPanel>
                </Button>

                <!-- 네트워크 보안 버튼 (1x2) -->
                <Button x:Name="NetworkSecurityButton"
                    Grid.Row="0" Grid.Column="1" 
                    Margin="5,0,5,10"
                    Style="{DynamicResource MainButtonStyle}" 
                    Cursor="Hand"
                    Click="NetWorksNew_Click">
                    <StackPanel VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Margin="0" Background="Transparent">
                        <TextBlock Text="&#xE704;" 
                               Style="{StaticResource MaterialIconStyle}"/>
